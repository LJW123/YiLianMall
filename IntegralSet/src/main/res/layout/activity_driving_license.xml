<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <include
            android:id="@+id/include"
            layout="@layout/return_layout"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加行驶证"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textSize_17dp" />

    </RelativeLayout>

    <View style="@style/line_horizontal"></View>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="18dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ower_drving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:text="请拍摄实体行驶证，并录入信息"
                android:textColor="#969696"
                android:textSize="@dimen/textSize_16dp" />

            <RelativeLayout
                android:id="@+id/rl_shot_homepage"
                android:layout_width="340dp"
                android:layout_height="214dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_home_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_xingzheng" />

                <LinearLayout
                    android:id="@+id/ll_homepage_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_xiangji" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="拍摄行驶证主页" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_camera_success1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_bottom_radius"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp"
                    android:text="拍摄成功"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_16dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shot_vicepage"
                android:layout_width="340dp"
                android:layout_height="214dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin30">

                <ImageView
                    android:id="@+id/iv_vice_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_xingfu" />

                <LinearLayout
                    android:id="@+id/ll_vicepage_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_xiangji" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="拍摄行驶证副页" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_camera_success2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_bottom_radius"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp"
                    android:text="拍摄成功"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_16dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:layout_marginTop="57dp"
                android:text="益联益家会保护您的信息安全" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
