<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <include
            android:id="@+id/include"
            layout="@layout/return_layout"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="行驶证"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_18sp" />
    </RelativeLayout>

    <View style="@style/line_horizontal"></View>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_jingshi"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击文字进行修改"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffff8800" />
            </LinearLayout>

            <View style="@style/line_horizontal"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="车牌号"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edut_driving_car_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="所有人"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edut_driving_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="车牌型号"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edut_driving_car_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="车辆识别代号"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edut_driving_car_vin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="发动机号码"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edut_driving_engine_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="注册日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/register_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="发证日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/certificate_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="性别"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/sex_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="国籍"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/nationality_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="选填"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="住址"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="选填"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="出生日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/birth_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="初次领证日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/get_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="证件照片"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <LinearLayout
                    android:paddingRight="17.5dp"
                    android:paddingLeft="17.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/frame_dash_gap"
                        android:padding="@dimen/margin_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="215dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/edut_driving_positive_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@mipmap/icon_fan_zhengjian"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shape_bottom_grey3"
                            android:gravity="center"
                            android:text="主页"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/frame_dash_gap"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:layout_width="match_parent"
                        android:padding="@dimen/margin_5dp"
                        android:layout_height="215dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/edut_driving_back_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@mipmap/icon_fan_zhengjian"  />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shape_bottom_grey3"
                            android:gravity="center"
                            android:text="副页"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/edut_driving_license_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:text="确认修改"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:background="@drawable/red_button_back"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
