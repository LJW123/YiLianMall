<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="兑换健康果数量"
            android:textColor="@color/comm_letters"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dissmiss_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/x" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/comm_line"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_5dp"/>

    <com.yilian.mylibrary.widget.MyRadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtn1"
                style="@style/exchange_radioButton"
                android:layout_margin="10dp"
                android:text="1"/>

            <RadioButton
                android:id="@+id/radioBtn2"
                style="@style/exchange_radioButton"
                android:layout_margin="10dp"
                android:text="2"/>

            <RadioButton
                android:id="@+id/radioBtn5"
                style="@style/exchange_radioButton"
                android:layout_margin="10dp"
                android:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtn10"
                style="@style/exchange_radioButton"
                android:layout_margin="10dp"
                android:text="10"/>

            <RadioButton
                android:id="@+id/radioBtn20"
                style="@style/exchange_radioButton"
                android:layout_margin="10dp"
                android:text="20"/>

            <RadioButton
                android:id="@+id/radioBtn50"
                style="@style/exchange_radioButton"
                android:layout_margin="10dp"
                android:text="50"/>

        </LinearLayout>

    </com.yilian.mylibrary.widget.MyRadioGroup>

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:background="@drawable/health_dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读并同意"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_web_help_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《互助条款》"
                    android:textColor="#009ED8"
                    android:paddingTop="@dimen/library_module_padding10"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_web_need_know"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《投保须知》"
                    android:textColor="#009ED8"
                    android:paddingTop="@dimen/library_module_padding10"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_web_tcp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《健康果服务协议》"
                    android:paddingTop="@dimen/library_module_padding10"
                    android:textColor="#009ED8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_exchange"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/health_btn_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即兑换"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#65ffffff"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="未 来 的 健 康 保 障 从 今 天 开 始"
                android:textColor="@color/library_module_color_999"
                android:textSize="@dimen/library_module_size11" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
