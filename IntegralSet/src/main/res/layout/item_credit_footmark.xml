<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/first_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_15dp">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#DDDDDD" />

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_round_grey" />

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/shape_loop_red" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/common_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#DDDDDD" />

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/shape_loop_red" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="29dp"
        android:text="2017-12-22"
        android:textColor="@color/notice_text_color"
        android:textSize="10sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        app:cardBackgroundColor="#F7E8E8"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/img_iv"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="名称"
                    android:textColor="@color/main_black_text"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/intro_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="介绍"
                    android:textColor="@color/notice_text_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
