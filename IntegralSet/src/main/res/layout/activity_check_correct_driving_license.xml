<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <include
            android:id="@+id/include"
            layout="@layout/return_layout"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="行驶证"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_18sp" />

        <TextView
            android:id="@+id/check_driving_license_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="编辑"
            android:textColor="@color/comm_letters"
            android:textSize="15sp" />
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_jingshi"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信息安全保障中，未经你授权不对外提供"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffff8800" />
            </LinearLayout>

            <View style="@style/line_horizontal"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="车牌号码"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_driving_car_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="所有人"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_driving_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="车牌型号"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_driving_brand_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="车辆识别代号"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_driving_vin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="发动机号码"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_driving_engine_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="注册日期"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_driving_register_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="发证日期"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_driving_issue_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#333333"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="证件照片"
                    android:textColor="#333333"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
              android:background="@color/white"
                android:paddingBottom="@dimen/margin_30dp"
                android:paddingLeft="17.5dp"
                android:paddingRight="17.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@drawable/frame_dash_gap"
                    android:padding="@dimen/margin_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="215dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/check_driving_positive_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:src="@mipmap/icon_fan_zhengjian" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/shape_bottom_grey3"
                        android:text="主页"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/frame_dash_gap"
                    android:padding="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_25dp"
                    android:layout_width="match_parent"
                    android:layout_height="215dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/check_driving_back_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:src="@mipmap/icon_fan_zhengjian" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/shape_bottom_grey3"
                        android:text="副页"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>
