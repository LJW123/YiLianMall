<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/donation_integral_ll"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/gray_ellipse_side_line"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/donation_integral_integral_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0奖券"
            android:textSize="15sp"
            android:textColor="#282828"
            android:paddingRight="10dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/donation_integral_credit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/notice_text_color"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>