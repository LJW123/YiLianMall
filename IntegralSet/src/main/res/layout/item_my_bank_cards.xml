<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_15dp"
    android:layout_marginRight="@dimen/margin_15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingBottom="@dimen/padding_20dp"
        android:id="@+id/back_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_bank_change_back"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="22.5dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:id="@+id/card_view">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bank_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                tools:src="@mipmap/library_module_default_jp" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_toRightOf="@id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bank_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_15dp"
                    tools:text="中国银行" />

                <TextView
                    android:id="@+id/tv_card_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/library_module_size15"
                    tools:text="对公卡" />
            </LinearLayout>

            <TextView
                android:id="@+id/cardtype_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="储蓄卡"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12dp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/cardnumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:text="* * * * * * * * * * * * 1456"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>