<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <include
            android:id="@+id/include"
            layout="@layout/return_layout"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="驾驶证"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_18sp" />
    </RelativeLayout>

    <View style="@style/line_horizontal"></View>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_jingshi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="点击文字进行修改"
                    android:textColor="#ffff8800" />
            </LinearLayout>

            <View style="@style/line_horizontal"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="证号"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/car_certificateno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColorHint="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="姓名"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/car_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColorHint="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="准驾车型"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/car_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColorHint="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="生效日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/lose_efficacy_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColor="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="失效日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/take_effect_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColor="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="档案编号"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/car_fileNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColorHint="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="性别"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/sex_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColor="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="国籍"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edit_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:gravity="center_vertical"
                    android:hint="选填"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="住址"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:gravity="center_vertical"
                    android:hint="选填"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="出生日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/birth_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:textColor="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="初次领证日期"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/get_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_13dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginLeft="10dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="证件照片"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <LinearLayout
                    android:paddingLeft="17.5dp"
                    android:paddingRight="17.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/frame_dash_gap"
                        android:padding="@dimen/margin_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="215dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/check_positive_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@mipmap/bg_jiazheng" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shape_bottom_grey3"
                            android:gravity="center"
                            android:text="主页"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/frame_dash_gap"
                        android:padding="@dimen/margin_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="215dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/check_back_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:src="@mipmap/dbg_jiafu" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shape_bottom_grey3"
                            android:gravity="center"
                            android:text="副页"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/edit_card_license_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/red_button_back"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
