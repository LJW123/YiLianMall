<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱心捐赠"
        android:textSize="18sp"
        android:textColor="@color/main_black_text"
        android:layout_margin="10dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/donation_integral_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/donation_integral_confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="捐赠"
        android:textColor="@color/white"
        android:background="@drawable/denate_gradation_back"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />
</LinearLayout>