<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/item_layout"
    android:background="@color/white">

    <View
        android:id="@+id/view_left"
        android:layout_width="@dimen/padding_15dp"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/view_left_7"
        android:layout_width="7.5dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/library_module_merchant_margin15"
        android:layout_marginBottom="@dimen/library_module_padding15"
        android:layout_weight="1"
        android:background="@drawable/user_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/library_module_default_jp"
                android:padding="@dimen/library_module_padding5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/library_module_margin10">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/comm_letters"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:layout_marginTop="@dimen/library_module_merchant_margin5"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_right_7"
        android:layout_width="7.5dp"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/view_right"
        android:layout_width="@dimen/padding_15dp"
        android:layout_height="match_parent"/>

</LinearLayout>
