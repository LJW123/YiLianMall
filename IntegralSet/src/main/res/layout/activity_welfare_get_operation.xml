<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/welfare_title_layout"/>
        <ImageView
            android:layout_marginTop="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@mipmap/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cancel"/>
    </LinearLayout>

    <LinearLayout
        android:paddingRight="@dimen/margin_30dp"
        android:paddingLeft="@dimen/margin_30dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何获得爱心经验？"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textSize_18dp"/>
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下列爱心操作可以帮助你获得爱心经验："
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/textSize_13dp" />
        <FrameLayout
            android:paddingTop="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginTop="@dimen/textSize_35dp"
            android:background="@drawable/bg_gray_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ry_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <TextView
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:id="@+id/tv_know"
            android:textSize="@dimen/textSize_18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="知道了"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shap_orange_gradient"/>
    </LinearLayout>


</FrameLayout>
