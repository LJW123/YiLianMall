<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding15">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/comm_letters"
                android:textSize="@dimen/textSize_14sp"
                android:paddingTop="@dimen/padding15"/>

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/health_state"
                android:paddingBottom="@dimen/padding_3dp"
                android:paddingLeft="@dimen/padding_8dp"
                android:paddingRight="@dimen/padding_8dp"
                android:paddingTop="@dimen/padding_3dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_11sp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/library_module_merchant_margin15"/>

            <ImageView
                android:id="@+id/iv_failed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/health_family_failed"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/plan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_16dp"
            android:text=""
            android:textColor="@color/comm_letters"
            android:textSize="@dimen/textSize_16sp"
            android:paddingLeft="@dimen/padding15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding15"
            android:paddingRight="@dimen/padding15"
            android:paddingBottom="@dimen/padding15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/people_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_16dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="@dimen/textSize_11sp" />

                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_5dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="@dimen/textSize_11sp" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_5dp"
                    android:text=""
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/textSize_11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:background="@drawable/money_up"
                android:paddingBottom="@dimen/padding_3dp"
                android:paddingLeft="@dimen/padding_8dp"
                android:paddingRight="@dimen/padding_8dp"
                android:paddingTop="@dimen/padding_3dp"
                android:text=""
                android:textColor="#0691FC"
                android:textSize="@dimen/textSize_11sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
