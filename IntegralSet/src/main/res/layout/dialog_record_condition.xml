<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/record_numberpicker_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/record_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:onClick="onClick"
                android:textColor="@color/notice_text_color"
                android:text="取消" />

            <TextView
                android:id="@+id/record_sure_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="right"
                android:onClick="onClick"
                android:textColor="@color/notice_text_color"
                android:text="确定" />

        </LinearLayout>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/record_condition_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:npv_DividerColor="@color/notice_text_color"
            app:npv_TextColorSelected="#282828"
            app:npv_TextColorNormal="@color/notice_text_color"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShowCount="5"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="20sp" />
    </LinearLayout>

</LinearLayout>