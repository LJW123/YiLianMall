<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <include
            android:id="@+id/include"
            layout="@layout/return_layout"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加驾驶证"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_18sp" />
    </RelativeLayout>

    <View style="@style/line_horizontal"></View>

    <TextView
        android:id="@+id/car_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="请拍摄实体驾驶证，并录入信息" />
    <!-- 虚线 -->
    <!--android:background="@drawable/lable_text_side_dashed_select"-->
    <RelativeLayout
        android:layout_marginRight="@dimen/library_module_margin18"
        android:layout_marginLeft="@dimen/library_module_margin18"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/shoot_positive_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_jiazheng" />

        <TextView
            android:id="@+id/shoot_success_positive"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_bottom_grey6"
            android:gravity="center"
            android:text="拍摄成功"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16sp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/before_shoot_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/icon_xiangji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="拍摄驾驶证主页" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="@dimen/library_module_margin18"
        android:layout_marginLeft="@dimen/library_module_margin18"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20dp">

        <ImageView
            android:id="@+id/shoot_back_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/dbg_jiafu" />

        <TextView
            android:id="@+id/shoot_success_back"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_bottom_grey6"
            android:gravity="center"
            android:text="拍摄成功"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16sp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/before_shoot_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/icon_xiangji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="拍摄驾驶证副页" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="益联益家会保护您的信息安全" />

</LinearLayout>
