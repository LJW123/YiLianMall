<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/search_equip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份证验证"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_18sp" />

        <TextView
            android:id="@+id/idinformation_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textSize_15sp"
            android:textColor="@color/steelblue" />
    </RelativeLayout>

    <View style="@style/line_horizontal"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请仔细核对信息，如有误请修改"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="真实姓名"
            android:textColor="#333333"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="张振振"
            android:textColorHint="#333333"
            android:gravity="center_vertical"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="10dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="身份证号"
            android:textColor="#333333"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="410410410410410410410"
            android:textColorHint="#333333"
            android:gravity="center_vertical"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="10dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="有效期至"
            android:textColor="#333333"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="2026-02-01"
            android:textColorHint="#333333"
            android:gravity="center_vertical"
            android:textSize="13dp" />
    </LinearLayout>

    <View style="@style/line_horizontal"></View>

    <TextView
        android:id="@+id/idinformation_confirm_and_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:text="确认并提交"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:background="@color/unify_red"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新拍摄"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textColor="@color/steelblue" />

</LinearLayout>
