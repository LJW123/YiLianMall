<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_color"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingRight="@dimen/margin_15dp">

    <ImageView
        android:id="@+id/iv_dissmss"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:scaleType="fitXY"
        android:src="@mipmap/x_round" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:background="#ECECEC"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_big_star"
                android:layout_width="138dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_small_star0"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/star1" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_small_star1"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/star2" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_small_star2"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/star3" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_first_donation"
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/margin_20dp"
                        android:layout_height="@dimen/margin_20dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/gray_heart" />

                    <View
                        android:layout_toRightOf="@id/iv_first_donation"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/comm_line" />

                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                     android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/comm_line" />
                    <ImageView
                        android:id="@+id/iv_second_donation"
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/margin_20dp"
                        android:layout_height="@dimen/margin_20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/gray_heart" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/comm_line" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/iv_three_donation"
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/margin_20dp"
                        android:layout_height="@dimen/margin_20dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/gray_heart" />
                    <View
                        android:layout_toLeftOf="@id/iv_three_donation"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/comm_line" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_donation_num0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="完成5次捐款"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textSize_11dp" />

                <TextView

                    android:id="@+id/tv_donation_num1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="完成5次捐款"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textSize_11dp" />

                <TextView

                    android:id="@+id/tv_donation_num2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="完成5次捐款"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textSize_11dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:layout_marginTop="@dimen/margin_25dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_13dp"
                tools:text="已完成捐款0次" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
