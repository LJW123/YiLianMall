<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_img_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/library_module_load_error_img" />

    <TextView
        android:id="@+id/error_tips_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="网络请求失败了"
        android:textColor="#555555"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="别紧张,试试看刷新页面！"
        android:textColor="#999999"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/vv_error_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/library_module_bg_solid_gray_90"
        android:clickable="true"
        android:onClick="refresh"
        android:text="刷新" />
</LinearLayout>