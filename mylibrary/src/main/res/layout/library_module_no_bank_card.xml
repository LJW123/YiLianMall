<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:background="@mipmap/library_module_icon_yinhangka"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还未添加任何银行卡"
            android:layout_marginTop="30dp"
            android:textColor="@color/library_module_color_666"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击这里快速绑卡，享受购物乐趣"
            android:textColor="@color/library_module_color_999"
            android:layout_marginTop="15dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/add_bank_card_tv"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/library_module_gray_side_line"
            android:gravity="center"
            android:text="添加银行卡"
            android:layout_marginTop="25dp"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>