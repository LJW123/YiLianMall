<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_force_notice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="56dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/library_module_icon_force_notice" />

    <TextView
        android:id="@+id/tv_force_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/library_module_c6a874"
        android:layout_marginBottom="20dp"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/library_module_c6a874" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/library_module_c6a874" />

    <TextView
        android:layout_marginTop="28dp"
        android:id="@+id/tv_force_notice_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:lineSpacingExtra="12dp"
        android:scrollbars="vertical"
        android:text=""
        android:textColor="@color/library_module_color_333"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/library_module_c6a874" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_force_notice_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/library_module_color_333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_force_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/library_module_color_333"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>
