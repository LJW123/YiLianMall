<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="library_module_gridPasswordView">

        <attr name="library_module_textColor" format="color|reference" />
        <attr name="library_module_textSize" format="dimension" />

        <attr name="library_module_lineColor" format="color" />
        <attr name="library_module_gridColor" format="color" />
        <attr name="library_module_lineWidth" format="dimension" />

        <attr name="library_module_passwordLength" format="integer" />
        <attr name="library_module_passwordTransformation" format="string" />

        <attr name="library_module_passwordType" format="enum">
            <enum name="numberPassword" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="textVisiblePassword" value="2" />
            <enum name="textWebPassword" value="3" />
        </attr>
    </declare-styleable>
</resources>