<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!--&lt;!&ndash; 自定义loading dialog &ndash;&gt;-->
    <style name="library_module_loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/library_module_loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="library_module_DialogControl" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="library_module_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!--遇到Item内部有线条时的style-->
    <style name="library_module_innerLineStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:background">@color/library_module_color_lines</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="library_module_GiftDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--通屏按钮  比如联系客服-->
    <style name="library_module_btnStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/library_module_jp_bg_btn_red_all_radius1</item>
    </style>


    <style name="library_module_btnCircleStyle">
        <item name="android:background">@drawable/library_module_bg_style_red_45</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/library_module_padding15</item>
        <item name="android:layout_marginRight">@dimen/library_module_padding15</item>
        <item name="android:textSize">@dimen/library_module_size19</item>
        <item name="android:textColor">@color/aliwx_color_white</item>
    </style>

    <style name="library_module_jpMoneyFen">
        <item name="android:layout_marginRight">@dimen/library_module_merchant_margin15</item>
        <item name="android:layout_marginLeft">@dimen/library_module_merchant_margin5</item>
        <item name="android:textColor">@color/library_module_color_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/library_module_bg_fen_photo</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">@dimen/library_module_size12</item>
        <!--取消TextView的默认padding-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="library_module_AnimationFade">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/library_module_in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/library_module_out_righttoleft</item>
    </style>

    <style name="library_module_AnimationSEX">
        <!-- PopupWindow上下弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/library_module_in_sex</item>
        <item name="android:windowExitAnimation">@anim/library_module_out_sex</item>
    </style>

    <declare-styleable name="library_module_gv_acusttrs">
        <attr name="library_module_gv_acusttrs_divierHeight" format="float"/>

        <attr name="library_module_gv_acusttrs_divierColor" format="color"/>
    </declare-styleable>

    <style name="library_module_bottom_dialog" parent="android:style/Theme.Dialog">
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/library_module_Animation_Bottom_Dialog</item>
    </style>
    <style name="library_module_Animation_Bottom_Dialog">
        <item name="android:windowEnterAnimation">@anim/library_module_bottom_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/library_module_bottom_dialog_exit</item>
    </style>
    <style name="library_module_view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#eaeaea</item>
    </style>
    <style name="library_module_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">请选择</item>
        <item name="android:textColor">@drawable/library_module_selector_text_color_tab</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="library_module_BottomToTopAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/library_module_anim_bottom_to_top</item>
        <item name="@android:windowExitAnimation">@anim/library_module_anim_top_to_bottom</item>
    </style>



</resources>