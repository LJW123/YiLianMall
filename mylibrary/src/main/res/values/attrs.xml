<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Banner无限轮播属性-->
    <declare-styleable name="library_module_BannerView">
        <attr name="library_module_bannerPageMargin" format="dimension"/>
        <attr name="library_module_bannerPagePercent" format="float"/>
        <attr name="library_module_bannerPageScale" format="float"/>
        <attr name="library_module_bannerPageAlpha" format="float"/>
        <attr name="library_module_bannerScrollDuration" format="integer"/>
        <attr name="library_module_bannerAnimDuration" format="integer"/>
        <attr name="library_module_bannerAnimScroll" format="boolean"/>
        <attr name="library_module_bannerAutoScroll" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="library_module_CircleImageView1">
        <attr name="library_module_border_width" format="dimension" />
        <attr name="library_module_border_color" format="color" />
        <attr name="library_module_border_coner" format="dimension" />
    </declare-styleable>
    <declare-styleable name="library_module_JHCircleView">
        <attr name="library_module_jh_border_width" format="dimension" />
        <attr name="library_module_jh_border_color" format="color" />
        <attr name="library_module_jh_border_overlay" format="boolean" />
    </declare-styleable>
    <declare-styleable name="library_module_MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="library_module_mv_backgroundColor" format="color" />
        <!-- 圆角弧度,单位dp-->
        <attr name="library_module_mv_cornerRadius" format="dimension" />
        <!-- 圆角弧度,单位dp-->
        <attr name="library_module_mv_strokeWidth" format="dimension" />
        <!-- 圆角边框颜色-->
        <attr name="library_module_mv_strokeColor" format="color" />
        <!-- 圆角弧度是高度一半-->
        <attr name="library_module_mv_isRadiusHalfHeight" format="boolean" />
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="library_module_mv_isWidthHeightEqual" format="boolean" />
    </declare-styleable>


    <!-- indicator -->
    <!-- 设置显示器颜色 -->
    <attr name="library_module_tl_indicator_color" format="color" />
    <!-- 设置显示器高度 -->
    <attr name="library_module_tl_indicator_height" format="dimension" />
    <!-- 设置显示器固定宽度 -->
    <attr name="library_module_tl_indicator_width" format="dimension" />
    <!-- 设置显示器margin,当indicator_width大于0,无效 -->
    <attr name="library_module_tl_indicator_margin_left" format="dimension" />
    <attr name="library_module_tl_indicator_margin_top" format="dimension" />
    <attr name="library_module_tl_indicator_margin_right" format="dimension" />
    <attr name="library_module_tl_indicator_margin_bottom" format="dimension" />
    <!-- 设置显示器圆角弧度-->
    <attr name="library_module_tl_indicator_corner_radius" format="dimension" />
    <!-- 设置显示器上方还是下方,只对圆角矩形有用-->
    <attr name="library_module_tl_indicator_gravity" format="enum">
        <enum name="library_module_TOP" value="48" />
        <enum name="library_module_BOTTOM" value="80" />
    </attr>
    <!-- 设置显示器为常规|三角形|背景色块|-->
    <attr name="library_module_tl_indicator_style" format="enum">
        <enum name="library_module_NORMAL" value="0" />
        <enum name="library_module_TRIANGLE" value="1" />
        <enum name="library_module_BLOCK" value="2" />
    </attr>
    <!-- 设置显示器长度与title一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
    <attr name="library_module_tl_indicator_width_equal_title" format="boolean" />
    <!-- 设置显示器支持动画-->
    <attr name="library_module_tl_indicator_anim_enable" format="boolean" />
    <!-- 设置显示器动画时间-->
    <attr name="library_module_tl_indicator_anim_duration" format="integer" />
    <!-- 设置显示器支持动画回弹效果-->
    <attr name="library_module_tl_indicator_bounce_enable" format="boolean" />

    <!-- underline -->
    <!-- 设置下划线颜色 -->
    <attr name="library_module_tl_underline_color" format="color" />
    <!-- 设置下划线高度 -->
    <attr name="library_module_tl_underline_height" format="dimension" />
    <!-- 设置下划线上方还是下方-->
    <attr name="library_module_tl_underline_gravity" format="enum">
        <enum name="TOP" value="48" />
        <enum name="BOTTOM" value="80" />
    </attr>

    <!-- divider -->
    <!-- 设置分割线颜色 -->
    <attr name="library_module_tl_divider_color" format="color" />
    <!-- 设置分割线宽度 -->
    <attr name="library_module_tl_divider_width" format="dimension" />
    <!-- 设置分割线的paddingTop和paddingBottom -->
    <attr name="library_module_tl_divider_padding" format="dimension" />

    <!-- tab -->
    <!-- 设置tab的paddingLeft和paddingRight -->
    <attr name="library_module_tl_tab_padding" format="dimension" />
    <!-- 设置tab大小等分 -->
    <attr name="library_module_tl_tab_space_equal" format="boolean" />
    <!-- 设置tab固定大小 -->
    <attr name="library_module_tl_tab_width" format="dimension" />

    <!-- title -->
    <!-- 设置字体大小 -->
    <attr name="library_module_tl_textsize" format="dimension" />
    <!-- 设置字体选中颜色 -->
    <attr name="library_module_tl_textSelectColor" format="color" />
    <!--设置字体选中的大小-->
    <attr name="library_module_tl_textSelectSize" format="dimension" />
    <!-- 设置字体未选中颜色 -->
    <attr name="library_module_tl_textUnselectColor" format="color" />
    <!-- 设置字体加粗 -->
    <attr name="library_module_tl_textBold" format="enum">
        <enum name="NONE" value="0" />
        <enum name="SELECT" value="1" />
        <enum name="BOTH" value="2" />
    </attr>
    <!-- 设置字体全大写 -->
    <attr name="library_module_tl_textAllCaps" format="boolean" />

