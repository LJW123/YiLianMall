<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/library_module_bg_solid_white_15"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="25dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@null"
                android:text="是否已存在手机账号"
                android:drawablePadding="5dp"
                android:textColor="@color/library_module_color_333"
                android:textSize="@dimen/library_module_size13" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/library_module_color_lines" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bind_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="48.6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text="没有,直接登录"
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/library_module_size15"/>

        <View
            android:id="@+id/bouttom_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/library_module_color_lines" />

        <Button
            android:id="@+id/btn_bind"
            android:layout_width="wrap_content"
            android:layout_height="48.6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text="有,去绑定"
            android:textColor="@color/library_module_color_red"
            android:textSize="@dimen/library_module_size15"/>
    </LinearLayout>

</LinearLayout>