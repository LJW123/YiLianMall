<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background"><!-- 没有进度的背景色 -->
        <shape>
            <corners android:radius="5dip" /><!-- 为两头圆角的弧度，值越大越圆 -->
            <gradient
                android:angle="0"
                android:centerColor="@color/line"
                android:centerY="0.75"
                android:endColor="@color/line"
                android:startColor="@color/line" />
        </shape>
    </item>
   <item android:id="@android:id/secondaryProgress"><!-- 下载进度的背景色 -->
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="@color/bac_color"
                    android:centerY="0.75"
                    android:endColor="@color/bac_color"
                    android:startColor="@color/bac_color" />
            </shape>
        </clip>
    </item>
