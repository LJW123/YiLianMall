<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="102dp">

            <ImageView
                android:id="@+id/merchant_iv_prize"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginTop="@dimen/margin15"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_module_default_jp" />

            <TextView
                android:id="@+id/tv_sustain_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginTop="@dimen/margin15"
                android:background="@drawable/tv_bg_sustain_reserve"
                android:padding="3dp"
                android:text="在线预订"
                android:textColor="@color/white"
                android:textSize="@dimen/size10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="12dp"
                android:background="#9a000000"
                android:padding="3dp"
                android:text="推荐商家"
                android:textColor="@color/white"
                android:textSize="@dimen/size10" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/merchant_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingTop="@dimen/padding15"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_h1"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_privilege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin15"
                        android:background="@mipmap/privilege"
                        android:gravity="bottom|center_horizontal"
                        android:paddingBottom="@dimen/margin5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size12"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="-5dp">

                    <TextView
                        android:id="@+id/tv_identity_out"
                        style="@style/orangeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:text="@string/take_out"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_identity_combo"
                        style="@style/greenBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:text="@string/combo"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_presence_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:layout_marginRight="17dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_graded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:text=""
                        android:textColor="@color/color_999"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RatingBar
                        android:id="@+id/merchant_ratingBar"
                        style="@style/comboRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin15"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/merchant_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_666"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/merchant_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17dp"
                        android:text=""
                        android:textColor="@color/color_999"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"
        android:layout_marginLeft="@dimen/margin10"/>

</LinearLayout>