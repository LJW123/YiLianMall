<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_15dp">

        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:text="商品名"
                android:textColor="#333333"
                android:textSize="@dimen/textSize_14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="商品价格"
                    android:textColor="@color/color_main_suning"
                    android:textSize="@dimen/textSize_14dp" />

                <TextView
                    android:id="@+id/tv_has_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:background="@drawable/sn_order_bt_bg_orange_solid"
                    android:drawablePadding="@dimen/padding_3dp"
                    android:drawableRight="@mipmap/icon_white_ledou"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_2dp"
                    android:paddingLeft="@dimen/padding_5dp"
                    android:paddingRight="@dimen/padding_5dp"
                    android:paddingTop="@dimen/margin_2dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_11dp"
                    tools:text="送900" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="×"
                    android:textColor="@color/main_black_text"
                    android:textSize="@dimen/textSize_15dp" />

                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:gravity="center_vertical|right"
                    android:text="1"
                    android:textColor="@color/main_black_text"
                    android:textSize="@dimen/textSize_13dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_10dp">

            <TextView
                android:id="@+id/tv_affirm"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:background="@drawable/sn_order_bt_bg_black"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/main_black_text"
                android:textSize="@dimen/textSize_14dp" />

            <TextView
                android:id="@+id/tv_logistics"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:background="@drawable/sn_order_bt_bg_black"
                android:gravity="center"
                android:text="查看物流"
                android:textColor="@color/main_black_text"
                android:textSize="@dimen/textSize_14dp" />

            <TextView
                android:id="@+id/tv_apply_after_sales"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:background="@drawable/sn_order_bt_bg_black"
                android:gravity="center"
                android:text="申请售后"
                android:textColor="@color/main_black_text"
                android:textSize="@dimen/textSize_14dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>