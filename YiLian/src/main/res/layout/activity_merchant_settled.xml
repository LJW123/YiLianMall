<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/v3_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="— 商家权益 —"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding15"
            android:layout_marginLeft="@dimen/padding15"
            android:layout_marginRight="@dimen/padding15"
            android:background="@mipmap/bg_merchant_interests"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding20"
            android:translationZ="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_interests_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin30"
                android:text="比VIP会员更高比例的奖券发奖励"
                android:textColor="@color/color_333"
                android:textSize="@dimen/size14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding15"
            android:layout_marginLeft="@dimen/padding15"
            android:layout_marginRight="@dimen/padding15"
            android:background="@mipmap/bg_merchant_interests"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding20"
            android:translationZ="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_interests_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin30"
                android:text="自身销售让利额奖券发奖励"
                android:textColor="@color/color_333"
                android:textSize="@dimen/size14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding15"
            android:layout_marginLeft="@dimen/padding15"
            android:layout_marginRight="@dimen/padding15"
            android:background="@mipmap/bg_merchant_interests"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding20"
            android:translationZ="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_interests_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin30"
                android:text="提高自身知名度，线上+线下多渠道拓 展业务"
                android:textColor="@color/color_333"
                android:textSize="@dimen/size14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding15"
            android:layout_marginLeft="@dimen/padding15"
            android:layout_marginRight="@dimen/padding15"
            android:background="@mipmap/bg_merchant_interests"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding20"
            android:translationZ="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_interests_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin30"
                android:text="锁定人脉、跨界领奖励"
                android:textColor="@color/color_333"
                android:textSize="@dimen/size14" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="—商家入驻流程—"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin15"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin10"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@mipmap/bg_merchant_enter_flow"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding20"
                    android:paddingRight="@dimen/padding20"
                    android:text="缴纳一年以上年费个 体商家360元/年实体 商家999元/年"
                    android:textColor="#EFBD78"
                    android:textSize="@dimen/size13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_store_type_01" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/bg_merchant_enter_flow"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding20"
                    android:paddingRight="@dimen/padding20"
                    android:text="缴纳一年以上年费个 体商家360元/年实体 商家999元/年"
                    android:textColor="#EFBD78"
                    android:textSize="@dimen/size13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_store_type_02" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin15"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin10"
                android:layout_weight="1"
                android:gravity="center">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/bg_merchant_enter_flow"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding20"
                    android:paddingRight="@dimen/padding20"
                    android:text="缴纳一年以上年费个 体商家360元/年实体 商家999元/年"
                    android:textColor="#EFBD78"
                    android:textSize="@dimen/size13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_store_type_03" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/bg_merchant_enter_flow"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding20"
                    android:paddingRight="@dimen/padding20"
                    android:text="缴纳一年以上年费个 体商家360元/年实体 商家999元/年"
                    android:textColor="#EFBD78"
                    android:textSize="@dimen/size13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_store_type_04" />


            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="—选择商铺类型—"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size14" />

        <LinearLayout
            android:id="@+id/ll_store_personage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding15"
            android:layout_marginLeft="@dimen/padding15"
            android:layout_marginRight="@dimen/padding15"
            android:background="@mipmap/bg_store_type"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding18">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_store_personage" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_personage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/jiantou2" />

                <TextView
                    android:id="@+id/tv_personage_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/size13" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_store_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin30"
            android:layout_marginLeft="@dimen/padding15"
            android:layout_marginRight="@dimen/padding15"
            android:background="@mipmap/bg_store_type"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding18">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_store_trademark" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_entity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/jiantou2"
                    android:id="@+id/imageView5" />

                <TextView
                    android:id="@+id/tv_entity_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/size13" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>