<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_no_stock_goods"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        tools:background="@color/color_999" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_no_stock_goods_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        tools:background="@color/color_red" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_toEndOf="@id/iv_no_stock_goods"
        android:layout_toRightOf="@id/iv_no_stock_goods"
        android:lines="2"
        android:textColor="@color/color_999"
        android:textSize="12dp"
        tools:text="荣耀10 全面屏AI摄影手机 6GB+64GB 幻夜黑全网通 移动联通电信4G 双卡双待\n×1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_toEndOf="@id/iv_no_stock_goods"
        android:layout_toRightOf="@id/iv_no_stock_goods"
        android:lines="1"
        android:textColor="@color/color_999"
        android:textSize="12dp"
        tools:text="*1" />

</RelativeLayout>