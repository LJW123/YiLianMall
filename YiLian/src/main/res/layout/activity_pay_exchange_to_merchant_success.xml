<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merchant_white"
    android:orientation="vertical">

    <include layout="@layout/merchant_v4_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@color/merchant_color_white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/merchant_icon_jp_pay_success"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/merchant_padding10"
                        android:src="@mipmap/merchant_icon_jp_pay_success" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:lineSpacingExtra="9dp"
                    android:text="兑换成功"
                    android:textColor="@color/merchant_color_333"
                    android:textSize="@dimen/merchant_size20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_white"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兑换方式"
                        android:textColor="@color/merchant_color_666"
                        android:textSize="@dimen/merchant_size15" />

                    <TextView
                        android:id="@+id/tv_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:text=""
                        android:textColor="@color/merchant_color_333"
                        android:textSize="@dimen/merchant_size15" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="19dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兑换时间 "
                        android:textColor="@color/merchant_color_666"
                        android:textSize="@dimen/merchant_size15" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/merchant_color_333"
                        android:textSize="@dimen/merchant_size15" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/merchant_margin10"
                    android:background="@color/merchant_color_bg" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/merchant_padding10"
                    android:paddingLeft="@dimen/merchant_padding20"
                    android:paddingTop="@dimen/merchant_padding10"
                    android:text="兑换数量"
                    android:textColor="@color/merchant_color_h1"
                    android:textSize="@dimen/merchant_size15" />

                <View style="@style/outerLineStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_consume_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="19dp"
                        android:paddingRight="19dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="兑换券"
                            android:textColor="@color/merchant_color_666"
                            android:textSize="@dimen/merchant_size15" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:textColor="@color/merchant_color_red"
                            android:textSize="@dimen/merchant_size18" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_profit"
                    style="@style/btnStyle"
                    android:layout_marginTop="25dp"
                    android:text="确定" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
