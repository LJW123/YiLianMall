<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:paddingBottom="10dp">
    <!--区块益豆商品条目 下方价钱展示布局-->
    <TextView
        android:id="@+id/tv_goods_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/library_module_color_333"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_goods_beans"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_stroke_coner_9"
        android:drawablePadding="2dp"
        android:drawableRight="@mipmap/icon_ledou"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_4dp"
        android:paddingRight="@dimen/margin_4dp"
        android:text=""
        android:textColor="@color/color_red"
        android:textSize="@dimen/textSize_12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:textColor="@color/color_red"
            android:textSize="@dimen/textSize_14dp" />

        <TextView
            android:id="@+id/tv_high_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="aaa"
            android:textColor="@color/merchant_color_999"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_goods_sell_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="bbb"
            android:textColor="@color/color_888"
            android:textSize="@dimen/textSize_13dp" />
    </LinearLayout>
</LinearLayout>