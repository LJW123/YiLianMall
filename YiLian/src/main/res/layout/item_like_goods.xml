<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="11dp">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_module_default_jp" />

    <ImageView
        android:id="@+id/iv_goods_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_goods_buy"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_goods"
        android:layout_marginTop="5dp"
        android:lines="2"
        android:text="商品名称"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_name"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="189.00"
            android:textColor="#ff6823"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_sales_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="销量:1865件"
            android:textColor="#cbcccb"
            android:textSize="10sp"/>
    </LinearLayout>

</RelativeLayout>