<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:onClick="onBack"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:src="@mipmap/bluejiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的会员结构"
            android:textColor="#7a7a7c"
            android:textSize="@dimen/title_text_size_first" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:onClick="info"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/blue_share" />
    </RelativeLayout>

    <com.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_title"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/huiyuan_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="23dp">
                    <FrameLayout
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_member"/>
                        <com.yilian.mall.widgets.JHCircleView
                            android:id="@+id/user_photo"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:layout_margin="2dp"
                            android:src="@mipmap/photo"
                            />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/referees"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/tuijianren"
                            android:drawablePadding="6dp"
                            android:paddingLeft="40dp"
                            android:text="推荐人：益联益家"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:singleLine="true"/>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="11dp"
                            android:background="#cce7ff"
                            android:layout_marginTop="3dp"/>
                        <TextView
                            android:id="@+id/tv_level1_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="6dp"
                            android:drawableLeft="@mipmap/er"
                            android:paddingLeft="17dp"
                            android:text="从友：0人"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_level2"
                    android:gravity="center"
                    android:text="VIP会员"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="从友共计为您创收（元）"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/member_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:paddingBottom="16dp"
                    android:text=""
                    android:textColor="#419fff"
                    android:textSize="26sp"
                    android:clickable="true"
                    android:onClick="jumpToMember"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bbe4e2e0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:text="升级VIP会员领奖励会更高还需充值"
                    android:textColor="#b1b1b1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textColor="#b5b5b5"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical">
                <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_corners_white"
                android:drawableRight="@mipmap/search"
                android:paddingRight="9dp"
                android:onClick="search"
                android:text="请输入您推荐伙伴的用户名/手机号"
                android:textColor="#b5b5b5"
                android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:text="我的从友"
                android:textColor="#666666"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bbe4e2e0" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:background="@color/white">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </com.pulltorefresh.library.PullToRefreshScrollView>
    <LinearLayout
        android:id="@+id/btn_level_up"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#f6f6f6"
        android:gravity="center">

        <Button
            android:layout_width="295dp"
            android:layout_height="38dp"
            android:background="@drawable/round_corner_blue"
            android:gravity="center"
            android:onClick="levelUp"
            android:text="点我升级"
            android:textColor="#41a4ff"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>