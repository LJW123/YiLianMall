<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/ll_spell_group_item"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/padding10">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />

        <TextView
            android:id="@+id/tv_has_total_number"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.6"
            android:background="#646464"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size10" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:alpha="0.7"
            android:background="#F6362D"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text=""
            android:gravity="center"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/size10" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding15"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15" />


        <LinearLayout
            android:id="@id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_red"
                android:textSize="@dimen/size18" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text=""
                android:textColor="@color/color_999"
                android:textSize="@dimen/size12" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/ll_price"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_has_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spell_group_open_group_bg_white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_red"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tv_open_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spell_group_open_group_bg_red"
                android:gravity="center"
                android:text="去开团"
                android:textColor="@color/white"
                android:textSize="@dimen/size15" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>