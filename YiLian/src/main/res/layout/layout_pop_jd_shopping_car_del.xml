<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:id="@+id/ll_update_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_corners6_white"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="38dp"
            android:layout_marginTop="45dp"
            android:textColor="#ff181717"
            android:textSize="@dimen/textSize_16dp"
            tools:text="确认要删除这2种商品吗？" />

        <View
            style="@style/line_horizontal"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_14dp"
                android:paddingLeft="57dp"
                android:paddingRight="57dp"
                android:paddingTop="@dimen/padding_14dp"
                android:text="取消"
                android:textColor="@color/color_666"
                android:textSize="@dimen/size16" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jd_bnt_confirm"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_14dp"
                android:paddingLeft="57dp"
                android:paddingRight="57dp"
                android:paddingTop="@dimen/padding_14dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/size16" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
