<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:orientation="horizontal"
    android:paddingRight="@dimen/padding15">

    <RelativeLayout
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin15">

        <ImageView
            android:id="@+id/iv_flash"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="@dimen/margin5"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:background="@color/black"
            android:gravity="center"
            android:text="已抢光"
            android:textColor="@color/white"
            android:textSize="@dimen/size12"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding10">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15" />


        <TextView
            android:id="@+id/tv_intor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_999"
            android:textSize="@dimen/size12" />


        <TextView
            android:id="@+id/tv_isState"
            android:layout_width="76dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:background="@drawable/merchant_bg_btn_style_red"
            android:gravity="center"
            android:text="去抢购"
            android:textColor="@color/white"
            android:textSize="@dimen/size15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11111"
                android:textColor="@color/color_red"
                android:textSize="@dimen/size18" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin5"
                android:background="@drawable/merchant_bg_btn_style_red"
                android:padding="2dp"
                android:text="购物券"
                android:textColor="@color/white"
                android:textSize="@dimen/size12" />


            <TextView
                android:id="@+id/tv_residue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text=""
                android:textColor="@color/color_999"
                android:textSize="9dp" />

            <RelativeLayout
                android:layout_width="77dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_empty_red_conrnes_45">

                <ProgressBar
                    android:id="@+id/flash_progressbar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="75dp"
                    android:layout_height="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar_color" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

