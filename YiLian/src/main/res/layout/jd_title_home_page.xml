<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/margin15"
        android:src="@mipmap/back" />

    <ImageView
        android:id="@+id/jd_iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:src="@mipmap/jd_icon_home_title" />

    <TextView
        android:id="@+id/jd_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/textSize_18dp"
        android:visibility="gone"
        tools:text="京东订单" />

    <TextView
        android:id="@+id/tv_jd_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:visibility="gone"
        android:paddingRight="@dimen/padding_20dp"
        android:textColor="@color/c333333"
        android:textSize="@dimen/textSize_13dp"
        tools:text="编辑" />
</FrameLayout>
