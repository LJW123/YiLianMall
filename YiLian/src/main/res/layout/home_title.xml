<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/transparent_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:drawableRight="@mipmap/iv_address_home_title_white"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxEms="5"
        android:paddingLeft="@dimen/margin10"
        android:singleLine="true"
        android:text="定位中"
        android:textColor="@color/white"
        android:textSize="@dimen/size12" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin5"
        android:layout_weight="1"
        android:background="@drawable/searchview_line_white"
        android:drawableLeft="@mipmap/iv_search_home_title_black"
        android:gravity="center_vertical"
        android:hint="  输入商品名称"
        android:paddingLeft="@dimen/padding10"
        android:singleLine="true"
        android:textColorHint="@color/color_999" />

    <ImageView
        android:id="@+id/iv_qrCode_scan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin15"
        android:paddingRight="10dp"
        android:src="@mipmap/iv_qr_home_title_white" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="@dimen/padding10">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/iv_message_home_title_white" />

        <ImageView
            android:id="@+id/iv_message_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_circle_solid_red"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
