<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_order_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/zhanwei" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10dp">

        <TextView
            android:id="@+id/tv_goods_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_13dp"
            tools:text="100%羊毛毡 优雅大毡帽Gu cci制造商百分百" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="@dimen/textSize_18dp"
                tools:text="¥900" />

            <TextView
                android:id="@+id/tv_sale_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/color_999"
                android:textSize="@dimen/textSize_12dp"
                tools:text="已售:5623" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_card_bg"
            android:layout_marginBottom="8.5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:paddingBottom="4dp"
            android:paddingLeft="7.5dp"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingTop="3.5dp"
            android:text="购物卡"
            android:textColor="#FB934A"
            android:textSize="@dimen/textSize_10dp" />
    </LinearLayout>
</LinearLayout>