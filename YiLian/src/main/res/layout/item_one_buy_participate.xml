<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.yilian.mall.widgets.JHCircleView
            android:id="@+id/img_winning_info_photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_evaluate_user" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/img_winning_info_photo"
                android:text="缚玉"
                android:textColor="#333333"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/txt_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/img_winning_info_photo"
                android:text="(IP:127.0.0.1)"
                android:textColor="#b0b0b0"
                android:textSize="11sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_winning_info_photo"
                android:text="参与人次 05"
                android:textColor="#333333"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_winning_info_photo"
                android:text=""
                android:textColor="#b0b0b0"
                android:layout_marginTop="2dp"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>
</LinearLayout>