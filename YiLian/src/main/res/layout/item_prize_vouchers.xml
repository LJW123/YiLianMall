<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="15dp"
    android:paddingTop="13dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@mipmap/duihuanpingzheng_bg"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/duihuanpingzheng_linear_padding_right" >

        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/imgView_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/login_module_default_jp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/login_module_default_jp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_prize_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt_prize_name_text_size"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#505050"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#686868"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="有限期值"
                android:textColor="#7f8d98"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:background="#e7e7e7" />
        <!-- <LinearLayout -->
        <!-- android:id="@+id/layout_status" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:orientation="vertical"> -->
        <!-- <ImageView -->
        <!-- android:id="@+id/imgView_exchange_status" -->
        <!-- android:layout_width="wrap_content" -->


        <!-- android:layout_height="wrap_content" -->
        <!-- android:src="@drawable/duihuanpingzheng_offdollar"/> -->

        <TextView
            android:id="@+id/txt_exchang_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:drawablePadding="12dp"
            android:gravity="center_horizontal"
            android:textColor="#7c8a95"
            android:textSize="@dimen/txt_exchang_status_text_size" />

        <!-- </LinearLayout> -->

    </LinearLayout>

</LinearLayout>