<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_bg">
    <ImageView
        android:id="@+id/iv_bg_activity_prefecture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_activity_area"
            android:paddingTop="@dimen/size15"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_activity_prefecture_left"
                android:layout_width="32dp"
                android:layout_height="21dp"
             />
            <TextView
                android:id="@+id/tv_activity_area"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_marginRight="@dimen/size11"
                android:layout_marginLeft="@dimen/size11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="活动专区"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size18"
                />
            <ImageView
                android:id="@+id/iv_activity_prefecture_right"
                android:layout_width="32dp"
                android:layout_height="21dp"
             />
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_marginTop="@dimen/size10"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_bg_activity_prefecture"
            android:paddingRight="@dimen/size10"
            android:paddingBottom="@dimen/size15"
            android:paddingLeft="@dimen/size10"
            android:paddingTop="@dimen/size15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_left_pic"
                android:layout_marginRight="2.5dp"
                android:background="@color/none_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="210dp" />
            <LinearLayout
                android:layout_marginLeft="2.5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="210dp" >
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_top_pic"
                    android:layout_marginBottom="2.5dp"
                    android:background="@color/none_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_below_pic"
                    android:layout_marginTop="2.5dp"
                    android:background="@color/none_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
