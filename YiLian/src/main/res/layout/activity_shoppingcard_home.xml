<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_yellow" />

            <FrameLayout
                android:id="@+id/fl_card_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingBottom="@dimen/margin10"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_card"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/iv_oppencard"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:background="@mipmap/iv_confirm"
                        android:layout_marginTop="@dimen/margin10"
                        />
                </LinearLayout>


            </FrameLayout>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_card_bg"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/icon_the_title"
                android:text="尊享特权"
                android:textColor="#ff333333"
                android:textSize="18sp"

                />

          <ImageView
              android:id="@+id/iv_card1"
              android:layout_below="@+id/tv_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@mipmap/iv_card1"
              android:layout_marginTop="@dimen/margin10"
              />

            <ImageView
              android:layout_below="@+id/iv_card1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@mipmap/iv_card2"
              android:layout_marginTop="@dimen/margin10"
              />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>