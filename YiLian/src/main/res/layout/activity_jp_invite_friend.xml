<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4256"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="1">

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin15"
                android:background="@mipmap/invite_friend_head" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon44"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin15"
                    android:clickable="true"
                    android:src="@mipmap/iv_back" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="邀请好友"
                    android:textSize="@dimen/size18" />

                <TextView
                    android:id="@+id/specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin15"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="规则说明"
                    android:textSize="@dimen/size15" />

            </RelativeLayout>


        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_invite_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:clickable="true"
            android:padding="@dimen/padding20"
            android:src="@mipmap/bg_share" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_rqcode_share"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding20">

            <ImageView
                android:id="@+id/iv_rqcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:src="@mipmap/login_module_default_jp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingRight="@dimen/margin5"
                android:paddingTop="25dp">


                <com.yilian.mall.widgets.JHCircleView
                    android:id="@+id/iv_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="2dp"
                    android:src="@mipmap/login_module_default_jp" />


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="fdsfafdsafas"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size14"
                    android:visibility="visible" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>