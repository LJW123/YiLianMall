<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4289FF"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_15dp"
    android:paddingTop="@dimen/padding_20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认中"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="29dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:lines="2"
            android:text="您的入住信息正发送至酒店，稍后 短信通知您结果~"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_13dp" />

        <TextView
            android:id="@+id/affirm_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:paddingRight="20dp"
            android:drawablePadding="@dimen/padding_10dp"
            android:drawableRight="@mipmap/right_img"
            android:text="详情"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_13dp" />
    </LinearLayout>
</LinearLayout>
