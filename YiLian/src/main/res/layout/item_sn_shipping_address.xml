<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/icon_sn_check_shipping_address" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/iv_check"
        android:textColor="@color/color_333"
        android:textSize="16dp"
        tools:text="姓名  18293838747" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_shipping_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_phone"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/iv_check"
        android:textColor="@color/color_999"
        android:textSize="13dp"
        tools:text="地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址地址" />

    <ImageView
        android:id="@+id/iv_edit_shipping_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:src="@mipmap/icon_sn_edit_shipping_address" />
</RelativeLayout>