<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.yilian.mall.widgets.pulllayout.DropZoomScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_zoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_mine_top"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="-50dp"
                android:background="@drawable/user_bg"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_holder"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <LinearLayout
                    android:id="@+id/layout_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginTop="@dimen/margin15"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_login_by_sms_code"
                        style="@style/jp_login_register_btn"
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/margin20"
                        android:layout_weight="1"
                        android:background="@drawable/bg_login_register_selector"
                        android:clickable="true"
                        android:text="登录" />

                    <Button
                        android:id="@+id/btn_login_by_pwd"
                        style="@style/jp_login_register_btn"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/margin20"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:text="注册" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin20"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:singleLine="true"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/size18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin10"
                            android:text="奖励"
                            android:textColor="@color/color_666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ledou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ledou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:singleLine="true"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/size18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin10"
                            android:text="@string/library_module_platform_donate_name"
                            android:textColor="@color/color_666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_integral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:singleLine="true"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/size18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin10"
                            android:text="奖券"
                            android:textColor="@color/color_666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dai_gou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_dai_gou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:singleLine="true"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/size18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin10"
                            android:text="兑换券"
                            android:textColor="@color/color_666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-200dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/layout_login_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/bg_mine_photo">

                        <ImageView
                            android:id="@+id/iv_login_photo"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/margin10"
                            android:layout_marginRight="@dimen/margin10"
                            android:text=""
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_login_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/size15"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <!--2018-05-16 15:41:55隐藏此处的我的钱包/商家模块-->
            <LinearLayout
                android:id="@+id/layout_playandletao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout_play_center"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/padding15">

                    <ImageView
                        android:id="@+id/iv_game_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin5"
                        android:src="@mipmap/qian_center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_game_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="我的钱包"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/size15" />

                        <TextView
                            android:id="@+id/tv_game_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:singleLine="true"
                            android:text="轻松管理财富"
                            android:textColor="@color/color_888"
                            android:textSize="@dimen/size12" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_bg" />

                <LinearLayout
                    android:id="@+id/layout_merchant"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/padding15">

                    <ImageView
                        android:id="@+id/iv_ltb_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin5"
                        android:src="@mipmap/user_icon_merchant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_letao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="商家入驻"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/size15" />

                        <TextView
                            android:id="@+id/tv_ltb_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:singleLine="true"
                            android:text="生意从此简单"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/size12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:background="@drawable/library_module_bg_shadow"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_all_order"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/user_infor_line"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="jumpToOrder"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:text="商城订单 "
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="11dp"
                        android:drawableRight="@mipmap/user_jiantou"
                        android:gravity="center"
                        android:text="查看全部"
                        android:textColor="#949494"
                        android:textSize="15sp" />
                </LinearLayout>

                <com.yilian.mall.widgets.NoScrollGridView
                    android:id="@+id/grid_view_mall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:scrollbars="none" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:gravity="center_vertical"
                    android:onClick="layout_collect"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <FrameLayout
                        android:id="@+id/fl_payment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="daifukuan">

                        <TextView
                            android:id="@+id/tv_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="8dp"
                            android:drawableTop="@mipmap/icon_daifukuan"
                            android:gravity="center"
                            android:text="待付款"
                            android:textColor="@color/color_333"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/count_daifukuan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/shap_circle"
                            android:gravity="center"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/color_red"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_take_over"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="daishouhuo">

                        <TextView
                            android:id="@+id/tv_take_over"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="8dp"
                            android:drawableTop="@mipmap/icon_daishouhuo"
                            android:gravity="center"
                            android:text="待收货"
                            android:textColor="@color/color_333"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/count_daishouhuo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/shap_circle"
                            android:gravity="center"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/color_red"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_evaluate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="daipingjia">

                        <TextView
                            android:id="@+id/tv_evaluate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="8dp"
                            android:drawableTop="@mipmap/icon_daipingjia"
                            android:gravity="center"
                            android:text="待评价"
                            android:textColor="@color/color_333"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/count_daipingjia"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/shap_circle"
                            android:gravity="center"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/color_red"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_after_sale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="afterSale">

                        <TextView
                            android:id="@+id/tv_after_sale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="8dp"
                            android:drawableTop="@mipmap/icon_shouhou"
                            android:gravity="center"
                            android:text="售后"
                            android:textColor="@color/color_333"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/count_shouhou"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/shap_circle"
                            android:gravity="center"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:textColor="@color/color_red"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin15"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:background="@drawable/library_module_bg_shadow"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_all_function"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/user_infor_line"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:text="必看清单 "
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_function_look"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:drawablePadding="11dp"
                        android:drawableRight="@mipmap/user_jiantou"
                        android:gravity="center"
                        android:text="查看全部"
                        android:textColor="#949494"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </LinearLayout>

                <com.yilian.mall.widgets.NoScrollGridView
                    android:id="@+id/grid_view_function"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:scrollbars="none" />
            </LinearLayout>
        </LinearLayout>
    </com.yilian.mall.widgets.pulllayout.DropZoomScrollView>

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/merchant_padding10"
            android:paddingRight="@dimen/merchant_padding10"
            android:src="@mipmap/user_setting" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size16"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/icon_message_mine" />

            <ImageView
                android:id="@+id/iv_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="@dimen/margin15"
                android:background="@drawable/bg_circle_solid_red"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
