<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="112.5dp">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginTop="@dimen/margin15"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_module_default_jp" />

            <com.yilian.mylibrary.SlantedTextView
                android:id="@+id/tv_tag"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginTop="@dimen/margin15"
                app:library_module_slantedLength="17dp"
                app:library_module_slantedMode="left_triangle"
                app:library_module_slantedTextColor="#6A4F10"
                app:library_module_slantedTextSize="@dimen/size10"
                app:library_module_slantedText="外卖"
                app:library_module_slantedBackgroundColor="#FFDE23" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/padding15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_tuijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推荐"
                            android:textColor="#6A4F10"
                            android:textSize="@dimen/size11"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:background="@drawable/bg_solid_orange_v5"
                            android:layout_marginRight="@dimen/margin5"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_h1"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_red"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="@dimen/margin15"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="让利"
                            android:textSize="8dp"
                            android:textColor="@color/white"
                            android:paddingTop="@dimen/padding5"
                            android:paddingBottom="@dimen/padding5"
                            android:paddingLeft="@dimen/padding10"
                            android:paddingRight="@dimen/padding10"/>

                        <View
                            android:layout_width="10dp"
                            android:layout_height="1px"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/tv_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/size13"
                            android:textColor="@color/white"
                            android:padding="@dimen/padding5"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_renqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/size13"
                    android:drawableRight="@mipmap/v5_fire"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_666"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17dp"
                        android:text=""
                        android:textColor="@color/color_999"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"
        android:layout_marginLeft="@dimen/margin15"/>

</LinearLayout>
