<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/icon_shopping_cart_shop_name"
            android:drawablePadding="9dp"
            android:lines="1"
            android:padding="@dimen/padding10"
            android:text="商店名称"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="@dimen/padding10"
            android:textColor="@color/color_h1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0"
        />

    <com.yilian.mall.widgets.InnerListView
        android:id="@+id/list_view_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/color_lines"
        android:dividerHeight="1px">

    </com.yilian.mall.widgets.InnerListView>
</LinearLayout>