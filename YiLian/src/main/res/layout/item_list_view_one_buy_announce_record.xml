<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/iv_one_buy_announced_good"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/login_module_default_jp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_one_buy_announced_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:lines="1"
                android:text="商品名称"
                android:textColor="#2a2c2e"
                android:textSize="15dp"/>


            <TextView
                android:id="@+id/tv_one_buy_announced_good_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:lines="1"
                android:text="期号:"
                android:textColor="#888888"
                android:textSize="14dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_one_buy_announced_people_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:lines="1"
                    android:text="参与人次: 000人次"
                    android:textColor="#888888"
                    android:textSize="14dp"/>


                <TextView
                    android:id="@+id/tv_one_buy_announced_good_show_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="查看详情"
                    android:textColor="@color/color_red"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.2px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="#e4e4e4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="17dp"
        android:paddingLeft="16dp"
        android:paddingRight="22dp"
        android:paddingTop="17dp">

        <TextView
            android:id="@+id/tv_one_buy_announced_good_winner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:text="获奖者"
            android:textColor="#888888"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_one_buy_announced_good_winner_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000人次"
            android:textColor="#f35a72"/>


        <Button
            android:id="@+id/bt_one_buy_announced_good_again"
            android:layout_width="76dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_empty_red_circle"
            android:focusable="false"
            android:text="再来一次"
            android:textColor="@color/color_red"
            android:textSize="13dp"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.2px"
        android:background="#e0e0e0"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@color/color_bg"
        />
</LinearLayout>