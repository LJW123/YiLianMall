<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/size14"
                        android:textColor="@color/color_333"
                        android:paddingLeft="@dimen/padding15"
                        android:paddingRight="@dimen/padding15"
                        android:paddingTop="@dimen/padding15"
                        android:paddingBottom="@dimen/padding5"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_sale_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/size13"
                        android:textColor="@color/color_999"
                        android:paddingLeft="@dimen/padding15"
                        android:paddingRight="@dimen/padding15"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding15"
                        android:paddingRight="@dimen/padding15">
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="25dp"
                            android:textColor="@color/color_red"/>

                        <TextView
                            android:id="@+id/tv_marker_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/size14"
                            android:textColor="@color/color_999"
                            android:text=""
                            android:layout_marginLeft="@dimen/margin15"/>

                        <TextView
                            android:id="@+id/tv_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/size13"
                            android:textColor="@color/color_666"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_lines"
                        android:layout_margin="@dimen/margin15"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin15"
                        android:paddingLeft="@dimen/margin15"
                        android:paddingRight="@dimen/margin15">

                        <TextView
                            android:id="@+id/tv_label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/v3greencheck"
                            android:drawablePadding="5dp"
                            android:text="随时退"
                            android:textColor="#39B593"
                            android:textSize="@dimen/size13" />

                        <TextView
                            android:id="@+id/tv_label2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/v3greencheck"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="赠奖券  "
                            android:textColor="#39B593"
                            android:textSize="@dimen/size13" />

                        <TextView
                            android:id="@+id/tv_label3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/v3greencheck"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="过期自动退"
                            android:textColor="#39B593"
                            android:textSize="@dimen/size13" />

                        <TextView
                            android:id="@+id/tv_label4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@mipmap/v3greencheck"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="#39B593"
                            android:textSize="@dimen/size13" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_bg"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding15"
                        android:background="@color/white"
                        android:text="商家信息"
                        android:textSize="@dimen/size14"
                        android:textColor="@color/color_999"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_lines"
                        android:layout_marginLeft="@dimen/margin15"/>

                    <TextView
                        android:id="@+id/tv_merchant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/size14"
                        android:textColor="@color/color_333"
                        android:layout_margin="@dimen/margin15"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding15"
                        android:paddingRight="@dimen/padding15"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_merchant_renqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/size13"
                            android:textColor="@color/color_red"
                            android:text=""
                            android:drawableRight="@mipmap/v5_fire"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tv_merchant_distance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textSize="@dimen/size13"
                            android:textColor="@color/color_999"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_lines"
                        android:layout_marginLeft="@dimen/margin15"
                        android:layout_marginTop="@dimen/margin15"
                        android:layout_marginBottom="@dimen/margin15"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin15"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_merchant_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/size13"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@color/color_666"
                            android:drawableLeft="@mipmap/v5_location"
                            android:drawablePadding="@dimen/padding15"
                            android:gravity="center_vertical"/>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/color_lines"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin20"/>

                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/v5_phone"
                            android:padding="@dimen/padding15"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_bg"/>

                    <include layout="@layout/mt_order_detail_combo"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_bg"/>

                    <include layout="@layout/mt_combo_buy_needknow" />

                </LinearLayout>

        </android.support.v4.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/merchant_color_white">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/merchant_v3back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/merchant_color_333"
                android:textSize="@dimen/merchant_size18" />

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/merchant_star_empty"
                android:layout_above="@+id/view4"
                android:layout_toLeftOf="@+id/iv_share"
                android:layout_toStartOf="@+id/iv_share" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/v3share"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/merchant_color_lines"
                android:layout_alignParentBottom="true"
                android:id="@+id/view4" />
        </RelativeLayout>

        <include
            android:id="@+id/layout_net_error"
            layout="@layout/library_module_load_error"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="立即购买"
        android:gravity="center"
        android:textSize="@dimen/size18"
        android:textColor="@color/white"
        android:background="@color/color_red"
        android:visibility="gone"/>

</LinearLayout>
