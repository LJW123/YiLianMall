<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cha"
            android:layout_marginTop="@dimen/margin15"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="猜1.00以下"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size14"
                    android:background="@drawable/bg_empty_grey_30"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:gravity="center"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_bot_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（奖券不足）"
                    android:textSize="@dimen/size11"
                    android:textColor="@color/color_999"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="猜10.00以下"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size14"
                    android:background="@drawable/bg_empty_grey_30"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_bot_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（奖券不足）"
                    android:textSize="@dimen/size11"
                    android:textColor="@color/color_999"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="猜100.00以下"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size14"
                    android:background="@drawable/bg_empty_grey_30"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:gravity="center"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_bot_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（奖券不足）"
                    android:textSize="@dimen/size11"
                    android:textColor="@color/color_999"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin15"
            android:layout_marginBottom="@dimen/margin15"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_1000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="猜1000.00以下"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size14"
                    android:background="@drawable/bg_empty_grey_30"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:gravity="center"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_bot_1000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（奖券不足）"
                    android:textSize="@dimen/size11"
                    android:textColor="@color/color_999"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_10000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="猜10000.00以下"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size14"
                    android:background="@drawable/bg_empty_grey_30"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:gravity="center"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_bot_10000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（奖券不足）"
                    android:textSize="@dimen/size11"
                    android:textColor="@color/color_999"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="猜全部价格"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size14"
                    android:background="@drawable/bg_empty_grey_30"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    android:gravity="center"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_bot_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="（奖券不足）"
                    android:textSize="@dimen/size11"
                    android:textColor="@color/color_999"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin5"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="竞猜价格"
            android:layout_margin="@dimen/margin15"
            android:textSize="@dimen/size17"
            android:textColor="@color/color_333"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="¥"
                android:textColor="@color/color_333"
                android:textSize="26dp" />

            <com.yilian.mylibrary.widget.ClearEditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="0.00-9999.99竞猜区间"
                android:inputType="number|numberDecimal"
                android:maxLength="9"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_999"
                android:textSize="30dp"
                android:layout_marginLeft="@dimen/margin10"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_lines"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginBottom="50dp"/>


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/library_module_bg_style_red_3"
            android:gravity="center"
            android:text="@string/ensure"
            android:textColor="@color/white"
            android:textSize="@dimen/size18"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginBottom="150dp"/>
    </LinearLayout>
</LinearLayout>
