<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <include
        android:id="@+id/home_page_title"
        layout="@layout/ctrip_title_home_page" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/vary_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_15dp">

                <TextView
                    android:id="@+id/tv_hotel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/textSize_16sp"
                    tools:text="郑州东方维景国际大酒店" />

                <TextView
                    android:id="@+id/tv_room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/textSize_12dp"
                    tools:text="仕居精致大床房" />

                <TextView
                    android:id="@+id/tv_room_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/textSize_12dp"
                    tools:text="大床，全部房间WIFI免费，无早餐" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_check_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_15dp"
                            tools:text="7月18日" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="入住"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/textSize_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_check_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_15dp"
                            tools:text="7月19日" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="离店"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/textSize_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_15dp"
                            tools:text="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晚"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/textSize_12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_15dp"
                            tools:text="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="间"
                            android:textColor="@color/color_999"
                            android:textSize="@dimen/textSize_12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_15dp">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:text="费用明细"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="房费"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp" />

                    <TextView
                        android:id="@+id/tv_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp"
                        tools:text="¥1338" />
                </LinearLayout>

                <View
                    style="@style/line_horizontal"
                    android:layout_marginLeft="@dimen/margin_15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_15dp">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:text="入住人"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp" />

                    <TextView
                        android:id="@+id/tv_check_in_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp"
                        tools:text="石女士" />
                </LinearLayout>

                <View
                    style="@style/line_horizontal"
                    android:layout_marginLeft="@dimen/margin_15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_15dp">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp" />

                    <TextView
                        android:id="@+id/tv_linkman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp"
                        tools:text="张振" />
                </LinearLayout>

                <View
                    style="@style/line_horizontal"
                    android:layout_marginLeft="@dimen/margin_15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_15dp">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_15dp"
                        tools:text="18538560205" />
                </LinearLayout>
            </LinearLayout>

            <com.yilian.mall.ctrip.widget.CouponView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="@dimen/padding_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应付总额："
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/textSize_15dp" />

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="#FF3C00"
                    android:textSize="24dp"
                    tools:text="¥702.00" />

                <TextView
                    android:id="@+id/tv_has_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:background="@drawable/ctrip_order_bean_bg"
                    android:drawablePadding="@dimen/padding_5dp"
                    android:drawableRight="@mipmap/ic_yidou_orange"
                    android:gravity="center"
                    android:padding="@dimen/margin_4dp"
                    android:textColor="#FF4E0E"
                    android:textSize="@dimen/textSize_10dp"
                    tools:text="送300.00" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ll_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="@dimen/padding_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详情 "
                        android:textColor="#4289FF"
                        android:textSize="@dimen/textSize_14dp" />

                    <ImageView
                        android:id="@+id/iv_details"
                        android:layout_width="9dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:src="@mipmap/ctrip_order_payment_downward" />
                </LinearLayout>
            </com.yilian.mall.ctrip.widget.CouponView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/padding_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="奖励支付："
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/textSize_13dp" />

                        <TextView
                            android:id="@+id/tv_order_cash_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_13dp"
                            tools:text="¥66.00" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/ctrip_order_payment_imaginary_line"
                        android:layerType="software" />

                    <LinearLayout
                        android:id="@+id/ll_merchant_income_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="营收额支付："
                                android:textColor="@color/color_666"
                                android:textSize="@dimen/textSize_13dp" />

                            <TextView
                                android:id="@+id/tv_order_merchant_income"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/color_333"
                                android:textSize="@dimen/textSize_13dp"
                                tools:text="¥66.00" />

                            <ImageView
                                android:id="@+id/btn_whether_use_merchant_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_10dp"
                                android:src="@mipmap/ctrip_order_payment_switch_off" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/ctrip_order_payment_imaginary_line"
                            android:layerType="software" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:text="选择支付方式"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/textSize_13dp" />

                    <include layout="@layout/item_pay_fragment_adapter" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_25dp"
                android:background="@drawable/ctrip_order_cancel_btn_bg"
                android:gravity="center"
                android:padding="@dimen/padding_10dp"
                android:text="支付"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_25dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="@dimen/padding_5dp">

                <TextView
                    android:id="@+id/tv_deductions_instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp"
                    android:text="扣款需知"
                    android:textColor="#4289FF"
                    android:textSize="@dimen/textSize_13dp" />

                <TextView
                    android:id="@+id/tv_warm_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp"
                    android:text="温馨提示"
                    android:textColor="#4289FF"
                    android:textSize="@dimen/textSize_13dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
