<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="vertical"
        android:background="@drawable/address_edit_delete_ensure_bg">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="是否确认删除该地址"
            android:textColor="#949494"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/separate_line"/>
        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:gravity="center"
            android:text="删除"
            android:textColor="#f0495d"
            android:textSize="22sp" />
    </LinearLayout>
    <Button
        android:id="@+id/delete_cancle_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/address_edit_delete_cancel_bg"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#0074ff"
        android:textSize="22sp" />
</LinearLayout>
