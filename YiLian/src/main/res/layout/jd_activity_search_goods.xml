<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/jd_title_search" />

    <FrameLayout
        android:id="@+id/jd_fl_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/vary_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/jd_layout_filter_option" />

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_return_top"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:src="@mipmap/go_top" />

        <include
            android:id="@+id/jd_layout_search"
            layout="@layout/jd_layout_search_history" />


    </FrameLayout>


</LinearLayout>
