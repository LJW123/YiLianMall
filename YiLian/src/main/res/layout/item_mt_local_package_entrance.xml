<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mt_package_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">

    <RelativeLayout
        android:id="@+id/rl_mt_package_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_jp_mt_package_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/zhanwei"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_mt_package_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#66000000"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/text_icon" />
        <TextView
            android:layout_width="35dp"
            android:id="@+id/tv_flash_good_label"
            android:layout_height="20dp"
            android:background="#bbfd362d"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size10"
            android:gravity="center"
            android:text="美食"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_mt_package_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:lines="1"
        android:text="@string/placeholder_text"
        android:textColor="@color/color_h1"
        android:textSize="@dimen/size15" />
</LinearLayout>