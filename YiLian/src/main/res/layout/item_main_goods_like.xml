<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_module_default_jp" />

    <ImageView
        android:id="@+id/iv_goods_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_goods_buy"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_goods"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:lines="2"
        android:text="商品名称"
        android:textColor="#454444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/bg_tv_coupon"
        android:drawablePadding="7dp"
        android:drawableRight="@mipmap/ic_mall_xianjin"
        android:lines="1"
        android:text=""
        android:textColor="#ffaa23" />

    <LinearLayout
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_coupon"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:drawablePadding="4dp"
            android:lines="1"
            android:text="189.00"
            android:textColor="#eb5836"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_sales_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:lines="1"
            android:paddingRight="4dp"
            android:text="销量:1865"
            android:textColor="#888888"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>