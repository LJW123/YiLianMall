<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_goods_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:minLines="2"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/size20"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/textSize_13dp"
        tools:text="@string/app_name_resource" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/size14">

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textSize_18dp"
            tools:text="¥900" />

        <TextView
            android:id="@+id/tv_sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/padding10"
            android:textColor="@color/color_999"
            android:textSize="12dp"
            tools:text="已售:5623" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_has_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin15"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/red"
        android:drawablePadding="@dimen/padding_3dp"
        android:drawableRight="@mipmap/icon_white_ledou"
        android:gravity="center"
        android:paddingLeft="@dimen/margin8"
        android:paddingRight="@dimen/margin8"
        android:textColor="@color/white"
        android:textSize="@dimen/size13"
        tools:text="预计 900" />
</LinearLayout>
