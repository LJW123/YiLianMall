<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/padding15"
    android:paddingLeft="@dimen/padding15"
    android:paddingRight="@dimen/padding15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/size14" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/act_zan_off"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginBottom="@dimen/margin10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/size12"
            android:textColor="@color/color_999"/>

        <TextView
            android:id="@+id/tv_evaluate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/size12"
            android:drawableLeft="@mipmap/act_reply"
            android:drawablePadding="@dimen/padding5"
            android:textColor="@color/color_999"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:singleLine="true"
            android:textSize="@dimen/size12"
            android:gravity="right"
            android:drawableRight="@mipmap/right_sanjiao"
            android:drawablePadding="@dimen/padding5"
            android:textColor="@color/color_999"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"
        android:layout_marginTop="@dimen/margin15"/>

</LinearLayout>
