<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_goods_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp">

            <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_module_default_jp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="vertical"
                android:paddingRight="@dimen/padding_20dp">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="商品名"
                    android:textColor="#222222"
                    android:textSize="@dimen/textSize_13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_goods_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="数量：1"
                        android:textColor="#999999"
                        android:textSize="@dimen/textSize_12dp" />

                    <TextView
                        android:id="@+id/tv_apply_for"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/jd_order_bt_bg_red"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_5dp"
                        android:paddingRight="@dimen/padding_5dp"
                        android:text="申请售后"
                        android:textColor="#F72D42"
                        android:textSize="@dimen/textSize_12dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_order_card_tab"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:scaleType="fitXY"
            android:src="@mipmap/jd_order_card_tab" />
    </FrameLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/margin_10dp" />

</LinearLayout>