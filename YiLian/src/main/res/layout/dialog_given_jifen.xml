<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/huodelefen" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/huodelefen_kapian" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="可抵现金使用"
                android:textColor="#9f5509"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/tv2"
                android:layout_marginTop="19dp"
                android:maxEms="1"
                android:text="元"
                android:textColor="#ffeee8"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_huodejifen"
                android:layout_width="60dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@id/tv_type"
                android:gravity="center|right"
                android:shadowColor="#e58120"
                android:text="10"
                android:textColor="#ffffff"
                android:textSize="50sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="280dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_huodejifen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#de6b54"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="手机兑换买单，直抵现金！"
                android:textColor="#de6b54"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="可以在我的--中奖凭证中查看获得记录"
                android:textColor="#d2b68e"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@null"
                android:src="@mipmap/huodelefen_btn" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>