<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/color_white"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/iv_jd_goods_pic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginRight="7dp" />

    <TextView
        android:id="@+id/tv_jd_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_toRightOf="@id/iv_jd_goods_pic"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/color_333"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_jd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_jd_goods_name"
        android:layout_toRightOf="@id/iv_jd_goods_pic"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/icon_jd_question_mark"
        android:textColor="@color/color_red" />

    <TextView
        android:id="@+id/tv_jd_goods_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_jd_goods_name"
        android:layout_toRightOf="@id/tv_jd_price"
        android:gravity="right"
        android:textColor="@color/color_333"
        android:textSize="13dp" />

    <LinearLayout
        android:id="@+id/ll_jd_goods_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_jd_goods_pic"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_text_goods_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买数量"
            android:textColor="@color/color_333"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/tv_sub_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:src="@mipmap/icon_jd_count_sub" />

        <TextView
            android:id="@+id/tv_change_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/color_333"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/tv_add_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:src="@mipmap/icon_jd_count_add" />

    </LinearLayout>


</RelativeLayout>
