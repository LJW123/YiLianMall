<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/merchant_outerLineStyle10"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_jp_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/inner_tab_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding15">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_h1"
            android:textSize="@dimen/size15" />

        <TextView
            android:id="@+id/un_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin10"
            android:background="@drawable/btn_bg_cornersc"
            android:clickable="true"
            android:text="取消收藏"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size12" />


        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:button="@drawable/btn_small_select"
            android:paddingBottom="@dimen/padding10"
            android:paddingLeft="@dimen/padding15"
            android:paddingRight="5dp"
            android:paddingTop="@dimen/padding10"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>