<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="13dp"

    >

    <com.yilian.mall.widgets.CircleImageView1
        android:id="@+id/image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="18dp"
        android:src="@mipmap/login_module_default_jp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:lines="1"
        android:singleLine="true"
        android:text="新世家族保健服饰有限公司"
        android:textColor="#333333"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/image"
        android:text="商品：128件"
        android:textColor="#666666"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/image"
        android:text="销量：12580"
        android:textColor="#666666"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="48dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_goods"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/bg_btn_round_cc5c5c5"
        android:focusable="false"
        android:gravity="center"
        android:text="详情"
        android:textColor="#999999"
        android:textSize="13dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_detail"
        android:background="#e0e0e0" />
</RelativeLayout>