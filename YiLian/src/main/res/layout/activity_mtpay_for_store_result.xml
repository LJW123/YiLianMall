<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mtpay_for_store_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context="com.yilian.mall.ui.MTPayForStoreResult">

    <include layout="@layout/jp_title"/>

    <ImageView
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="43dp"
        android:background="@mipmap/pay_ok_icon"

        />

    <TextView
        android:id="@+id/tv_pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:drawablePadding="@dimen/padding10"
        android:gravity="center"
        android:textColor="@color/color_333"
        android:textSize="@dimen/size18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:gravity="center_horizontal"
        android:text="@string/mt_comment_share"
        android:textColor="@color/color_999"
        android:textSize="@dimen/size13"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin15"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="@dimen/padding15"
            android:text="支付详情"
            />

        <View
            style="@style/innerLineStyle"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间"
                android:textColor="@color/color_999"
                />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/color_999"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易号"
                android:textColor="@color/color_999"
                />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/color_999"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/padding15"
        >

        <TextView
            android:id="@+id/tv_money_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/award"
            android:textColor="@color/color_666"
            />

        <TextView
            android:id="@+id/tv_gouwuquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:textColor="@color/color_333"
            />

        <TextView
            android:id="@+id/tv_icon_gouwuquan"
            style="@style/jpMoneyFen"
            android:layout_width="wrap_content"
            android:text="@string/linggouquan"
            />

        <TextView
            android:id="@+id/tv_xianjinquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_333"/>

        <TextView
            style="@style/jpMoneyQuan"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_share_comment"
        style="@style/btnStyle"
        android:layout_marginBottom="@dimen/margin20"
        android:layout_marginTop="@dimen/margin30"
        android:text="@string/mt_share_get_reward"
        />
</LinearLayout>
