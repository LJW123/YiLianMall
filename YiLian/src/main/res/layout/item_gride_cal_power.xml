<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="match_parent"
            android:layout_height="186dp" />
        <!--平台赠送益豆-->
        <FrameLayout
            android:id="@+id/fl_subsidy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/library_module_forty_alpha_black"
            android:padding="@dimen/margin_6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_platform_give_hash_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/icon_white_ledou"
                android:drawablePadding="@dimen/padding5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_11dp"
                tools:text="平台加赠20,000.00" />
        </FrameLayout>
    </FrameLayout>


    <TextView
        android:id="@+id/tv_goods_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/library_module_color_333"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="aaa"
        android:textColor="@color/color_red"
        android:textSize="@dimen/textSize_14dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_beans"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:drawableLeft="@mipmap/icon_ledou"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingRight="@dimen/margin_4dp"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="@dimen/textSize_12dp" />


        <TextView
            android:id="@+id/tv_goods_sell_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="bbb"
            android:textColor="@color/color_888"
            android:textSize="@dimen/textSize_13dp" />
    </LinearLayout>
</LinearLayout>