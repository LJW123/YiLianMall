<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#9a000000"
    android:orientation="vertical"
    tools:context="com.yilian.mall.ui.ActClockInFailedDialogActivity">
  <LinearLayout
      android:orientation="vertical"
      android:background="#10607B"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
          android:paddingTop="34dp"
          android:paddingBottom="@dimen/size20"
          android:layout_gravity="center_horizontal"
          android:background="#10607B"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="你来晚了"
          android:textColor="#fff7f7f7"
          android:textSize="28dp"
          android:textStyle="bold"
          />

      <TextView
          android:textColor="@color/color_white"
          android:layout_marginBottom="48dp"
          android:layout_gravity="center_horizontal"
          android:text="每日打卡时间 5:00-8:00"
          android:id="@+id/tv_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#10607B"
          />
      <FrameLayout
          android:background="#10607B"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/tv_title"
              android:src="@mipmap/icon_clock_in_failed" />
      </FrameLayout>
      <LinearLayout
          android:gravity="center"
          android:paddingTop="38dp"
          android:background="@color/color_white"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_marginBottom="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="懒虫，你起晚了"
              android:textColor="@color/color_h1"
              android:textSize="@dimen/size14"
              />

          <TextView
              android:id="@+id/tv_carve_integral"
              android:layout_marginBottom="6dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="起的早的人一共瓜分了"
              android:textColor="@color/color_h1"
              android:textSize="@dimen/size14"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="不要放弃再挑战一次！"
              android:textColor="@color/color_h1"
              android:textSize="@dimen/size14"
              />
          <Button
              android:id="@+id/bnt_notice_up"
              android:layout_marginBottom="30dp"
              android:layout_marginTop="30dp"
              android:textColor="@color/color_white"
              android:text="不甘心 我要早起"
              android:layout_width="235dp"
              android:layout_height="50dp"
              android:background="#fffe8019"
              />
      </LinearLayout>

  </LinearLayout>
    <Button
        android:id="@+id/btn_close3"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/icon_clock_success_white_close" />
</LinearLayout>
