<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_title" />

    <ScrollView
        android:id="@+id/guess_item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@mipmap/guessbg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/data_tv"
                    android:layout_width="130dp"
                    android:layout_height="23.3dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="130dp"
                    android:background="@drawable/btn_guess_bg"
                    android:gravity="center"
                    android:textColor="#ffc5c5"
                    android:textSize="11sp"
                    android:textStyle="italic" />

                <Button
                    android:layout_width="124.7dp"
                    android:layout_height="39.3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="34.3dp"
                    android:background="@mipmap/beginguess"
                    android:onClick="begin_guess"
                    android:text="开始猜"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/pro"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginRight="57dp"
                    android:layout_marginTop="24dp"
                    android:progressDrawable="@drawable/my_progress_horizontal" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="57dp"
                    android:layout_marginRight="57dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/involved_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="已参与"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/totalnumber_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="总需人次"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/residue_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="7dp"
                        android:gravity="right"
                        android:text="剩余"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="22dp"
                    android:background="@mipmap/zysx" />

                <TextView
                    android:id="@+id/attention_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@mipmap/hjjp"
                    android:drawablePadding="7dp"
                    android:text="(名额有限,大家快来猜额!)"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <com.yilian.mall.widgets.CircleImageView1
                    android:id="@+id/prize_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="19dp" />

                <TextView
                    android:id="@+id/giftname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="11dp"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="22dp"
                    android:background="@mipmap/lxfs" />

                <TextView
                    android:id="@+id/relation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>