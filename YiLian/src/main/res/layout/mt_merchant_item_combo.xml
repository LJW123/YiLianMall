<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/tv_combo_title"
        android:background="@color/white"
        android:text="特色套餐"
        android:layout_marginLeft="@dimen/margin15"
        android:textSize="@dimen/size15"
        android:gravity="center_vertical|left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/row_height40" />

    <View
        android:layout_marginLeft="@dimen/margin15"
        style="@style/outerLineStyle"/>

    <!--<include layout="@layout/mt_item_merchant_body"/>-->
    <com.yilian.mall.widgets.NoScrollListView
        android:divider="@null"
        android:scrollbars="none"
        android:id="@+id/lv_merchant_combo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.yilian.mall.widgets.NoScrollListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin15"
        android:background="@color/color_bg"/>

</LinearLayout>