<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context="com.yilian.mall.ui.mvp.view.BasicInfomationViewImplActivity">

    <include layout="@layout/merchant_v3_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10dp" />

            <include
                android:id="@+id/include_sex"
                layout="@layout/layout_basic_info_text_view_item" />


            <include
                android:id="@+id/include_birth"
                layout="@layout/layout_basic_info_text_view_item" />

            <include
                android:id="@+id/include_age"
                layout="@layout/layout_basic_info_text_view_item" />

            <include
                android:id="@+id/include_blood_type"
                layout="@layout/layout_basic_info_text_view_item" />

            <include
                android:id="@+id/include_school"
                layout="@layout/layout_basic_info_edit_text_item" />

            <include
                android:id="@+id/include_company"
                layout="@layout/layout_basic_info_edit_text_item" />

            <include
                android:id="@+id/include_job"
                layout="@layout/layout_basic_info_text_view_item" />


            <include
                android:id="@+id/include_hometown"
                layout="@layout/layout_basic_info_text_view_item" />

            <include
                android:id="@+id/include_location"
                layout="@layout/layout_basic_info_text_view_item" />

            <Button
                android:id="@+id/btn_save_data"
                style="@style/btnStyle"
                android:layout_marginTop="30dp"
                android:text="保存" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
