<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lebi_time_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_title_height"
        android:background="#f5f5f9"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/jifenrecord_item1_marginleft2"
        android:paddingRight="0dp"
        android:text="2015-10-26"
        android:textColor="#919191"
        android:textSize="@dimen/time_title_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="8dp" >

        <com.yilian.mall.widgets.CircleImageView1
            android:id="@+id/merchant_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/login_module_default_jp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/merchant_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:textColor="#646464"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/consumer_expend_lebi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#949494"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#bbbbbb"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/time1" />

                <TextView
                    android:id="@+id/deal_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="#8f8f8f"
                    android:textSize="@dimen/time_textsize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

   <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cacaca" /> 

</LinearLayout>