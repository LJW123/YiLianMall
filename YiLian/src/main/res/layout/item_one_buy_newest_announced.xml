<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="33dp">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"/>

        <TextView
            android:id="@+id/tv_snatch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:lines="2"
            android:textColor="#2a2c2e"
            android:textSize="14dp"/>

        <!--<TextView-->
        <!--android:id="@+id/tv_snatch_subhead"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="64G 颜色随机"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:textSize="12dp"
                android:paddingLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期号:"
                android:textColor="#888888"/>

            <TextView
                android:textSize="13dp"
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="#888888"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_will_announced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@mipmap/ic_clock"
                android:gravity="center_vertical"
                android:text="即将揭晓"
                android:textColor="#f35a72"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f35a72"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_announced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获得用户:"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/tv_winner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#434343"
                    android:lines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与人次:"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/tv_person_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="#434343"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="幸运号码:"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/tv_winner_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="等待开奖"
                    android:textColor="#f35a72"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="揭晓时间:"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/tv_announced_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="#888888"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/iv_zone"
        android:layout_width="30dp"
        android:textSize="11dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:layout_marginLeft="11dp"
        android:text="十元专区"
        android:background="#ea1a39"
        android:textColor="@color/white"
        android:lines="2"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/iv_area"
        android:layout_toRightOf="@id/iv_zone"
        android:layout_width="30dp"
        android:textSize="11dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:layout_marginLeft="11dp"
        android:text="兑换中心"
        android:background="#f4ac43"
        android:textColor="@color/white"
        android:lines="2"
        android:visibility="gone"/>

</RelativeLayout>