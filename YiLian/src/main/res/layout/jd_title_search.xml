<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/margin15"
        android:src="@mipmap/back" />

    <EditText
        android:id="@+id/jd_et_search"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@drawable/jd_bg_gray_corner"
        android:drawableLeft="@mipmap/iv_search_home_title_black"
        android:drawablePadding="@dimen/margin_7dp"
        android:gravity="center_vertical"
        android:hint="请输入商品名称"
        android:paddingLeft="@dimen/padding15"
        android:singleLine="true"
        android:textColor="#ffadadad"
        android:textSize="@dimen/textSize_14dp" />

    <TextView
        android:id="@+id/jd_tv_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="9dp"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/margin15"
        android:text="搜索"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/textSize_15dp" />

</LinearLayout>
