<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:drawableLeft="@mipmap/left_sanjiao"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:onClick="onBack"
        android:paddingLeft="15dp"
        android:text="会员详情"
        android:textColor="#7a7a7c"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="@mipmap/huiyuan_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="25dp">
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_member"/>

            <com.yilian.mall.widgets.JHCircleView
                android:id="@+id/user_photo"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="2dp"
                android:src="@mipmap/bind_card_photo" />
        </FrameLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:paddingTop="12dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:src="@mipmap/huiyuanleixing"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onBack"
            android:text="会员类型"
            android:textColor="#4c5f70"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:gravity="center|right"
            android:text=""
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:src="@mipmap/phone_icon"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="拨打电话"
            android:textSize="@dimen/size16"
            android:textColor="#4c5f70"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginRight="22dp"
            android:gravity="center|right"
            android:drawableRight="@mipmap/right_sanjiao"
            android:drawablePadding="@dimen/padding10"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:src="@mipmap/time2"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onBack"
            android:text="成为我会员的时间"
            android:textColor="#4c5f70"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:gravity="center|right"
            android:text=""
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/view_line" />
<!--取消乐分币后，该处乐分币隐藏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:drawableLeft="@mipmap/gou"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:onClick="onBack"
            android:paddingLeft="18dp"
            android:text="消费乐分币"
            android:textColor="#4c5f70"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lefen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:gravity="center|right"
            android:text=""
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:src="@mipmap/money_icon"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onBack"
            android:text="消费金额"
            android:textColor="#4c5f70"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lexiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:gravity="center|right"
            android:text=""
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/view_line" />
    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/selector_btn_jp_all_screen"
        android:text="发送消息"
        android:textColor="@color/white" />
</LinearLayout>