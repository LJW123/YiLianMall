<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/size20"
    android:paddingRight="@dimen/size20"
    android:paddingTop="@dimen/size20"
    android:gravity="center_vertical"
    android:background="@color/color_white">
    <LinearLayout
        android:id="@+id/ll_content"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/iv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin5"
            android:background="@mipmap/icon_atc_level_04"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:text="1"
            android:paddingBottom="1dp"
            android:textColor="@color/color_white"
            android:textSize="9dp" />

        <ImageView
            android:layout_marginLeft="@dimen/size18"
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head_icon" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="@dimen/size10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无昵称"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size17"
            />
            <TextView
                android:id="@+id/tv_integral"
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#00BCA4"
                android:textSize="@dimen/size18"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/size20"
        android:layout_below="@id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"/>


</RelativeLayout>
