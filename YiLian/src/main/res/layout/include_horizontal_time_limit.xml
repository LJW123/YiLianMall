<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_flash_sale"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin10"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin15"
    android:visibility="gone"
    android:paddingRight="@dimen/margin15"
    android:paddingTop="@dimen/margin15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_flash_sale_now"
        android:layout_marginBottom="@dimen/margin15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_flash_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_time_limit"
            android:drawablePadding="@dimen/padding15"
            android:gravity="center_vertical"
            android:text="抢购进行中"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size12" />

        <TextView
            android:id="@+id/tv_panic_buying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="@dimen/padding10"
            android:drawableRight="@mipmap/icon_flash_sale_now"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size12" />
    </LinearLayout>

    <com.yilian.mall.widgets.HorizontalListView
        android:id="@+id/horizontal_listView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:listSelector="@color/transparent">

    </com.yilian.mall.widgets.HorizontalListView>
</LinearLayout>