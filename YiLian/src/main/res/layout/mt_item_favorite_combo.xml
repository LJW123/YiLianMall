<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        style="@style/height15bg"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp">

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin10"
            android:background="@null"
            android:button="@drawable/btn_small_select"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="@dimen/margin10"
            android:layout_toRightOf="@+id/cb_select"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />

        <ImageView
            android:id="@+id/iv_icon_non"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/cb_select"
            android:scaleType="centerCrop"
            android:src="@mipmap/status_goods_the_shelves"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_icon"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding10">

            <TextView
                android:id="@+id/tv_combo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_333"
                android:textSize="@dimen/size15" />


            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin15"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/color_666"
                android:textSize="@dimen/size12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/margin10"
                    android:text=""
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/size20" />


                <TextView
                    style="@style/jpMoneyFen"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="赠" />

                <TextView
                    android:id="@+id/tv_cash_quan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size12" />


                <TextView
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginRight="@dimen/margin15"
                    android:background="@drawable/bg_empty_red_circle"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:text="立即抢购"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/size12" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>