<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginBottom="@dimen/library_module_padding5"
            android:layout_marginTop="@dimen/library_module_padding5"
            android:scaleType="centerCrop"
            android:src="@mipmap/merchant_default_jp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="@dimen/size15"
            android:layout_weight="1"
            android:paddingBottom="11dp"
            android:paddingTop="11dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/padding_3dp"
                    android:lines="2"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/merchant_size15" />

                <TextView
                    android:id="@+id/tv_goods_beans"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/bg_stroke_coner_9"
                    android:drawablePadding="2dp"
                    android:drawableRight="@mipmap/icon_ledou"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_4dp"
                    android:paddingRight="@dimen/margin_4dp"
                    android:text=""
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/textSize_12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_red"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_high_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/merchant_color_999"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_goods_sell_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/color_888"
                    android:textSize="@dimen/textSize_13dp" />
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>

    <View style="@style/merchant_outerLineStyle" />
</LinearLayout>
