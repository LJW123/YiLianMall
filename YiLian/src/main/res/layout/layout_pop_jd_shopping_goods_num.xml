<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:id="@+id/ll_update_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_corners6_white"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="修改购买数量"
            android:textColor="#ff181717"
            android:textSize="@dimen/textSize_16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_btn_style_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jd_iv_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:src="@mipmap/jd_icon_big_sub" />

            <EditText
                android:focusable="true"
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_style_white"
                android:inputType="number"
                android:paddingBottom="@dimen/size12"
                android:paddingLeft="@dimen/textSize_35dp"
                android:paddingRight="@dimen/textSize_35dp"
                android:paddingTop="@dimen/size12"
                android:textColor="#ff181717"
                android:textSize="@dimen/textSize_18dp"
                tools:text="2" />

            <ImageView
                android:id="@+id/jd_iv_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:src="@mipmap/jd_icon_big_add" />
        </LinearLayout>

        <View
            style="@style/line_horizontal"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_14dp"
                android:paddingLeft="57dp"
                android:paddingRight="57dp"
                android:paddingTop="@dimen/padding_14dp"
                android:text="取消"
                android:textColor="@color/color_666"
                android:textSize="@dimen/size16" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jd_bnt_confirm"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_14dp"
                android:paddingLeft="57dp"
                android:paddingRight="57dp"
                android:paddingTop="@dimen/padding_14dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/size16" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
