<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/v3_title" />

    <com.yilian.mall.widgets.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        app:tl_indicator_color="@color/color_red"
        app:tl_indicator_height="2dp"
        app:tl_textAllCaps="true"
        app:tl_textBold="SELECT"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_red"
        app:tl_textUnselectColor="@color/color_333"
        app:tl_textsize="@dimen/size15">

    </com.yilian.mall.widgets.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
