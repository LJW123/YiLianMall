<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.yilian.mall.ui.AfterSaleDetailsActivity">

    <include
        layout="@layout/activity_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <RelativeLayout
        android:id="@+id/rl_time_top_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:paddingBottom="11dp"
        android:paddingLeft="11dp"
        android:paddingRight="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:textColor="#5f5f5f" />


        <TextView
            android:id="@+id/tv_after_sale_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_id"
            android:layout_marginTop="23dp"
            android:textColor="#5f5f5f" />

        <TextView
            android:id="@+id/tv_after_sale_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_id"
            android:layout_marginTop="23dp"
            android:textColor="#247df7"
            android:textSize="17sp" />
    </RelativeLayout>

    <include layout="@layout/view_goods" />

    <LinearLayout
        android:id="@+id/ll_time_bottom_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="售后订单信息 ："
            android:textColor="#3f4042"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_id_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:text="售后编号："
            android:textColor="#5f5f5f" />

        <TextView
            android:id="@+id/tv_after_sale_error_time_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp"
            android:text="申请时间：2016-03-07 17:32:25"
            android:textColor="#3f4042" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="售后信息 ："
            android:textColor="#3f4042"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_after_sale_status_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:text="您的订单将在3个工作日内进行审核"
            android:textColor="@color/color_red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_after_sale_status_two"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@mipmap/right_sanjiao"
            android:gravity="center_vertical"
            android:text="订单状态"
            android:textColor="#000000" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_time_top_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="14dp"
            android:src="@mipmap/ic_after_sale_error" />

        <TextView
            android:id="@+id/tv_after_sale_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="14dp"
            android:textColor="#3f4042"
            android:text="审核拒绝"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_after_sale_error_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_after_sale_error"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:textColor="#3f4042" />

        <TextView
            android:id="@+id/tv_after_sale_error_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_after_sale_error_details"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="24dp"
            android:textColor="#888888" />
    </RelativeLayout>


    <Button
        android:id="@+id/bt_apply_after_sale"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="31dp"
        android:text="再次申请售后"
        android:textColor="@color/white"
        android:visibility="gone" />


</LinearLayout>
