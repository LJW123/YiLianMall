<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/im_buddy_list_header_share"
        style="@style/im_buddy_list_header_text_view"
        android:drawableLeft="@mipmap/im_icon_buddy_list_share"
        android:drawablePadding="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="#e0e0e0" />

    <TextView
        android:id="@+id/im_buddy_list_header_qun1"
        style="@style/im_buddy_list_header_text_view"
        android:drawableLeft="@mipmap/im_icon_buddy_list_lower_group_photo"
        android:drawablePadding="10dp"
        android:text="我的乐友群"
        android:visibility="gone" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="#e0e0e0" />
    <TextView
        android:id="@+id/im_buddy_list_header_qun2"
        style="@style/im_buddy_list_header_text_view"
        android:drawableLeft="@mipmap/im_icon_buddy_list_super_group_photo"
        android:drawablePadding="10dp"
        android:text="我参与的群"
        android:visibility="gone" />

</LinearLayout>
