<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color_red"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:drawablePadding="@dimen/padding5"
        android:drawableRight="@mipmap/icon_white_arrow_down"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxEms="7"
        android:paddingLeft="@dimen/margin10"
        android:text="定位中"
        android:textColor="@color/white"
        android:textSize="@dimen/size13" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin5"
        android:layout_weight="1"
        android:background="@drawable/searchview_line_white"
        android:drawableLeft="@mipmap/icon_search_red"
        android:gravity="center_vertical"
        android:hint="  输入商家/套餐名称"
        android:paddingLeft="@dimen/padding10"
        android:singleLine="true"
        android:textColorHint="@color/color_999" />

    <ImageView
        android:id="@+id/iv_qrCode_scan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin15"
        android:paddingRight="10dp"
        android:src="@mipmap/icon_qr_code_scan" />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="@dimen/padding10"
        android:src="@mipmap/icon_message" />
</LinearLayout>