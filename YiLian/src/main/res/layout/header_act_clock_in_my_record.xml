<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clock_in_my_record_title"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="65dp"
        android:text="起早记录"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <ImageButton
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/icon_act_clock_in_my_record_share" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="42dp"
        android:orientation="horizontal">


        <TextView
            android:layout_marginLeft="@dimen/icon44"
            android:id="@+id/tv_time"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <TextView
            android:layout_marginRight="@dimen/icon44"
            android:id="@+id/tv_success_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_friend_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_content"
        android:background="#FFDD71"
        android:clickable="true"
        android:drawableRight="@mipmap/icon_ffdd71_right_arrow"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:textColor="#B94600"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_record_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_friend_get"
        android:background="@color/color_bg"
        android:paddingBottom="12dp"
        android:text="@string/act_clock_in_record_detail"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:textColor="@color/color_999"
        android:textSize="12dp" />
</RelativeLayout>