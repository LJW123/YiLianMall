<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_room_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:scaleType="centerCrop"
            tools:background="@color/colorAccent" />


        <TextView
            android:id="@+id/tv_room_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_toRightOf="@id/iv_room_pic"
            android:textColor="@color/color_333"
            android:textSize="14sp"
            tools:text="商务大床房" />

        <TextView
            android:id="@+id/tv_room_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_room_standard"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toRightOf="@id/iv_room_pic"
            android:textSize="12sp"
            tools:text="25m2大床4层" />

        <TextView
            android:id="@+id/tv_predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_room_size"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toRightOf="@+id/iv_room_pic"
            android:background="@drawable/sn_order_bt_bg_orange_solid"
            android:drawablePadding="@dimen/padding_3dp"
            android:drawableRight="@mipmap/icon_white_ledou"
            android:gravity="center"
            android:padding="@dimen/margin_2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_10dp"
            tools:text="预计10:00" />


        <ImageView
            android:id="@+id/iv_booked_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_ctrip_room_booked_up" />


        <LinearLayout
            android:id="@+id/ll_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffff3c00"
                android:textSize="11sp"
                tools:text="¥" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_booked_up"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_toLeftOf="@+id/tv_min_price"
                android:textColor="#ffff3c00"
                android:textSize="24sp"
                tools:text="176"
                />

            <TextView
                android:id="@+id/tv_min_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/iv_booked_up"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/icon_ctrip_room_expand"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:textSize="12sp"
                tools:text="起" />
        </LinearLayout>


    </RelativeLayout>

    <View style="@style/line_horizontal" />

</LinearLayout>