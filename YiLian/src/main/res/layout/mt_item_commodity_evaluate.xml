<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.yilian.mall.widgets.JHCircleView
            android:id="@+id/title_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/photo2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_h1"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|bottom">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/comboRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content_evluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin15"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin15"
        android:ellipsize="end"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/color_333"
        android:textSize="@dimen/size12"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_comment_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding10"
        android:paddingLeft="@dimen/padding15">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_merchant_repley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-1dp"
            android:src="@mipmap/ic_merchant_reply" />

        <TextView
            android:id="@+id/tv_merchant_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin20"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:background="@color/color_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/padding10"
            android:text=""
            android:textColor="@color/color_666" />

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"
        android:layout_marginLeft="@dimen/margin15"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_all_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height40"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_look_all_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height40"
            android:layout_marginLeft="@dimen/margin15"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_666" />

       <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/margin15"
            android:src="@mipmap/commit_order_jiantou" />
    </RelativeLayout>

</LinearLayout>
