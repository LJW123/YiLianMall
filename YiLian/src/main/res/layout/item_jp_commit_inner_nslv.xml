<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding15"
        android:paddingLeft="@dimen/padding20"
        android:paddingRight="@dimen/padding20"
        android:paddingTop="@dimen/padding15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单N"
            android:textColor="@color/color_h1"
            android:textSize="@dimen/size15" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="XX旗舰店发货"
            android:textColor="@color/color_666"
            android:textSize="@dimen/size12" />
    </LinearLayout>

    <View style="@style/outerLineStyle" />

    <com.yilian.mall.widgets.NoScrollListView
        android:id="@+id/nslv_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.yilian.mall.widgets.NoScrollListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding15"
        android:paddingLeft="@dimen/padding20"
        android:paddingRight="@dimen/padding20"
        android:paddingTop="@dimen/padding15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计N件商品"
            android:textSize="@dimen/size15" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="¥W0000"
            android:textColor="@color/color_red" />
    </LinearLayout>

    <View style="@style/outerLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding15"
        android:paddingLeft="@dimen/padding20"
        android:paddingRight="@dimen/padding20"
        android:paddingTop="@dimen/padding15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还需要支付"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size15" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="NN" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quan_photo"
            android:text="券" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+NN" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quan_photo"
            android:text="分" />
    </LinearLayout>
</LinearLayout>