<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#9a000000"
    android:orientation="vertical"
    tools:context="com.yilian.mall.ui.ActPassRewardDialogActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="#10607B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="@dimen/icon20"
            android:paddingBottom="@dimen/size20"
            android:layout_gravity="center_horizontal"
            android:background="#10607B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赏金到账"
            android:textColor="#fff7f7f7"
            android:textSize="28dp"
            android:textStyle="bold"
            />
        <FrameLayout
            android:background="#10607B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_title"
                android:src="@mipmap/act_seek_reward_passed" />
        </FrameLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingTop="38dp"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_come_integral"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你很幸运，得到0.00奖券打赏"
                android:textColor="@color/color_h1"
                android:textSize="@dimen/size14"
                />

            <TextView
                android:id="@+id/tv_carve_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到奖券余额"
                android:textColor="@color/color_h1"
                android:textSize="@dimen/size14"/>
            <Button
                android:layout_marginBottom="20dp"
                android:id="@+id/bnt_reward"
                android:layout_marginTop="@dimen/icon20"
                android:textColor="@color/color_white"
                android:text="立即查看"
                android:layout_width="235dp"
                android:layout_height="50dp"
                android:background="#fffe8019"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_close3"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/icon20"
        android:background="@mipmap/icon_clock_success_white_close" />

</LinearLayout>
