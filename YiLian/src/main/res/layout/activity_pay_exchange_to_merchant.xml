<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context="com.yilian.mall.ui.PayExchangeToMerchantActivity">

    <include layout="@layout/merchant_v3_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="345dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/merchant_bg_btn_white_radious10"
            android:padding="15dp">


            <EditText
                android:id="@+id/et_exchange_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:textColorHint="@color/c"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_remind_text"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:text="兑换券数量"
                android:textColor="@color/color_333"
                android:textSize="15dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_merchant_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                tools:text="小和尚" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit"
        style="@style/btnStyle"
        android:layout_marginTop="30dp"
        android:text="确认兑换" />

</LinearLayout>
