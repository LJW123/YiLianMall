<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg">
    <include layout="@layout/merchant_v3_title"/>
        <com.yilian.mall.widgets.MySwipeRefreshLayout
            android:background="@color/white"
            android:layout_marginTop="1px"
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pull_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/color_bg"
                android:dividerHeight="10dp">

            </android.support.v7.widget.RecyclerView>


        </com.yilian.mall.widgets.MySwipeRefreshLayout>
    <LinearLayout
        android:layout_marginTop="1px"
        android:paddingBottom="@dimen/size10"
        android:paddingTop="@dimen/size10"
        android:paddingLeft="@dimen/size15"
        android:paddingRight="@dimen/size15"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:gravity="center_vertical"
            android:id="@+id/et_comment_content"
            android:layout_marginRight="@dimen/size10"
            android:hint="评论"
            android:drawablePadding="5dp"
            android:paddingLeft="@dimen/size15"
            android:drawableLeft="@mipmap/icon_act_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/bg_act_commt_input"
            />
        <TextView
            android:id="@+id/tv_submit"
            android:paddingLeft="@dimen/size20"
            android:paddingRight="@dimen/size20"
            android:gravity="center"
            android:background="@drawable/act_bg_comment_submit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/size16"
            />
        <CheckBox
            android:id="@+id/cb_input_zan"
            android:checked="false"
            android:button="@null"
            android:layout_marginLeft="@dimen/size19"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_comment_zan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />






    </LinearLayout>





</LinearLayout>
