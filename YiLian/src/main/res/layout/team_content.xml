<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_team"
    android:orientation="vertical"
    android:layout_marginTop="59dp"
    android:paddingTop="36dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/size15"
        android:textColor="@color/color_333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin15"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/size18"
        android:textColor="@color/color_333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin15"
        android:drawableRight="@mipmap/my_team_phone"
        android:drawablePadding="@dimen/padding10"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding15"
        android:paddingRight="@dimen/padding15"
        android:paddingTop="@dimen/icon25"
        android:paddingBottom="@dimen/padding15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册时间："
            android:textSize="@dimen/size12"
            android:textColor="@color/color_999"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size12"
            android:text=""/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费金额："
            android:textSize="@dimen/size12"
            android:textColor="@color/color_999"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size12"
            android:text=""/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"/>

    <LinearLayout
        android:id="@+id/layout_from_referrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ta的推荐人"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15"
            android:drawableLeft="@mipmap/my_team_user"
            android:drawablePadding="@dimen/padding15"/>

        <TextView
            android:id="@+id/tv_referrer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:drawablePadding="@dimen/padding10"
            android:drawableRight="@mipmap/right_sanjiao"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"/>

    <TextView
        android:id="@+id/tv_my_perform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ta的业绩"
        android:textColor="@color/color_333"
        android:textSize="@dimen/size15"
        android:padding="@dimen/padding15"
        android:drawableLeft="@mipmap/my_team_perform"
        android:drawablePadding="@dimen/padding15"
        android:drawableRight="@mipmap/right_sanjiao"/>

</LinearLayout>
