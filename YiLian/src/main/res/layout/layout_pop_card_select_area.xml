<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:background="@drawable/bg_dialogbg_radius12"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_card_popu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="当前所在区域"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_popu_title"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/icon_card_positioning"
                android:drawablePadding="@dimen/margin_10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="请选择你所在的地区"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_change_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:text="选择"
                    android:textColor="#fff72d42"
                    android:textSize="14sp" />

                <View
                    android:layout_width="28dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:background="#fff72d42" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_address_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_btn_red_radius6"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="确认"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_confirm"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="9dp"
            android:text="注：确定后不可更改"
            android:textColor="#fff72d42"
            android:textSize="12sp" />

    </RelativeLayout>


</FrameLayout>
