<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_atc_invitation_friend"
        android:gravity="bottom"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding20"
            android:paddingLeft="@dimen/padding20"
            android:paddingRight="@dimen/padding20">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin8"
                    android:paddingBottom="26dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="8dp"
                    android:paddingTop="@dimen/padding15"
                    android:background="@mipmap/bg_atc_text_remark"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我："
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size16"/>

                    <TextView
                        android:id="@+id/tv_remark_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每成功邀请一位好友下载并登录APP，即可获得5%消费奖励"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size14"
                        android:paddingTop="@dimen/padding10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin8"
                    android:paddingBottom="26dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="8dp"
                    android:paddingTop="@dimen/padding15"
                    android:background="@mipmap/bg_atc_text_remark"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好友："
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size16"/>

                    <TextView
                        android:id="@+id/tv_remark_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:text="在益联益家消费可得奖券，集分宝可享受益100%奖励"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size14"
                        android:paddingTop="@dimen/padding10"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@mipmap/btn_atc_bg_share" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding20"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的战绩"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15" />

        <View
            android:layout_width="45dp"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/margin10"
            android:background="#FFD0C9" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_friend_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_333"
                    android:textSize="27dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="共邀请好友"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/size12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_exploits_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_333"
                    android:textSize="27dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="战绩高于"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/size12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_new_orange"
                    android:textSize="27dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="获得奖励"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/size12" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_look_details"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="23dp"
            android:background="@mipmap/btn_atc_bg_look_details"
            android:elevation="5dp"
            android:gravity="center"
            android:paddingBottom="@dimen/padding10"
            android:text="查看详情"
            android:textColor="@color/color_white" />

    </LinearLayout>

    <View style="@style/lucky_outerLineStyle10" />


    <include
        layout="@layout/include_item_act_invitation_friend_head"/>

</LinearLayout>