<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin10">

    <ImageView
        android:id="@+id/ivFlashSaleImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/zhanwei" />

    <View
        android:id="@+id/view3"
        style="@style/outerLineStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFlashSaleImage" />

    <TextView
        android:id="@+id/tvFlashSaleGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/ivFlashSaleImage"
        app:layout_constraintTop_toTopOf="@+id/ivFlashSaleImage" />

    <TextView
        android:id="@+id/tvFlashSaleGoodsRecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/tvFlashSaleGoodsName"
        app:layout_constraintTop_toBottomOf="@+id/tvFlashSaleGoodsName" />

    <TextView
        android:id="@+id/tvFlashSaleGoodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/tvFlashSaleGoodsRecommend"
        app:layout_constraintTop_toBottomOf="@+id/tvFlashSaleGoodsRecommend" />

    <TextView
        android:id="@+id/tvFlashSaleGoodsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/ivFlashSaleImage"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintLeft_toRightOf="@+id/ivFlashSaleImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivFlashSaleImage" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/merchant_bg_btn_style_red"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="@string/linggouquan"
        android:textColor="@color/white"
        android:textSize="@dimen/size12"
        app:layout_constraintBottom_toBottomOf="@+id/tvFlashSaleGoodsPrice"
        app:layout_constraintLeft_toRightOf="@+id/tvFlashSaleGoodsPrice"
        app:layout_constraintTop_toTopOf="@+id/tvFlashSaleGoodsPrice"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="合计"
        app:layout_constraintLeft_toLeftOf="@+id/ivFlashSaleImage"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/merchant_bg_btn_style_red"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="@string/linggouquan"
        android:textColor="@color/white"
        android:textSize="@dimen/size12"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView22" />

    <TextView
        android:id="@+id/tvFlashSaleGoodsTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintRight_toLeftOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/textView22" />

</android.support.constraint.ConstraintLayout>