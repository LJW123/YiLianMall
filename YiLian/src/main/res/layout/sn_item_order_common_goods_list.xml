<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="horizontal"
    android:padding="@dimen/padding_15dp">


    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_module_default_jp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/main_black_text"
            android:textSize="@dimen/textSize_14dp"
            tools:text="洋河梦之蓝M6 40.8度500ML绵柔白8度500ML绵柔白" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_main_suning"
                android:textSize="@dimen/textSize_14dp"
                tools:text="¥ 7.8" />

            <TextView
                android:id="@+id/tv_has_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:background="@drawable/sn_order_bt_bg_orange_solid"
                android:drawablePadding="@dimen/padding_3dp"
                android:drawableRight="@mipmap/icon_white_ledou"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_2dp"
                android:paddingLeft="@dimen/padding_5dp"
                android:paddingRight="@dimen/padding_5dp"
                android:paddingTop="@dimen/margin_2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_11dp"
                tools:text="送900" />

            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/main_black_text"
                android:textSize="@dimen/textSize_13dp"
                tools:text="x1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>