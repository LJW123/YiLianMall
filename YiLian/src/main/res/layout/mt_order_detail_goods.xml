<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_go_combo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin10"
        android:paddingLeft="@dimen/margin15"
        android:paddingRight="@dimen/margin15"
        android:paddingTop="@dimen/margin10">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_333"
                android:textSize="@dimen/size15" />

            <TextView
                android:id="@+id/tv_goods_explain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/color_666"
                android:textSize="@dimen/size12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_red"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_goods_gift"
                    style="@style/integralBtn"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_goods_assure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_lines"
            android:layout_marginLeft="@dimen/margin15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin20"
            android:paddingLeft="@dimen/margin15"
            android:paddingRight="@dimen/margin15"
            android:paddingTop="@dimen/margin20"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_assure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/v3greencheck"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="随时退"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size13"/>

            <TextView
                android:id="@+id/tv_assure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/v3greencheck"
                android:drawablePadding="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="增奖券"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size13" />

            <TextView
                android:id="@+id/tv_assure3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/v3greencheck"
                android:drawablePadding="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="过期自动退"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size13"/>

            <TextView
                android:id="@+id/tv_assure4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/v3greencheck"
                android:drawablePadding="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="满66免费送"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size13"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_go_eva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding15"
            android:background="@color/color_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="@dimen/padding15"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="5"
                android:numStars="5"
                style="@style/order_ratingbar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="去评价"
                android:textSize="@dimen/size15"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_999"
                android:drawableRight="@mipmap/commit_order_jiantou"
                android:drawablePadding="@dimen/padding10"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
