<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ctrip_order_share_top_bg"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.yilian.mall.ctrip.widget.CustomRoundAngleImageView
                            android:id="@+id/share_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            app:cr_left_top_radius="5dp"
                            app:cr_right_top_radius="5dp"
                            tools:src="@mipmap/login_module_default_jp" />

                        <TextView
                            android:id="@+id/share_min_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:background="#99000000"
                            android:padding="@dimen/padding_5dp"
                            android:text="¥ 3652起"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_12dp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/share_hotel_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_15dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_17dp"
                        android:textStyle="bold"
                        tools:text="仟那云松精品酒店(郑州东站店）" />

                    <TextView
                        android:id="@+id/share_hotel_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_25dp"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/textSize_14dp"
                        tools:text="商都路与中兴南路向北200米凯利国际12层" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:background="#E7E7E7" />

                    <TextView
                        android:id="@+id/share_hotel_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_15dp"
                        android:textColor="#4289FF"
                        android:textSize="@dimen/textSize_18dp"
                        tools:text="4.8分" />

                    <LinearLayout
                        android:id="@+id/share_ll_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_10dp"
                            android:layout_marginRight="@dimen/margin_10dp"
                            android:background="#E7E7E7" />

                        <TextView
                            android:id="@+id/share_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_15dp"
                            android:layout_marginLeft="@dimen/margin_15dp"
                            android:layout_marginRight="@dimen/margin_30dp"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/textSize_15dp"
                            tools:text="我是捎句话，我是占位符" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/ctrip_fragment_order_share_layout_bottom" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_common_color">

            <LinearLayout
                android:id="@+id/vary_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.yilian.mall.ctrip.widget.CustomRoundAngleImageView
                                android:id="@+id/iv_img"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                app:cr_left_top_radius="10dp"
                                app:cr_right_top_radius="10dp"
                                tools:src="@mipmap/login_module_default_jp" />

                            <TextView
                                android:id="@+id/tv_min_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:layout_marginBottom="@dimen/margin_10dp"
                                android:background="#99000000"
                                android:padding="@dimen/padding_5dp"
                                android:text="¥ 3652起"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_12dp" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_hotel_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_15dp"
                            android:layout_marginLeft="@dimen/margin_15dp"
                            android:layout_marginRight="@dimen/margin_15dp"
                            android:layout_marginTop="@dimen/margin_20dp"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_17dp"
                            android:textStyle="bold"
                            tools:text="仟那云松精品酒店(郑州东站店）" />

                        <TextView
                            android:id="@+id/tv_hotel_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_25dp"
                            android:layout_marginLeft="@dimen/margin_15dp"
                            android:layout_marginRight="@dimen/margin_15dp"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/textSize_14dp"
                            tools:text="商都路与中兴南路向北200米凯利国际12层" />

                        <View style="@style/line_horizontal" />

                        <TextView
                            android:id="@+id/tv_hotel_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_15dp"
                            android:textColor="#4289FF"
                            android:textSize="@dimen/textSize_18dp"
                            tools:text="4.8分" />

                        <!--顺便捎句话-->
                        <LinearLayout
                            android:id="@+id/ll_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View style="@style/line_horizontal" />

                            <EditText
                                android:id="@+id/et_remark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="24dp"
                                android:layout_marginTop="17dp"
                                android:background="@null"
                                android:gravity="left"
                                android:hint="捎句话"
                                android:maxLength="50"
                                android:minLines="3"
                                android:textColor="@color/color_666"
                                android:textSize="@dimen/textSize_15dp" />

                            <TextView
                                android:id="@+id/tv_word_limit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginBottom="@dimen/margin_15dp"
                                android:layout_marginRight="@dimen/margin_15dp"
                                android:layout_marginTop="13dp"
                                android:text="0/50"
                                android:textColor="@color/color_999"
                                android:textSize="@dimen/textSize_13dp" />
                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_show_remark"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ctrip_order_share_btn_unselect"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_10dp"
                        android:paddingTop="@dimen/padding_10dp"
                        android:text="顺便捎句话"
                        android:textColor="#4289FF"
                        android:textSize="@dimen/textSize_15dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>