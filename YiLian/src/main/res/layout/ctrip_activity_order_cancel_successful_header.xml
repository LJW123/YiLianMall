<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4289FF"
        android:gravity="center"
        android:paddingTop="@dimen/padding_30dp"
        android:paddingBottom="@dimen/padding_27dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/ic_apply_after_sales"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:text="订单已取消"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_10dp"
            android:background="@drawable/ctrip_order_cancel_successful"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_15dp"
            android:paddingRight="@dimen/padding_15dp"
            android:textSize="@dimen/textSize_15dp"
            android:textColor="@color/white"
            android:text="重新预订该酒店"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#F8F8F8"
        android:paddingTop="@dimen/padding_15dp"
        android:paddingBottom="@dimen/padding_15dp">
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="#E9E9EA"/>
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:background="@drawable/ctrip_order_cancel_successful_dot"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/color_333"
            android:textSize="@dimen/textSize_15dp"
            android:text="为您推荐"/>
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@drawable/ctrip_order_cancel_successful_dot"/>
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="#E9E9EA"/>
    </LinearLayout>

</LinearLayout>
