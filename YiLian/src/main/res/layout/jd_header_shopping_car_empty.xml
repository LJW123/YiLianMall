<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_common_color"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:paddingBottom="52dp"
        android:paddingTop="52dp"
        android:src="@mipmap/jd_icon_empty_shopping_car" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/textSize_18dp"
        android:paddingTop="@dimen/textSize_18dp"
        android:src="@mipmap/jd_icon_recomentd" />

</LinearLayout>

