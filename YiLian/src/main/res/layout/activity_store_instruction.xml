<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_common_color"
    android:orientation="vertical">

    <include layout="@layout/v3_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding15">

        <ImageView
            android:id="@+id/iv_store"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size13"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/textSize_15dp"
                tools:text="adidas服装专卖店" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size14"
                android:background="@drawable/bg_solid_red"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_3dp"
                android:paddingLeft="@dimen/margin_6dp"
                android:paddingRight="@dimen/margin_6dp"
                android:paddingTop="@dimen/padding_3dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_le_beans_white" />

                <TextView
                    android:id="@+id/tv_max_give_hash_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_13dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding15">

        <TextView
            android:id="@+id/tv_good_comment_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="好评率"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textSize_14dp" />

        <TextView
            android:id="@+id/tv_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:gravity="center_vertical"
            android:text="所在地"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textSize_14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding15">

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="店铺公告："
            android:textColor="@color/black_333333"
            android:textSize="@dimen/textSize_14dp" />

        <TextView
            android:id="@+id/tv_notice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textSize_14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_service_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_service_phone"
        android:drawablePadding="@dimen/padding10"
        android:paddingBottom="23dp"
        android:paddingLeft="@dimen/padding10"
        android:paddingTop="23dp"
        android:textColor="@color/color_333"
        android:textSize="@dimen/textSize_15dp"
        tools:text="客服电话132-0000-0000" />
</LinearLayout>
