<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_guess_color">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/bg_guess_detail"/>

        <TextView
            android:id="@+id/tv_guess_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin10"
        android:background="@color/color_bg"/>

    <include layout="@layout/item_new_guess_list"
        android:id="@+id/layout_guess"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin10"
        android:background="@color/color_bg"/>
</LinearLayout>
