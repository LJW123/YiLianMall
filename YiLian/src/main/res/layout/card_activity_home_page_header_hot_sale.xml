                    android:layout_marginTop="23dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/library_module_default_jp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
