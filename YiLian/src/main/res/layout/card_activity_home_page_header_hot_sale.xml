            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_hot_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_hot_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/library_module_default_jp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/card_home_list_first" />

                <TextView
                    android:id="@+id/tv_hot_1"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_alignBottom="@+id/iv_hot_1"
                    android:background="@mipmap/card_home_hot_sale_tittle_bg"
                    android:ellipsize="end"
                    android:gravity="bottom|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/padding_8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_11dp"
                    tools:text="男装新款韩版绞花" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hot_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:layout_marginRight="@dimen/margin_6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_hot_2"
                    android:layout_width="match_parent"
