<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/mScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/share_hotel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_15dp"
                    android:layout_marginLeft="@dimen/margin_6dp"
                    android:layout_marginRight="@dimen/margin_6dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/textSize_17dp"
                    android:textStyle="bold"
                    tools:text="仟那云松精品酒店(郑州东站店）" />

                <TextView
                    android:id="@+id/share_hotel_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_25dp"
                    android:layout_marginLeft="@dimen/margin_6dp"
                    android:layout_marginRight="@dimen/margin_6dp"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/textSize_14dp"
                    tools:text="商都路与中兴南路向北200米凯利国际12层" />

                <View style="@style/line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_6dp"
                    android:layout_marginRight="@dimen/margin_6dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/share_date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        tools:text="07月26日" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/ctrip_order_share_dot" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerVertical="true"
                            android:background="#E7E7E7" />

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ctrip_order_share_dot" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/share_date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        tools:text="07月26日" />
                </LinearLayout>

                <TextView
                    android:id="@+id/share_date_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:layout_marginLeft="@dimen/margin_6dp"
                    android:layout_marginRight="@dimen/margin_6dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/textSize_14dp"
                    tools:text="4晚 x1间" />
                <!--订单总额-->
                <LinearLayout
                    android:id="@+id/share_ll_order_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View style="@style/line_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/margin_6dp"
                        android:paddingRight="@dimen/margin_6dp"
                        android:paddingTop="@dimen/padding_20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="订单总额"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_15dp" />

                        <TextView
                            android:id="@+id/share_order_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF4E0E"
                            android:textSize="@dimen/textSize_18dp"
                            tools:text="¥678" />
                    </LinearLayout>
                </LinearLayout>
                <!--顺便捎句话-->
                <LinearLayout
                    android:id="@+id/share_ll_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View style="@style/line_horizontal" />

                    <TextView
                        android:id="@+id/share_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_15dp"
                        android:layout_marginLeft="@dimen/margin_6dp"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/textSize_15dp"
                        tools:text="我是捎句话，我是占位符" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="-1dp"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/ctrip_order_share_imaginary_line"
                    android:layerType="software" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share_code"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/login_module_default_jp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="21dp"
                            android:src="@mipmap/ic_logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5dp"
                            android:text="益联益家-携程"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/textSize_14dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="识别二维码，查看产品详情"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/textSize_13dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>