<?xml version="1.0" encoding="utf-8"?><!--好货推荐-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_floor_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_15dp">

        <ImageView
            android:id="@+id/iv_floor"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/zhanwei" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="更多 >" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_floor_one_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_7dp"
                android:layout_weight="346"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/zhanwei" />

            <ImageView
                android:id="@+id/iv_floor_one_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="291"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/zhanwei" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_floor_one_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_7dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/zhanwei" />

            <ImageView
                android:id="@+id/iv_floor_one_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_7dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/zhanwei" />

            <ImageView
                android:id="@+id/iv_floor_one_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/zhanwei" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
