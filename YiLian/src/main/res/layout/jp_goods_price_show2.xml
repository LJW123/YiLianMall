<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">
    <!--新版商城 商品条目 下方价钱展示布局-->
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:padding="@dimen/size10"
        android:paddingBottom="@dimen/padding10"
        android:text="商品名称"
        android:textColor="@color/color_h1"
        android:textSize="@dimen/size13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="实际价格"
            android:textColor="@color/color_red"
            android:textSize="@dimen/size18" />

        <TextView
            android:id="@+id/tv_market_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价:"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/color_999"
                android:textSize="@dimen/size12"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/margin10">

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/jp_bg_btn_red_all_radius"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="1dp"
            android:text="@string/back_score"
            android:textColor="@color/white"
            android:textSize="@dimen/size11" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_goods_beans"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:drawableLeft="@mipmap/icon_ledou"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingRight="@dimen/margin_4dp"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="@dimen/textSize_12dp" />

        <TextView
            android:id="@+id/tv_sold_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/color_999"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_red"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fee97d"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="用券只需"
            android:textColor="@color/color_red"
            android:textSize="@dimen/size13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/item_goods_jiantou" />

        <TextView
            android:id="@+id/tv_cost_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size18" />

    </LinearLayout>
</LinearLayout>