<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_version_update">

        <TextView
            android:id="@+id/tv_version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="78dp"
            android:text=""
            android:textColor="#FEDFB2"
            android:textSize="@dimen/size12" />

        <TextView
            android:id="@+id/tv_version_message"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="146dp"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15" />

        <TextView
            android:id="@+id/tv_version_up"
            style="@style/btnCircleStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="268.5dp"
            android:layout_marginBottom="@dimen/margin20"
            android:text="立即升级" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_version_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@mipmap/cha_white" />

</LinearLayout>
