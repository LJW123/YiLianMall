<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_top_divider"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EFF3F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="44dp"
                android:layout_height="match_parent"/>

            <com.flyco.tablayout.CommonTabLayout
                android:id="@+id/tl_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tl:tl_iconVisible="false"
                tl:tl_indicator_color="#F10215"
                tl:tl_indicator_width="20dp"
                tl:tl_indicator_height="3dp"
                tl:tl_textSelectColor="#F10215"
                tl:tl_textUnselectColor="#333333"
                tl:tl_textsize="@dimen/textSize_14dp" />

            <LinearLayout
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:gravity="center">
            </LinearLayout>

        </LinearLayout>


        <View style="@style/line_horizontal" />

        <FrameLayout
            android:id="@+id/fl_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>