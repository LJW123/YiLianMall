<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/v3Layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/v3Back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/merchant_web_v3back" />

            <ImageView
                android:id="@+id/v3Left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/login_web_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/v3Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/merchant_color_333"
            android:textSize="@dimen/merchant_size18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/merchant_v3_cart_bottom"
                android:textSize="@dimen/merchant_size15"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/v3Shop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10"
                android:src="@mipmap/icon_web_explain"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/v3Share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding15"
                android:src="@mipmap/v3_more_bottom"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingRight="@dimen/merchant_padding15"
                android:textSize="@dimen/merchant_size15"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/merchant_color_lines" />

</LinearLayout>
