<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/act_result_failed_bg"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/frame_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/act_result_success_bg"
            android:layout_gravity="center"
            android:layout_marginTop="-80dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:background="@drawable/bg_white_5"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:layout_marginTop="-20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_result"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/act_result_success_tv"
            android:layout_gravity="center"
            android:layout_marginTop="-140dp"/>

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入囊中"
            android:textColor="@color/white"
            android:textSize="@dimen/size17"
            android:background="@drawable/library_module_bg_style_red_3"
            android:layout_marginTop="140dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="@dimen/padding10"
            android:paddingBottom="@dimen/padding10"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再试一次"
        android:textColor="@color/white"
        android:textSize="@dimen/size17"
        android:background="@drawable/library_module_bg_style_red_3"
        android:layout_marginTop="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="@dimen/padding10"
        android:paddingBottom="@dimen/padding10"
        android:visibility="gone"/>

</LinearLayout>
