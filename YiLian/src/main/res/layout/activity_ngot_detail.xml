<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:text="商品状态"
                android:textColor="#929292"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <LinearLayout
                android:id="@+id/ll_wait_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/img_wait_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/status_img_yuan_01" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="vertical"
                    android:paddingLeft="14dp">

                    <TextView
                        android:id="@+id/tv_wait_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="等待发货"
                        android:textColor="#1d1d26"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_wait_status_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:drawableLeft="@mipmap/time_shouhuo"
                        android:drawablePadding="5dp"
                        android:text=""
                        android:textColor="#a8a8aa"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_line" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_has_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_has_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:src="@mipmap/ll_has_goods" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="13dp">

                        <TextView
                            android:id="@+id/tv_has_status2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="等待收货"
                            android:textColor="#1d1d26"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="7dp"
                            android:drawablePadding="5dp"
                            android:text="请保持您的手机畅通"
                            android:textColor="#a8a8aa"
                            android:textSize="12sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line" />
                        <TextView
                            android:id="@+id/tv_has_status1_has"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="已发货"
                            android:textColor="#a4a4a5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_has_status_time_has"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="7dp"
                            android:drawableLeft="@mipmap/time_shouhuo"
                            android:drawablePadding="5dp"
                            android:text=""
                            android:textColor="#a4a4a5"
                            android:textSize="12sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line" />
                        <TextView
                            android:id="@+id/tv_has_status0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="等待发货"
                            android:textColor="#a4a4a5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_has_status_time_wait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="7dp"
                            android:drawableLeft="@mipmap/time_shouhuo"
                            android:drawablePadding="5dp"
                            android:text=""
                            android:textColor="#a4a4a5"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_done_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_done_status3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:src="@mipmap/ll_done_goods" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="13dp">

                        <TextView
                            android:id="@+id/tv_done_status3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="已完成"
                            android:textColor="#1d1d26"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_done_status_time_done"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:drawableLeft="@mipmap/time_shouhuo"
                            android:drawablePadding="5dp"
                            android:text=""
                            android:textColor="#a8a8aa"
                            android:textSize="12sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/view_line" />
                        <TextView
                            android:id="@+id/tv_done_status2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="等待收货"
                            android:textColor="#a4a4a5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_done_status_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:drawablePadding="5dp"
                            android:text="请保持您的手机畅通"
                            android:textColor="#a8a8aa"
                            android:textSize="12sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/view_line" />
                        <TextView
                            android:id="@+id/tv_done_status1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="已发货"
                            android:textColor="#a4a4a5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_done_status_time_has"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:drawableLeft="@mipmap/time_shouhuo"
                            android:drawablePadding="5dp"
                            android:text=""
                            android:textColor="#a4a4a5"
                            android:textSize="12sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/view_line" />
                        <TextView
                            android:id="@+id/tv_done_status0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="等待发货"
                            android:textColor="#a4a4a5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_done_status_time_wait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="13dp"
                            android:drawableLeft="@mipmap/time_shouhuo"
                            android:drawablePadding="5dp"
                            android:text=""
                            android:textColor="#a4a4a5"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_status"
                    android:layout_width="76dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/round_corner_ffb747_5"
                    android:text=""
                    android:textColor="#ffad2b"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="13dp"
                android:background="@color/view_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:text="物流信息"
                android:textColor="#929292"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_logistic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:text="物流公司："
                android:textColor="#929292"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:text="订单编号："
                android:textColor="#8b8b8b"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="13dp"
                android:background="@color/view_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="23dp"
                android:text="商品信息"
                android:textColor="#929292"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_goods"
                        android:layout_width="101dp"
                        android:layout_height="101dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="11dp"
                        android:src="@mipmap/login_module_default_jp"
                        />

                    <ImageView
                        android:id="@+id/img_zone"
                        android:layout_width="23dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="11dp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="#3f4447"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_issue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="期号："
                        android:textColor="#9f9f9f"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="中奖号码："
                        android:textColor="#9f9f9f"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="参与次数：人次"
                        android:textColor="#9f9f9f"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:text="揭晓时间："
                        android:textColor="#9f9f9f"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>