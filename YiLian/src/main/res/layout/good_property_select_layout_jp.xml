<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/size18" />

                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/size12" />

                    <TextView
                        android:id="@+id/tv_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bg_solid_red_f"
                        android:paddingBottom="1dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="1dp"
                        android:text="@string/linggouquan"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size10"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/imgView_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@mipmap/cha" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jifen"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_price_jfg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/size18" />

                    <TextView
                        android:id="@+id/tv_jifen_jfg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/size18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:singleLine="true"
                        android:text="@string/integral"
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/size12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_juan"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_back_record"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="1dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size12" />

                <TextView
                    android:id="@+id/tv_ledou"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ledou"
                    android:drawablePadding="3dp"
                    android:drawableRight="@mipmap/icon_ledou"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text=""
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/size12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_select_property"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="选择"
                    android:textColor="@color/color_h1"
                    android:textSize="@dimen/size14" />

                <LinearLayout
                    android:id="@+id/ll_repertory"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="库存："
                        android:textColor="@color/color_h1"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/tv_repertory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/color_h1"
                        android:textSize="@dimen/size14" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgView_good_icon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/bg_corners_white"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/ll_gave_power_property"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imgView_good_icon"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@color/library_module_forty_alpha_black"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_gave_power_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_white_ledou"
                    android:drawablePadding="5dp"
                    android:text="aaaaaaaa"
                    android:textColor="@color/white" />
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.yilian.mall.widgets.NoScrollListView
                    android:id="@+id/lv_commodity_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@color/transparent" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/lv_commodity_property"
        android:background="@color/separate_line" />

    <LinearLayout
        android:id="@+id/layout_add_and_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买数量"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15" />

        <Button
            android:id="@+id/btn_decrease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_border_btn_bg"
            android:enabled="false"
            android:text="—"
            android:textColor="#B2B2B2"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@drawable/grey_border_btn_bg"
            android:gravity="center"
            android:text="1"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_increase"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_border_btn_bg"
            android:text="+"
            android:textColor="@color/color_red"
            android:textSize="30dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/separate_line" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_put_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fe9501"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:text="@string/put_cart"
            android:textColor="@color/white"
            android:textSize="@dimen/size18" />

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_red"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:text="@string/ensure"
            android:textColor="@color/white"
            android:textSize="@dimen/size18" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_red"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/size18" />
</LinearLayout>
