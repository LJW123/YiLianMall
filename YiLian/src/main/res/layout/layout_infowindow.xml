<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000">

    <RelativeLayout
        android:layout_width="225dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/bg_infowindow"
        >

        <TextView
            android:id="@+id/tv_hotel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin10"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_hotel_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hotel_title"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxEms="25"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="11sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/padding_15dp"
            >

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hotel_info"
                android:layout_margin="@dimen/margin10"
                android:layout_weight="1"
                android:text=""
                android:textColor="#ff999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_hotel_info"
                android:layout_margin="@dimen/margin10"
                android:background="@drawable/yuanjiao_orange_radiu10"
                android:paddingBottom="@dimen/padding_5dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="@dimen/padding_5dp"
                android:text="预定"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>