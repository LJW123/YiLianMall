<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin10"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/v5_location"
            android:drawablePadding="@dimen/padding15"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="@dimen/padding15"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/size14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_vertical"
            android:background="@color/color_lines" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding20"
            android:paddingRight="@dimen/padding20"
            android:src="@mipmap/v5_phone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin15"
        android:background="@color/color_lines" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/v5_time"
        android:drawablePadding="@dimen/padding15"
        android:gravity="center_vertical"
        android:padding="@dimen/padding15"
        android:text=""
        android:textColor="@color/color_333"
        android:textSize="@dimen/size14" />

    <LinearLayout
        android:id="@+id/layout_jump_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin15"
            android:background="@color/color_lines" />

        <TextView
            android:id="@+id/tv_flag_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/v5_shop"
            android:drawablePadding="@dimen/padding15"
            android:drawableRight="@mipmap/right_sanjiao"
            android:gravity="center_vertical"
            android:padding="@dimen/padding15"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="@dimen/size14" />
    </LinearLayout>

</LinearLayout>
