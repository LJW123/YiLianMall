<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    >

    <include layout="@layout/v3_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin10"
        android:paddingLeft="@dimen/padding30"
        android:paddingTop="@dimen/padding20"
        android:paddingBottom="@dimen/padding20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预留手机号"
            android:textSize="@dimen/size13"
            android:textColor="@color/color_a8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="@dimen/size14"
                android:textColor="@color/color_h1"
                android:paddingTop="@dimen/padding10"/>

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:background="@color/color_lines"
                android:paddingTop="@dimen/padding10"/>

            <Button
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:textSize="@dimen/size13"
                android:gravity="center"
                android:background="@null"
                android:textColor="@color/color_red"
                android:paddingLeft="@dimen/padding20"
                android:paddingTop="@dimen/padding10"
                android:paddingRight="@dimen/padding30"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_lines"
            android:layout_marginTop="@dimen/margin20"
            android:layout_marginBottom="@dimen/margin20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="@dimen/size13"
            android:textColor="@color/color_a8"/>

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15"
            android:background="@null"
            android:hint="请输入您收到的验证码"
            android:textColorHint="@color/color_999"
            android:maxLength="6"
            android:inputType="number"
            android:paddingTop="@dimen/padding10"
            android:paddingBottom="@dimen/padding20"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="@dimen/size20"
        android:textColor="@color/white"
        android:layout_margin="@dimen/margin20"
        android:background="@drawable/bg_solid_red_90"/>

</LinearLayout>
