<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    tools:context="com.yilian.mall.ui.RedPacketDialog">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/red_packet_bg" />

    <ImageView
        android:id="@+id/iv_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/red_packet_bot"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="220dp"
        android:layout_height="240dp"
        android:background="@drawable/library_module_bg_solid_f1_15"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拆奖励啦!"
            android:textSize="36dp"
            android:textColor="#D6342C"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拆奖励后奖励到账哦~"
            android:textColor="@color/white"
            android:textSize="@dimen/size15"
            android:background="@drawable/red_packet_color_bg"
            android:paddingLeft="@dimen/padding15"
            android:paddingRight="@dimen/padding15"
            android:paddingTop="@dimen/padding5"
            android:paddingBottom="@dimen/padding5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin10" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="36dp"
            android:textColor="#D6342C"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情 >"
            android:textSize="@dimen/size15"
            android:textColor="@color/color_999"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin10"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/red_packet_top"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/iv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/red_packet_btn"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lucky_bg_close"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/margin30"
        android:layout_marginTop="-150dp" />

</FrameLayout>
