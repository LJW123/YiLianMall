<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_goods"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_goods"
        android:layout_toRightOf="@id/iv_goods"
        android:maxLines="2"
        android:textColor="@color/color_333"
        android:textSize="14dp"
        tools:text="是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是是" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_goods"
        android:layout_toEndOf="@id/iv_goods"
        android:layout_toRightOf="@id/iv_goods"
        android:maxLines="1"
        android:textColor="@color/red"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:text="Y232332" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_return_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_goods"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/tv_goods_price"
        android:layout_toRightOf="@id/tv_goods_price"
        android:background="@color/red"
        android:drawableEnd="@mipmap/icon_white_ledou"
        android:drawablePadding="@dimen/padding_3dp"
        android:drawableRight="@mipmap/icon_white_ledou"
        android:paddingLeft="@dimen/margin8"
        android:paddingRight="@dimen/margin8"
        android:textColor="@color/white"
        tools:text="预计 900" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_goods"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_333"
        android:textSize="13dp"
        tools:ignore="RelativeOverlap"
        tools:text="X 1" />
</RelativeLayout>