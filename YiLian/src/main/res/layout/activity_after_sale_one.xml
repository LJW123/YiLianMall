<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.yilian.mall.ui.AfterSaleOneActivity">

    <include layout="@layout/activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <include layout="@layout/view_goods" />

            <LinearLayout
                android:id="@+id/ll_time_bottom_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:text="售后订单信息 ："
                    android:textColor="#3f4042"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/after_sale_number"
                    android:textColor="#5f5f5f" />

                <TextView
                    android:id="@+id/tv_own_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:text="原订单号："
                    android:textColor="#5f5f5f" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="13dp"
                    android:text="申请时间："
                    android:textColor="#3f4042" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#f5f5f5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:text="售后信息 ："
                    android:textColor="#3f4042"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_marginTop="13dp"
                    android:text=""
                    android:textColor="#f75a53" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:text="备注 ："
                    android:textColor="#3f4042"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_marginTop="13dp"
                    android:text=""
                    android:textColor="#f75a53" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#f5f5f5" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:onClick="route"
                    android:text="订单状态"
                    android:textColor="#000000" />
                <!--android:drawableRight="@mipmap/right_sanjiao"-->

            </LinearLayout>

            <TextView
                android:id="@+id/tv_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="center_horizontal"
                android:text="注：必须确认发货，否则不予换货返修或退款"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size12"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/selector_btn_jp_all_screen"
                android:text="确认发货"
                android:textColor="@color/white"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
