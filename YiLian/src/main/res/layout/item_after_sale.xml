<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_after_sale_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号"
            android:textColor="#a5a5a5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_after_sale_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易时间"
            android:textColor="#a5a5a5"
            android:textSize="12sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="15dp">

        <com.yilian.mall.widgets.CircleImageView1
            android:id="@+id/iv_item_shopping_cart"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />

        <ImageView
            android:id="@+id/iv_goods_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="14dp"
            android:src="@null" />

        <TextView
            android:id="@+id/tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/color_red"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="退货"
            android:textColor="@color/white"
            android:textSize="@dimen/size14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/iv_item_shopping_cart"
            android:lines="1"
            android:text="高跟鞋高筒靴 细跟长靴尖头后高跟鞋高筒靴 细跟长靴尖头后高跟鞋高筒靴 细跟长靴尖头后"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_goods_norms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/iv_item_shopping_cart"
            android:lines="1"
            android:text="颜色分类:红色"
            android:textColor="#b0afaf"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="7dp"
            android:lines="1"
            android:text="数量 x1"
            android:textColor="#b0afaf"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_item_shopping_cart"
            android:layout_below="@id/tv_goods_norms"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/iv_item_shopping_cart"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin5"
                    android:lines="1"
                    android:text="111"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/size18" />


                <!--<TextView-->
                <!--android:id="@+id/tv_goods_integral"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:lines="1"-->
                <!--android:text=""-->
                <!--android:textColor="@color/color_green"-->
                <!--android:textSize="@dimen/size18" />-->

                <!--<TextView-->
                <!--android:id="@+id/tv_score"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:background="@drawable/bg_back_record"-->
                <!--android:text="aaa"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="@dimen/size11" />-->

                <TextView
                    android:id="@+id/tv_goods_beans"
                    style="@style/jpLeDou"
                    android:drawablePadding="3dp"
                    android:drawableRight="@mipmap/icon_ledou"
                    android:visibility="gone"
                    tools:text="送 5351.12" />

                <TextView
                    android:id="@+id/tv_icon_fen"
                    style="@style/jpMoneyFen"
                    android:layout_width="wrap_content"
                    android:text="@string/linggouquan"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_goods_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size15"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_icon_integral"
                    style="@style/jpMoneyQuan"
                    android:text="券"
                    android:visibility="gone" />
            </LinearLayout>
            <!--平台加赠益豆-->
            <TextView
                android:id="@+id/tv_subsidy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="平台加赠"
                android:textColor="#FF6474"
                android:textSize="@dimen/size11"
                android:visibility="gone" />
        </LinearLayout>


        <TextView
            android:id="@+id/bt_audit_status"
            style="@style/btnLittle2"
            android:layout_alignBottom="@id/iv_item_shopping_cart"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin15"
            android:background="@drawable/jp_bg_btn_red_all_radius1"
            android:gravity="center"
            android:text="审核拒绝"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>
