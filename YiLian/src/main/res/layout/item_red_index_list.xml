<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/padding30"
    android:paddingRight="@dimen/padding30">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:id="@+id/view_top"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/red_packet_index_line" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle_red_index" />

        <View
            android:id="@+id/view_bot"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/red_packet_index_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/size15"
        android:textColor="@color/red_packet_index_tv"
        android:layout_marginLeft="@dimen/margin10" />

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="â€±"
        android:textSize="@dimen/size15"
        android:textColor="@color/red_packet_index_tv"
        android:layout_marginLeft="@dimen/dp_40"
        android:gravity="right" />

</LinearLayout>
