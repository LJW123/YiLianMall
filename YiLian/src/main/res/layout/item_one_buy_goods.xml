<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@color/white"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        >

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:id="@+id/tv_snatch_name"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="11dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_remain_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="揭晓进度"
                    android:textColor="@color/color_red"
                    android:textSize="13sp"/>


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="85dp"
                    android:layout_height="5dp"
                    android:progressDrawable="@drawable/progress_horizontal"/>
            </LinearLayout>

            <Button
                android:id="@+id/tv_go_to_snatch"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/bg_empty_red_circle"
                android:focusable="false"
                android:gravity="center"
                android:text="立即夺宝"
                android:textColor="@color/color_red"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/iv_zone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="11dp"
        android:background="#ea1a39"
        android:gravity="center"
        android:lines="2"
        android:text="十元专区"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/iv_area"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/iv_zone"
        android:background="#f4ac43"
        android:gravity="center"
        android:lines="2"
        android:text="兑换中心"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:visibility="gone"/>
</RelativeLayout>