<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/parcel_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_parcel"
            android:drawablePadding="5dp"
            android:paddingLeft="22dp"
            android:text="包裹一"
            android:textColor="#929292"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_parcel_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="14dp"
            android:clickable="true"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/commit_order_jiantou"
            android:textColor="#247df7"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/separate_line"></View>

    <com.yilian.mall.widgets.NoScrollListView
        android:id="@+id/goods_order_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/separate_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/goods_total_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="共计件商品"
            android:textColor="#767676"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/order_coupon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_mall_shopping"
            android:text="商品总额："
            android:textColor="#767676"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/order_total_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_mall_vouchers"
            android:text=""
            android:textColor="#767676"
            android:textSize="11dp" />
    </LinearLayout>


</LinearLayout>
