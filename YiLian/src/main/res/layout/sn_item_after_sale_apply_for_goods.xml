<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_15dp">

        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_333"
                android:textSize="@dimen/textSize_14dp"
                tools:text="洋河梦之蓝M6 40.8度500ML绵柔白" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/color_main_suning"
                    android:textSize="@dimen/textSize_14dp"
                    tools:text="¥ 7.8" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_has_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_3dp"
                        android:drawableRight="@mipmap/icon_ledou"
                        android:singleLine="true"
                        android:textColor="@color/color_main_suning"
                        android:textSize="@dimen/textSize_14dp"
                        tools:text="送 7.8" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="x1"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/textSize_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_apply_for"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/sn_order_bt_bg_orange"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_5dp"
                    android:paddingRight="@dimen/padding_5dp"
                    android:text="申请售后"
                    android:textColor="@color/color_main_suning"
                    android:textSize="@dimen/textSize_12dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>