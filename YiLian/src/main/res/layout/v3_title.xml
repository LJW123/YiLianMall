<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_v3title"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/v3Layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/v3Back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:src="@mipmap/v3back" />

        <ImageView
            android:id="@+id/v3Left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:src="@mipmap/v3back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/v3Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="@dimen/size18" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:src="@mipmap/v3_cart_bottom"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size15"
            android:visibility="gone"
            android:text=""
            />

        <ImageView
            android:id="@+id/v3Shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:src="@mipmap/v3_cart_bottom"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/v3Share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:src="@mipmap/v3share"
            android:visibility="gone" />

          <ImageView
              android:id="@+id/iv_question"
              android:layout_width="17dp"
              android:layout_height="17dp"
              android:background="@mipmap/ctrip_home_page_query"
              android:padding="@dimen/padding_10dp"
              android:layout_gravity="center"
              android:layout_marginRight="@dimen/margin_15dp"
              android:visibility="gone"
              />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines" />

</LinearLayout>
