<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context="com.yilian.mall.ui.ApplyAfterSaleSuccessActivity">
    <include
        layout="@layout/activity_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@mipmap/bg_apply_after_sales"
        android:layout_height="185dp">

        <TextView
            android:drawableTop="@mipmap/ic_apply_after_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的申请已提交成功"
            android:layout_marginTop="24dp"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请您耐心等待"
            android:layout_marginTop="7dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            />


        <Button
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner_white"
            android:onClick="backMain"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="返回首页"
            />

    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="申请详情"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:textColor="#333333"
        android:paddingLeft="18.6dp"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请详情"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:textColor="#a5a5a5"
        android:maxLines="4"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="18.6dp"
        android:lineSpacingExtra="13dp"
        />

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="订单号："
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:textColor="#a5a5a5"
        android:maxLines="1"
        android:paddingLeft="18.6dp"
        android:paddingRight="15dp"
        />





</LinearLayout>
