<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listview_city_county_bg_color"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/find_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:hint="@string/please_input_city_name"
        android:onClick="findcity"
        android:textColorHint="@color/find_city_text_color_hint"
        android:textSize="@dimen/find_city_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/positionAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_vertical"
            android:onClick="positionAddress"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/icon_area_loca"
            android:drawablePadding="8dp"
            android:text="当前定位地区"
            android:gravity="center_vertical"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/area_city_gridview_text_size"
            android:lines="2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="34dp"
            android:background="@drawable/btn_area_blue_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="郑州市"
            android:textColor="#ffffff"
            android:textSize="@dimen/area_city_gridview_text_size"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_infor_line"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="29dp"
        android:background="#d4d4d4" />

    <LinearLayout
        android:id="@+id/ll_zuijinfangwen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="22dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="最近访问"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/area_city_gridview_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="29dp"
            android:background="#d4d4d4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zuijinfangwen_county"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="0dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_latest_county1"
            android:layout_width="@dimen/zuijin_textview_width"
            android:layout_height="@dimen/zuijin_textview_height"
            android:layout_marginLeft="@dimen/zuijin_textview_marginLeft"
            android:background="@mipmap/area_selection_kuang"
            android:gravity="center"
            android:textColor="@color/zuijin_textview_color"
            android:textSize="@dimen/area_city_gridview_text_size"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_latest_county2"
            android:layout_width="@dimen/zuijin_textview_width"
            android:layout_height="@dimen/zuijin_textview_height"
            android:layout_marginLeft="@dimen/zuijin_textview_marginLeft"
            android:background="@mipmap/area_selection_kuang"
            android:gravity="center"
            android:textColor="@color/zuijin_textview_color"
            android:textSize="@dimen/area_city_gridview_text_size"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_latest_county3"
            android:layout_width="@dimen/zuijin_textview_width"
            android:layout_height="@dimen/zuijin_textview_height"
            android:layout_marginLeft="@dimen/zuijin_textview_marginLeft"
            android:background="@mipmap/area_selection_kuang"
            android:gravity="center"
            android:textColor="@color/zuijin_textview_color"
            android:textSize="@dimen/area_city_gridview_text_size"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="全部省份"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/area_city_gridview_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_infor_line"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="29.3dp"
            android:background="#d4d4d4" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#dadada" />

</LinearLayout>