<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="@dimen/margin15">

    <CheckBox
        android:id="@+id/chk_shopping_cart_goods_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@null"
        android:drawableLeft="@drawable/chk_shopping_cart_goods_list"
        android:focusable="false"
        android:padding="12dp" />

    <FrameLayout
        android:background="@drawable/user_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding15">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jd_goods_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="3"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/size13"
                    tools:text="荣耀10 全面屏AI摄影手机全面屏AI摄影手机 6GB+64GB幻夜黑 全网通 移动联通电信4G 双卡双待" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="bottom"
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textSize_13dp"
                        tools:text="¥2600.00" />

                    <LinearLayout
                        android:paddingTop="@dimen/margin20"
                        android:id="@+id/ll_shopping_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_5dp"
                            android:src="@mipmap/jd_icon_shopping_sub" />

                        <TextView
                            android:id="@+id/tv_shopping_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/tab_title_bottom_line_color"
                            android:gravity="center"
                            android:minHeight="@dimen/padding_16dp"
                            android:minWidth="@dimen/margin_30dp"
                            android:textColor="@color/c333333"
                            android:textSize="@dimen/textSize_13dp"
                            tools:text="111" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5dp"
                            android:src="@mipmap/jd_icon_shopping_add" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
