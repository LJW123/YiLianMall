<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="97dp"
        android:layout_height="110dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_module_default_jp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_10dp">

        <View style="@style/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingRight="@dimen/padding_15dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/textSize_16dp"
                        tools:text="海赋·容锦酒店(郑州高铁东站店）" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/textSize_12dp"
                        tools:text="高档型" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:textColor="@color/color_4289FF"
                    android:textSize="@dimen/textSize_15dp"
                    tools:text="4.5分 不错" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textSize_12dp"
                    tools:text="距您直线550米·东站" />

                <LinearLayout
                    android:id="@+id/ll_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ctrip_item_home_tag"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:padding="@dimen/margin_2dp"
                        android:textColor="#05B09B"
                        android:textSize="@dimen/textSize_10dp"
                        tools:text="送900" />
                    <TextView
                        android:id="@+id/tv_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ctrip_item_home_tag"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:padding="@dimen/margin_2dp"
                        android:textColor="#05B09B"
                        android:textSize="@dimen/textSize_10dp"
                        tools:text="送900" />

                    <TextView
                        android:id="@+id/tv_has_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sn_order_bt_bg_orange_solid"
                        android:drawablePadding="@dimen/padding_3dp"
                        android:drawableRight="@mipmap/icon_white_ledou"
                        android:gravity="center"
                        android:padding="@dimen/margin_2dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_10dp"
                        tools:text="送900" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="#FF2F00"
                    android:textSize="@dimen/textSize_22dp"
                    tools:text="¥ 229起" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
