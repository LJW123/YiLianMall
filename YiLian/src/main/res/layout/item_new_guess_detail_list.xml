<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="@dimen/margin15">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_lines"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circle_red"/>

        <View
            android:layout_width="1dp"
            android:layout_height="47dp"
            android:background="@color/color_lines"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:layout_marginBottom="@dimen/margin5">
        <TextView
            android:id="@+id/tv_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/size18"
            android:textColor="@color/color_333"/>

        <TextView
            android:id="@+id/tv_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawablePadding="@dimen/padding5"
            android:textColor="@color/color_666"
            android:layout_marginTop="@dimen/margin10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_prize_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_empty_red_conrnes_45"
            android:paddingBottom="@dimen/padding5"
            android:paddingLeft="@dimen/padding15"
            android:paddingRight="@dimen/padding15"
            android:paddingTop="@dimen/padding5"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="@dimen/size15" />

        <TextView
            android:id="@+id/tv_guess_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginRight="@dimen/margin10"
            android:text=""
            android:textColor="@color/color_666"
            android:textSize="@dimen/size15" />
    </LinearLayout>

</LinearLayout>
