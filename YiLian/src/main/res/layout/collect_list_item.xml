<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff"
    android:padding="10dp">

    <com.yilian.mall.widgets.CircleImageView1
        android:id="@+id/iv_goods"
        android:layout_width="84dp"
        android:layout_height="63dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_module_default_jp" />

    <ImageView
        android:id="@+id/iv_goods_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_goods_buy" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_goods"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#3f4447"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_goods_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20.7dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/iv_goods"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售价"
            android:textColor="#999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#ff6823"
            android:textSize="19sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_dis_bgs"
            android:gravity="center"
            android:text="去看看"
            android:textColor="#ff6823"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>