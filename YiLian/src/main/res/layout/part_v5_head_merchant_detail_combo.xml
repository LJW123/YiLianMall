<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin10"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size15"
        android:textColor="@color/color_333"
        android:text="推荐套餐"
        android:drawableLeft="@mipmap/v5_hui"
        android:drawablePadding="@dimen/padding15"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/right_sanjiao"
        android:padding="@dimen/padding15"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"
        android:layout_marginLeft="@dimen/margin15"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_combo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="@dimen/padding15"/>

</LinearLayout>
