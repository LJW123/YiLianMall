<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_goods_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/padding10"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/textSize_13dp"
        tools:text="@string/app_name_resource" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ "
                android:textColor="@color/black_333333"
                android:textSize="@dimen/textSize_12dp" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/textSize_18dp"
                tools:text="900" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/padding10"
            android:textColor="@color/color_999"
            android:textSize="12dp"
            tools:text="999人购买" />

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/dp_10"
        app:cardBackgroundColor="@color/color_FF5000"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tv_has_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_3dp"
            android:drawableRight="@mipmap/icon_white_ledou"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_2dp"
            android:paddingLeft="@dimen/margin8"
            android:paddingRight="@dimen/margin8"
            android:paddingTop="@dimen/margin_2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/size13"
            tools:text="预计 900" />
    </android.support.v7.widget.CardView>

</LinearLayout>
