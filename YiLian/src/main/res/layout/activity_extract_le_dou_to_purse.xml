<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merchant_color_bg"
    android:orientation="vertical">

    <include layout="@layout/merchant_v3_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="益豆提取数量"
            android:textColor="@color/c333333"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/extract_ledou_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="9dp"
            android:inputType="number|numberDecimal"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_999"
            android:textCursorDrawable="@drawable/edit_change_cursor"
            android:theme="@style/EditText_underline_coloe" />

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="11dp"
            android:text="提取的益豆扣除手续费后，进入您的益豆钱包"
            android:textColor="@color/jifenrecord_textcolor4"
            android:textSize="@dimen/textSize_11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="益豆钱包地址"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/extract_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="19dp"
                android:background="@null"
                android:hint="注意！不要输入乐豆钱包地址"
                android:textColor="@color/color_333"
                android:textColorHint="@color/btn_unclick"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/color_lines" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="手续费"
                android:textColor="@color/color_999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_serviceCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="19dp"
                android:background="@null"
                android:text="0.00"
                android:textColor="@color/c333333"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/color_lines" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="实际提取数量"
                android:textColor="@color/color_999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_toAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginTop="19dp"
                android:background="@null"
                android:text="0.00"
                android:textColor="@color/c333333"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="注意事项："
        android:textColor="@color/c999999"
        android:textSize="@dimen/textSize_11sp" />

    <TextView
        android:id="@+id/tv_ratio_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:singleLine="false"
        android:text="1.成功提交后，您的益联账户内的益豆将提取至您的交易平台益豆钱包内。"
        android:textColor="@color/c999999"
        android:textSize="@dimen/textSize_10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="7dp"
        android:text="2.请正确填写您的交易平台益豆钱包地址，以免因提取地址错误造成提取失败的情况发生。"
        android:textColor="@color/c999999"
        android:textSize="@dimen/textSize_10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="3.因用户误操作而造成的财产损失，益联益家无赔偿义务，请谨慎操作。"
        android:textColor="@color/c999999"
        android:textSize="@dimen/textSize_10sp" />

    <Button
        android:id="@+id/extract_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@mipmap/icon_confirm_bg"
        android:text="确认提取"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_18sp" />
</LinearLayout>
