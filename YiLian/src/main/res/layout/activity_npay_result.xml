<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color"
    android:orientation="vertical">


    <include
        android:id="@+id/title"
        layout="@layout/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="26dp"
                    android:src="@mipmap/duigou_03" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="参与夺宝成功"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="请耐心等待开奖结果，祝您好运！"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="96dp"
                        android:layout_height="36dp"
                        android:background="@drawable/merchant_bg_btn_style_red"
                        android:gravity="center"
                        android:onClick="jumpToContinue"
                        android:text="继续夺宝"
                        android:textColor="@color/white" />
                    <Button
                        android:layout_width="96dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/bg_empty_red_circle"
                        android:gravity="center"
                        android:onClick="jumpToNSnatchRecord"
                        android:text="夺宝记录"
                        android:textColor="@color/color_red" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="19dp"
                    android:text="成功参与10人次"
                    android:textColor="#a0a0a0"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/view_line" />
                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/succecc"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    >
                    <com.yilian.mall.widgets.CircleImageView1
                        android:id="@+id/cir_img_goods"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="19dp"
                        android:src="@mipmap/login_module_default_jp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="13dp">
                        <TextView
                            android:id="@+id/tv_describe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#5c5b5b"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tv_issue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="期号："
                            android:textColor="#a5a5a5"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/view_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f4f8fb"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:text="夺宝号码："
                        android:textColor="#686868"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:clickable="true"
                        android:drawablePadding="9dp"
                        android:drawableRight="@mipmap/jiantou2"
                        android:onClick="jumpToAllNumber"
                        android:text="查看全部"
                        android:textColor="#686868"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_allNumber"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:paddingLeft="26dp"
                    android:singleLine="true"
                    android:textColor="#a5a5a5">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>