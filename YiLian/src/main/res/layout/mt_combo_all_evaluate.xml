<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llall_evaluate"
        android:padding="@dimen/padding10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height40">

        <TextView
            android:id="@+id/tv_all_evaluate"
            android:text="总体评价"
            android:textSize="@dimen/size15"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/rb_combo"
            style="@style/comboRatingBar"
            android:isIndicator="true"
            android:layout_marginLeft="@dimen/margin15"
            android:numStars="5"
            android:stepSize="0.1"
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/tv_rb_combo_text"
            android:textColor="@color/color_999"
            android:layout_marginLeft="@dimen/margin10"
            android:textSize="@dimen/size12"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_evaluate"
            android:textSize="@dimen/size12"
            android:drawableRight="@mipmap/jiantou_order"
            android:drawablePadding="@dimen/padding10"
            android:textColor="@color/color_999"
            android:gravity="right|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_evaluate"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_evaluate_text"
        android:text="评价"
        android:textSize="@dimen/size15"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin15"
        android:textColor="@color/color_333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height40" />

    <View
        android:layout_marginLeft="@dimen/margin15"
        style="@style/outerLineStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.yilian.mall.widgets.FlowLayout
        android:id="@+id/fl_label_count"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_height="wrap_content">

    </com.yilian.mall.widgets.FlowLayout>

    </LinearLayout>

</LinearLayout>