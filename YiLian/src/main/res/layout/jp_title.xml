<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_jp_title"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/size15"
        android:paddingRight="@dimen/padding10">

        <RelativeLayout
            android:id="@+id/rl_tv_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:paddingTop="@dimen/padding10">
        <TextView
            android:id="@+id/tv_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size10"
            android:visibility="gone" />
        </RelativeLayout>
        <!--主页头部-->
        <RelativeLayout
            android:id="@+id/rl_iv_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:paddingTop="@dimen/padding10">

            <ImageView
                android:id="@+id/iv_left1"
                android:layout_width="@dimen/icon20"
                android:clickable="true"
                android:layout_height="@dimen/icon20"
                android:src="@mipmap/icon_category" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_iv_left2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding10">
        <ImageView
            android:id="@+id/iv_left2"
            android:layout_width="@dimen/icon20"
            android:layout_height="@dimen/icon20"
            android:layout_centerVertical="true"
            android:visibility="gone" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@mipmap/jp_header" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size18"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="@dimen/icon20"
            android:layout_height="@dimen/icon20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_right1"
                android:layout_width="@dimen/icon20"
                android:layout_height="@dimen/icon20"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_circle_solid_white"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>
        </FrameLayout>



        <RelativeLayout
            android:id="@+id/rl_iv_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding10">

            <ImageView
                android:id="@+id/iv_right2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_search" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding10">

            <TextView
                android:id="@+id/tv_right"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/view_line"
        layout="@layout/line_horizontal" />
</LinearLayout>