<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="@dimen/size16"
    android:paddingRight="@dimen/size16">
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_marginTop="@dimen/size17"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/library_module_team_pic"/>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_marginLeft="@dimen/size12"
        android:layout_marginTop="@dimen/size20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="暂无昵称"
                android:id="@+id/tv_name"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="z***y"
                android:textColor="@color/color_333"
                android:textSize="@dimen/size13"
                />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_zan"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="@dimen/size19"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/act_zan_off"
                    android:layout_width="@dimen/size15"
                    android:layout_height="@dimen/size15"
                    />
                <TextView
                    android:text="0"
                    android:id="@+id/tv_praise_num"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="123"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size15"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_marginTop="@dimen/size10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="我花了6奖券获得了幸运，开心~"
            android:textColor="@color/color_333"
            android:textSize="@dimen/size14"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/size10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2017-10-09"
            android:textColor="@color/color_999"
            android:textSize="@dimen/size10"
            />
    </LinearLayout>
    <View
        android:layout_below="@id/ll_content"
        android:layout_marginTop="@dimen/size10"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_lines"/>
</RelativeLayout>
