<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_goods_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@null"
            android:visibility="visible" />

        <com.yilian.mall.widgets.CircleImageView1
            android:id="@+id/goods_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_module_default_jp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="花开二度 2015新款花开二度 2015新款花开二度 2015新款"
            android:textColor="#454444"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <RatingBar
                android:id="@+id/goods_ratingbar"
                style="@style/near_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginTop="1dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="2"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/goods_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="5.0"
                android:textColor="#999999"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_mall_vouchers"
            android:text="150.00"
            android:textColor="#eb5836"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/fifth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_renqi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="2016人已浏览"
                android:textColor="#999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/goods_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计销量0笔"
                android:textColor="#b1b1b1"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>