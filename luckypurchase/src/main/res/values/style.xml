<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义loading dialog -->
    <style name="lucky_loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/lucky_loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--横向progress-->
    <style name="lucky_login_module_horizontal_progress">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/lucky_progress_bg</item>
        <item name="android:minHeight">@dimen/library_module_padding10</item>
        <item name="android:maxHeight">@dimen/library_module_padding10</item>
    </style>

    <style name="lucky_dialog_activity" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="lucky_AnimationSEX">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/lucky_in_sex</item>
        <item name="android:windowExitAnimation">@anim/lucky_out_sex</item>
    </style>

    <style name="lucky_outerLineStyle10">
        <item name="android:background">@color/library_module_color_bg</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="lucky_outerLineStyle1">
        <item name="android:background">@color/library_module_color_bg</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="lucky_DialogControl" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <!--集成AppCompatActivity的Activity 透明，有任务栏电量时间等-->
    <style name="lucky_NoTitleTranslucentThemeV7" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
