<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#df000000"
    tools:context="com.yilian.luckypurchase.activity.LuckyWinPopWindowActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">


        <ImageView
            android:id="@+id/iv_rotate_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/lucky_light_yellow_1"/>

        <ImageView
            android:id="@+id/iv_rotate"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/lucky_light_2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_rotate_0"
            android:layout_marginBottom="320dp"
            android:src="@mipmap/lucky_bg_win_pop_people"/>

        <ImageView
            android:id="@+id/iv_bg_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/lucky_bg_win_pop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_prize"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/library_module_default_jp"/>

                <TextView
                    android:id="@+id/tv_goods_info"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@android:color/white"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@mipmap/lucky_bg_silk">

                <ImageView
                    android:id="@+id/iv_winner"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/lucky_default_head_icon"/>

                <TextView
                    android:id="@+id/tv_winner_info"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:maxLines="4"

                    android:text=""
                    />
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_bg_circle"
            android:layout_centerInParent="true"
            android:layout_marginTop="-10dp"
            android:src="@mipmap/lucky_bg_win_text"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_bg_circle"
            android:layout_alignBottom="@id/iv_text"
            android:layout_marginBottom="50dp"
            android:clickable="true"
            android:src="@mipmap/lucky_bg_close"/>

        <Button
            android:id="@+id/btn_look_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_bg_circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@mipmap/lucky_win_btn"/>
    </RelativeLayout>


</FrameLayout>
