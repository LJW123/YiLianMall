<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lucky_color_bg"
    tools:context="com.yilian.luckypurchase.activity.LuckySubmitOrderActivity">

    <include layout="@layout/lucky_v3_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lucky_margin10"
            android:orientation="vertical"
            android:background="@color/lucky_white">
            <TextView
                android:id="@+id/tv_all_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/lucky_padding15"
                android:textSize="@dimen/lucky_size15"
                android:textColor="@color/lucky_color_333"
                android:text=""/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/lucky_margin15"
                android:background="@color/lucky_color_lines"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/lucky_padding15"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/lucky_size15"
                    android:singleLine="true"
                    android:textColor="@color/lucky_color_999"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/lucky_size15"
                    android:textColor="@color/lucky_color_999"
                    android:text=""/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/lucky_color_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/lucky_padding15"
                android:orientation="horizontal"
                android:gravity="bottom">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/lucky_size15"
                    android:textColor="@color/lucky_color_333"
                    android:text="商品金额"/>

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/lucky_size18"
                    android:textColor="@color/lucky_color_red"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/lucky_padding5"
                    android:textSize="@dimen/lucky_size15"
                    android:textColor="@color/lucky_color_red"
                    android:text="益豆"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lucky_color_lines"/>

        <LinearLayout
            android:id="@+id/layout_join_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:background="@color/lucky_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lucky_margin15"
                android:textSize="@dimen/lucky_size15"
                android:textColor="@color/lucky_color_666"
                android:text="实付："/>

            <TextView
                android:id="@+id/tv_submit_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/lucky_size18"
                android:textColor="@color/lucky_color_red"
                android:text=""/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="@dimen/lucky_padding5"
                android:gravity="center_vertical"
                android:textSize="@dimen/lucky_size15"
                android:textColor="@color/lucky_color_red"
                android:text="益豆"/>

            <TextView
                android:id="@+id/tv_submit_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@drawable/lucky_join_bg"
                android:textSize="@dimen/lucky_size18"
                android:textColor="@color/lucky_white"
                android:text="提交订单"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
