<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lucky_white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/lucky_margin10"
            android:background="@mipmap/lucky_bg_win_prize">

            <TextView
                android:id="@+id/tv_success_lucky_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:textSize="@dimen/lucky_size11"
                android:textColor="@color/lucky_white"
                android:text="幸运号码"/>

            <TextView
                android:id="@+id/tv_success_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:textSize="@dimen/lucky_size10"
                android:textColor="@color/lucky_white"
                android:text="期号"/>

            <LinearLayout
                android:id="@+id/layout_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lucky_icon25"
                android:layout_marginRight="@dimen/lucky_icon25"
                android:layout_marginTop="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_success"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/lucky_default_head_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/lucky_margin10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_success_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/lucky_size13"
                        android:singleLine="true"
                        android:textColor="@color/lucky_color_333"
                        android:text="获得者:"/>

                    <TextView
                        android:id="@+id/tv_success_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lucky_margin5"
                        android:textSize="@dimen/lucky_size11"
                        android:textColor="@color/lucky_color_red"
                        android:text=""/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lucky_margin5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_success_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/lucky_size12"
                            android:textColor="@color/lucky_color_red"
                            android:text=""/>

                        <TextView
                            android:id="@+id/tv_success_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/lucky_size12"
                            android:textColor="@color/lucky_color_red"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_success_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lucky_icon25"
        android:padding="@dimen/lucky_padding15"
        android:textSize="@dimen/lucky_size14"
        android:drawableRight="@mipmap/lucky_user_jiantou"
        android:textColor="@color/lucky_color_666"
        android:text="查看计算详情"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/lucky_margin15"
        android:background="@color/lucky_color_lines"/>

    <TextView
        android:id="@+id/tv_success_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lucky_padding15"
        android:textSize="@dimen/lucky_size14"
        android:drawableRight="@mipmap/lucky_user_jiantou"
        android:textColor="@color/lucky_color_666"
        android:text="查看更多参与号码"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lucky_icon10"
        android:background="@color/lucky_color_bg"/>
</LinearLayout>
