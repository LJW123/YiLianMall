<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_prize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tv_prize_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:lines="2"
            android:textSize="16dp"
            android:textColor="@color/library_module_color_333"
            android:text=""/>

        <include
            android:id="@+id/include_issue"
            layout="@layout/lucky_sub_view_award_list"/>

        <include
            android:id="@+id/include_winner_name"
            layout="@layout/lucky_sub_view_award_list"/>

        <include
            android:id="@+id/include_times"
            layout="@layout/lucky_sub_view_award_list"/>

        <include
            android:id="@+id/include_number"
            layout="@layout/lucky_sub_view_award_list"/>

        <include
            android:id="@+id/include_le_beans"
            layout="@layout/lucky_sub_view_award_list"/>

        <include
            android:id="@+id/include_out_of_time"
            layout="@layout/lucky_sub_view_award_list"/>

        <View
            android:id="@+id/view_line_horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:background="@color/library_module_color_bg"/>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/library_module_color_bg"/>
</LinearLayout>
