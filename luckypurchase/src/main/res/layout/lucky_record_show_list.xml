<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/lucky_white">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/library_module_padding15"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/lucky_default_head_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lucky_margin15"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/library_module_size15"
                    android:textColor="@color/library_module_color_333"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lucky_margin5"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/library_module_size12"
                        android:textColor="@color/library_module_color_666"
                        android:text=""/>

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="@dimen/library_module_size12"
                        android:textColor="@color/lucky_color_red"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lucky_margin15"
            android:padding="@dimen/lucky_padding15"
            android:background="@color/lucky_color_bg"
            android:textSize="@dimen/lucky_size15"
            android:maxLines="1"
            android:text=""/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/library_module_merchant_margin15"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/library_module_size12"
            android:textColor="@color/library_module_color_999"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lucky_margin15"/>
    </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_10"
       android:background="@color/lucky_color_bg"/>

</LinearLayout>
