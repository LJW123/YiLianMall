<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/lucky_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_goods_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <include layout="@layout/lucky_include_item_goods"/>

            <ImageView
                android:id="@+id/iv_win"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/lucky_icon_win"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="@dimen/library_module_padding15"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_user_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        android:src="@mipmap/lucky_team_pic"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/library_module_icon_crown"/>


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/library_module_size15"
                    android:textColor="@color/library_module_color_333"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/library_module_size15"
                    android:textColor="@color/library_module_color_red"
                    android:text=""/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/library_module_bg_style_red_empty_15"
                android:textSize="@dimen/library_module_size13"
                android:textColor="@color/library_module_color_red"
                android:text="再来一次"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/lucky_color_bg"/>
</LinearLayout>
