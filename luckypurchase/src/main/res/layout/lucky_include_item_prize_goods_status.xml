<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:background="@color/lucky_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/library_module_padding20"
        android:paddingRight="@dimen/library_module_padding20"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/tv_line_top"
            android:layout_width="2px"
            android:layout_height="15dp"
            android:background="@color/library_module_color_lines"/>

        <ImageView
            android:id="@+id/iv_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lucky_icon_prize_gray"/>

        <View
            android:id="@+id/tv_line_bottom"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/library_module_color_lines"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/library_module_size15"
            android:textColor="@color/library_module_color_333"
            android:text=""/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/library_module_time_shouhuo"
            android:drawablePadding="@dimen/library_module_padding5"
            android:textSize="@dimen/library_module_size12"
            android:textColor="@color/library_module_color_999"
            android:text=""/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/lucky_margin10"
            android:background="@color/library_module_color_lines"/>
    </LinearLayout>

</LinearLayout>
