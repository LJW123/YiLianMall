<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:text="一级"
        android:textColor="@color/merchant_c333333"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_a"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/merchant_dialog_text_shape"
            android:gravity="center"
            android:text="A类"
            android:textColor="@color/merchant_c333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/first_b"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/merchant_dialog_text_shape"
            android:gravity="center"
            android:text="B类"
            android:textColor="@color/merchant_c333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/first_c"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/merchant_dialog_text_shape"
            android:gravity="center"
            android:text="C类"
            android:textColor="@color/merchant_c333333"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:text="二级"
        android:textColor="@color/merchant_c333333"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Two_a"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/merchant_dialog_text_shape"
            android:gravity="center"
            android:text="A类"
            android:textColor="@color/merchant_c333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Two_b"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/merchant_dialog_text_shape"
            android:gravity="center"
            android:text="B类"
            android:textColor="@color/merchant_c333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Two_c"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/merchant_dialog_text_shape"
            android:gravity="center"
            android:text="C类"
            android:textColor="@color/merchant_c333333"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="33dp"
        android:background="@color/merchant_color_lines" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="取消"
        android:textColor="@color/merchant_color_999"
        android:textSize="16sp" />
</LinearLayout>
