<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/merchant_color_bg">

    <include layout="@layout/merchant_v4_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用通年费"
                android:textSize="@dimen/library_module_size14"
                android:textColor="@color/library_module_color_666"
                android:padding="@dimen/library_module_padding15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/library_module_padding15"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="到期自动续费"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size16"/>

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_btn_xyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tbOffBorderColor="@color/library_module_color_lines"
                    app:tbSpotColor="@color/white"
                    app:tbOffColor="@color/white"
                    app:tbOnColor="#D7AE5C"/>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/library_module_color_lines"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/library_module_padding15"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="续费年限"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size16"/>

                <TextView
                    android:id="@+id/tv_renew_xyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/library_module_size16"
                    android:textColor="@color/library_module_color_333"
                    android:drawableRight="@mipmap/merchant_info_right_sanjiao"
                    android:drawablePadding="@dimen/library_module_padding10"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/library_module_color_lines"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/library_module_padding15"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付金额"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size16"/>

                <TextView
                    android:id="@+id/tv_money_xyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/library_module_size16"
                    android:textColor="@color/library_module_color_333"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技术服务费"
                android:textSize="@dimen/library_module_size14"
                android:textColor="@color/library_module_color_666"
                android:padding="@dimen/library_module_padding15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/library_module_padding15"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="到期自动续费"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size16"/>

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_btn_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:tbOffBorderColor="@color/library_module_color_lines"
                    app:tbSpotColor="@color/white"
                    app:tbOffColor="@color/white"
                    app:tbOnColor="#D7AE5C"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/library_module_color_lines"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/library_module_padding15"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="续费年限"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size16"/>

                <TextView
                    android:id="@+id/tv_renew_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/library_module_size16"
                    android:textColor="@color/library_module_color_333"
                    android:drawableRight="@mipmap/merchant_info_right_sanjiao"
                    android:drawablePadding="@dimen/library_module_padding10"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/library_module_color_lines"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/library_module_padding15"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付金额"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size16"/>

                <TextView
                    android:id="@+id/tv_money_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/library_module_size16"
                    android:textColor="@color/library_module_color_333"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的云图"
                android:textSize="@dimen/library_module_size14"
                android:textColor="@color/library_module_color_666"
                android:padding="@dimen/library_module_padding15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/library_module_padding15"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="到期自动续费"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size16"/>

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_btn_cloud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:tbOffBorderColor="@color/library_module_color_lines"
                    app:tbSpotColor="@color/white"
                    app:tbOffColor="@color/white"
                    app:tbOnColor="#D7AE5C"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/library_module_padding15"
                android:paddingTop="@dimen/library_module_padding10"
                android:paddingBottom="@dimen/library_module_padding10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textSize="@dimen/library_module_size13"
                    android:textColor="@color/library_module_color_999"/>

                <TextView
                    android:id="@+id/tv_web_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《重要告知》"
                    android:textSize="@dimen/library_module_size13"
                    android:textColor="#D7AE5C"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="及授权条款"
                    android:textSize="@dimen/library_module_size13"
                    android:textColor="@color/library_module_color_999"/>

                <TextView
                    android:id="@+id/tv_web_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《代扣协议》"
                    android:textSize="@dimen/library_module_size13"
                    android:textColor="#D7AE5C"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_open_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部开通"
            android:textSize="@dimen/library_module_size16"
            android:textColor="#D7AE5C"
            android:gravity="center"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认"
            android:textSize="@dimen/library_module_size16"
            android:textColor="@color/white"
            android:background="#D7AE5C"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
