<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_personal_certificate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merchant_color_bg"
    android:orientation="vertical">

    <include layout="@layout/merchant_v3_title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/library_module_color_white"
                android:paddingLeft="@dimen/library_module_padding15"
                android:paddingRight="@dimen/library_module_padding15">


                <TextView
                    android:id="@+id/tv_personage_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/library_module_padding15"
                    android:paddingTop="@dimen/library_module_padding15"
                    android:text="提交个人身份信息"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size15" />


                <TextView
                    android:id="@+id/tv_identity_announcements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="@dimen/library_module_padding15"
                    android:paddingRight="@dimen/merchant_padding15"
                    android:paddingTop="@dimen/library_module_padding15"
                    android:text="注意事项"
                    android:textColor="@color/library_module_color_red"
                    android:textSize="@dimen/merchant_size13" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/library_module_color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/merchant_color_h1"
                    android:textSize="@dimen/merchant_size15" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/merchant_padding30"
                    android:background="@null"
                    android:hint="请输入您的姓名"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/merchant_color_h1"
                    android:textSize="@dimen/merchant_size15" />


            </LinearLayout>

            <View
                style="@style/merchant_outerLineStyle"
                android:layout_marginLeft="@dimen/merchant_margin15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/library_module_color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证"
                    android:textColor="@color/merchant_color_h1"
                    android:textSize="@dimen/merchant_size15" />

                <EditText
                    android:id="@+id/et_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/merchant_padding15"
                    android:background="@null"
                    android:singleLine="true"
                    android:digits="0123456789xX"
                    android:hint="请输入您的18位身份证号"
                    android:maxLines="1"
                    android:maxLength="18"
                    android:textColor="@color/merchant_color_h1"
                    android:textSize="@dimen/merchant_size15" />


            </LinearLayout>

            <View
                style="@style/merchant_outerLineStyle"
                android:layout_marginLeft="@dimen/merchant_margin15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:orientation="horizontal"
                android:padding="@dimen/merchant_padding15">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_card_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/merchant_icon_idcard_front" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/merchant_margin15"
                        android:text="上传身份证正面"
                        android:textColor="@color/merchant_color_a8"
                        android:textSize="@dimen/merchant_size13" />

                </LinearLayout>

                <View
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:background="@color/merchant_color_white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_card_reverse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/merchant_icon_idcard_reverse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/merchant_margin15"
                        android:text="上传身份证反面"
                        android:textColor="@color/merchant_color_a8"
                        android:textSize="@dimen/merchant_size13" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/merchant_margin15"
                android:background="@color/merchant_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/library_module_padding15"
                    android:paddingRight="@dimen/library_module_padding15">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/library_module_padding15"
                        android:paddingTop="@dimen/library_module_padding15"
                        android:text="提交认证资料信息"
                        android:textColor="@color/library_module_color_333"
                        android:textSize="@dimen/merchant_size15" />

                    <TextView
                        android:id="@+id/tv_data_announcements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingBottom="@dimen/library_module_padding15"
                        android:paddingLeft="@dimen/merchant_padding15"
                        android:paddingTop="@dimen/library_module_padding15"
                        android:text="注意事项"
                        android:textColor="@color/library_module_color_red"
                        android:textSize="@dimen/merchant_size13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/merchant_padding15">

                    <ImageView
                        android:id="@+id/iv_card_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/merchant_icon_id_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/merchant_margin20"
                        android:text="本人手持证件照"
                        android:textColor="@color/merchant_color_a8"
                        android:textSize="@dimen/merchant_size13" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_entity_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/merchant_margin15"
                android:background="@color/merchant_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/library_module_padding15"
                    android:paddingRight="@dimen/library_module_padding15">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/library_module_padding15"
                        android:paddingTop="@dimen/library_module_padding15"
                        android:text="提交实体商户信息"
                        android:textColor="@color/library_module_color_333"
                        android:textSize="@dimen/merchant_size15" />

                    <TextView
                        android:id="@+id/tv_entity_announcements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingBottom="@dimen/library_module_padding15"
                        android:paddingLeft="@dimen/merchant_padding15"
                        android:paddingTop="@dimen/library_module_padding15"
                        android:text="注意事项"
                        android:textColor="@color/library_module_color_red"
                        android:textSize="@dimen/merchant_size13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/merchant_color_white"
                    android:orientation="horizontal"
                    android:padding="@dimen/merchant_padding15">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/merchant_margin15"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_license"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/merchant_icon_business_license" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/merchant_margin15"
                            android:text="营业执照扫描件"
                            android:textColor="@color/merchant_color_a8"
                            android:textSize="@dimen/merchant_size13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/merchant_icon_logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/merchant_margin15"
                            android:text="商户logo标识"
                            android:textColor="@color/merchant_color_a8"
                            android:textSize="@dimen/merchant_size13" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:gravity="center|bottom">


                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/merchant_checkbox_selector"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/merchant_padding10" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="我已阅读并接受益联益家用户协议"
                    android:textSize="@dimen/merchant_size12" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/merchant_margin30"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="@dimen/merchant_margin15"
                android:background="@drawable/merchant_btn_bg_red_28"
                android:gravity="center"
                android:text="提交审核"
                android:textColor="@color/merchant_color_white"
                android:textSize="@dimen/merchant_size18" />


        </LinearLayout>

    </ScrollView>

    <include
        android:visibility="gone"
        layout="@layout/library_module_load_error"/>

</LinearLayout>
