<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_merchant_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merchant_color_bg"
    android:orientation="vertical">

    <include layout="@layout/merchant_v3_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding15"
                android:paddingRight="@dimen/merchant_padding15"
                android:paddingTop="@dimen/merchant_padding20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员等级:"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size13" />

                <TextView
                    android:id="@+id/tv_vip_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding15"
                android:paddingRight="@dimen/merchant_padding15"
                android:paddingTop="@dimen/merchant_padding20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员奖励:"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size13" />

                <TextView
                    android:id="@+id/tv_vip_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding15"
                android:paddingRight="@dimen/merchant_padding15"
                android:paddingTop="@dimen/merchant_padding20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缴纳状态:"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size13" />

                <TextView
                    android:id="@+id/tv_year_money_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding15"
                android:paddingRight="@dimen/merchant_padding15"
                android:paddingTop="@dimen/merchant_padding20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缴费类型:"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size13" />

                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding15"
                android:paddingRight="@dimen/merchant_padding15"
                android:paddingTop="@dimen/merchant_padding20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务期限:"
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/library_module_size13" />

                <TextView
                    android:id="@+id/tv_service_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size13" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pay_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:gravity="center"
                android:paddingBottom="@dimen/merchant_padding18"
                android:paddingTop="@dimen/merchant_padding18"
                android:text="需要支付:"
                android:textColor="@color/library_module_color_red"
                android:textSize="@dimen/merchant_size15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/merchant_padding15"
                android:background="@color/merchant_color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/merchant_padding20"
                android:paddingRight="@dimen/merchant_padding20">

                <TextView
                    android:id="@+id/tv_balance_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="奖励支付: "
                    android:textColor="@color/merchant_color_333"
                    android:textSize="@dimen/merchant_size16" />

                <ImageView
                    android:id="@+id/iv_balance_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@mipmap/merchant_cash_desk_on" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/merchant_margin15"
                android:background="@color/library_module_color_white"
                android:padding="@dimen/merchant_padding15"
                android:text="选择充值方式"
                android:textColor="@color/library_module_color_333"
                android:textSize="@dimen/merchant_size15" />

            <View
                style="@style/merchant_outerLineStyle"
                android:layout_marginLeft="@dimen/merchant_margin15" />


            <com.yilianmall.merchant.widget.NoScrollListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/merchant_color_white"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@color/library_module_color_bg"
                android:dividerHeight="1px"
                android:listSelector="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/ll_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center|bottom"
                android:paddingLeft="@dimen/merchant_padding10"
                android:paddingRight="@dimen/merchant_padding10">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/merchant_checkbox_selector"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/merchant_padding5" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="我已阅读并接受益联益家商户协议"
                    android:textSize="@dimen/merchant_size12" />

                <TextView
                    android:id="@+id/tv_agreement2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:singleLine="true"
                    android:text="和"
                    android:textSize="@dimen/merchant_size12" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_pay"
                style="@style/library_module_btnCircleStyle"
                android:layout_marginBottom="90dp"
                android:layout_marginLeft="@dimen/merchant_margin20"
                android:layout_marginRight="@dimen/merchant_margin20"
                android:text="确认支付" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>
