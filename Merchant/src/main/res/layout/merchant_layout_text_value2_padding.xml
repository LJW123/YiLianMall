<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/library_module_padding15"
    android:paddingRight="@dimen/library_module_padding15">

    <TextView
        android:id="@+id/tv_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:paddingRight="10dp"
        android:textColor="@color/merchant_color_333"
        android:textSize="@dimen/merchant_size14" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/merchant_color_666"
            android:textSize="@dimen/merchant_size14" />

        <TextView
            android:id="@+id/tv_value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:singleLine="true"
            android:textColorHint="@color/merchant_color_666"
            android:textSize="@dimen/merchant_size14" />
    </LinearLayout>

</LinearLayout>