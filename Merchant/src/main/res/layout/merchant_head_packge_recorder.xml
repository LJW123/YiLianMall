<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:background="@color/merchant_color_bg">


    <ImageView
        android:id="@+id/merchant_iv_image"
        android:scaleType="fitXY"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@mipmap/library_module_aaaa" />


    <TextView
        android:id="@+id/merchant_tv_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周黑鸭发放奖励总额"
        android:textColor="#ff666666"
        android:textSize="@dimen/merchant_size15" />


    <TextView
        android:id="@+id/merchant_tv_amount"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="27dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4000"
        android:textColor="#ff333333"
        android:textSize="36dp" />

    <LinearLayout
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchant_tv_jiesou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3600"
                android:textColor="#ff666666"
                android:textSize="35dp" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解锁奖励"
                android:textColor="#ff666666"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchant_over_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:textColor="#ff666666"
                android:textSize="35dp" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过期奖励"
                android:textColor="#ff666666"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
