<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#151515">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/merchant_padding10"
            android:paddingRight="@dimen/merchant_padding10"
            android:src="@mipmap/merchant_register_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="二维码名片"
            android:textColor="@color/white"
            android:textSize="@dimen/merchant_size18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/library_module_margin30"
        android:layout_marginRight="@dimen/library_module_margin30"
        android:layout_marginTop="120dp"
        android:background="@drawable/merchant_bg_btn_white_radious8"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/merchant_default_jp"
                android:layout_margin="@dimen/library_module_margin20"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺名称"
                    android:textSize="@dimen/library_module_size16"
                    android:singleLine="true"
                    android:textColor="@color/library_module_color_333"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺地址"
                    android:textSize="@dimen/library_module_size13"
                    android:textColor="@color/library_module_color_999"
                    android:layout_marginTop="@dimen/merchant_margin10"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@mipmap/merchant_default_jp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/merchant_margin20"
            android:text="扫一扫上面的二维码图案，加我店铺"
            android:textSize="@dimen/merchant_size16"
            android:textColor="@color/merchant_color_999" />

    </LinearLayout>

</LinearLayout>
