<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/merchant_padding20"
        android:layout_marginRight="@dimen/merchant_padding20"
        android:background="@drawable/merchant_bg_btn_white_radious10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/library_module_padding18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin20"
            android:text="温馨提示"
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/library_module_size15" />

        <LinearLayout
            android:id="@+id/ll_express_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/merchant_inner_tab_height"
            android:layout_marginLeft="@dimen/merchant_padding10"
            android:layout_marginRight="@dimen/merchant_padding10"
            android:background="@drawable/merchant_bg_btn_bg_color_radious_3"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <TextView
                android:id="@+id/tv_express_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请选择快递公司"
                android:textColor="@color/library_module_color_red"
                android:textColorHint="@color/merchant_color_666"
                android:textSize="@dimen/merchant_size14" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/library_module_icon_arrow_down" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/merchant_inner_tab_height"
            android:layout_marginLeft="@dimen/merchant_padding10"
            android:layout_marginRight="@dimen/merchant_padding10"
            android:layout_marginTop="@dimen/library_module_margin10"
            android:background="@drawable/merchant_bg_btn_bg_color_radious_3"
            android:gravity="center_vertical"
            android:paddingLeft="13dp">

            <EditText
                android:id="@+id/et_express_order_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/merchant_express_number"
                android:hint="请输入快递单号"
                android:maxLength="30"
                android:textColor="@color/library_module_color_red"
                android:textColorHint="@color/merchant_color_666"
                android:textSize="@dimen/merchant_size14" />


            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/library_module_padding10"
                android:layout_marginRight="3dp"
                android:paddingLeft="@dimen/library_module_padding15"
                android:paddingRight="5dp"
                android:paddingTop="@dimen/library_module_padding10"
                android:src="@mipmap/library_module_ic_del" />

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/library_module_padding10"
                android:src="@mipmap/library_module_ic_scan" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/merchant_margin20"
            android:layout_marginLeft="@dimen/merchant_margin15"
            android:layout_marginRight="@dimen/merchant_margin15"
            android:layout_marginTop="13dp"
            android:text="注: 合并发货和整单发货为多个商品时使用同一个快递信息"
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/merchant_size14" />


        <View style="@style/merchant_outerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="取 消"
                android:textColor="@color/library_module_color_333"
                android:textSize="@dimen/library_module_size15" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/library_module_color_lines" />

            <TextView
                android:id="@+id/tv_confirm_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="确 定"
                android:textColor="@color/merchant_color_red"
                android:textSize="@dimen/library_module_size15" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
