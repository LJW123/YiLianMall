<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/library_module_color_bg"
    android:orientation="vertical">

    <include layout="@layout/merchant_v3_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="类　　型"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="个人入驻"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/merchant_outerLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="经营范围"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请填写您的经营范围"
            android:padding="15dp"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/merchant_outerLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="经营者姓名"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请填写经营者姓名"
            android:padding="15dp"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/merchant_outerLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="身份证号码"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_id_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入身份证号码"
            android:padding="15dp"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/merchant_outerLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="身份证证件照"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_id_card_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/merchant_right_back_gray"
            android:gravity="right"
            android:padding="15dp"
            android:text="未上传"
            android:textColor="@color/library_module_color_999"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/merchant_outerLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="开户银行账户"
            android:textColor="@color/library_module_color_333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_bank_card_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/merchant_right_back_gray"
            android:gravity="right"
            android:padding="15dp"
            android:text="未绑定"
            android:textColor="@color/library_module_color_999"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/merchant_outerLineStyle" />

    <LinearLayout
        android:id="@+id/ll_personal_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="营业执照"
                android:textColor="@color/library_module_color_333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_business_card_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="15dp"
                android:drawableRight="@mipmap/merchant_right_back_gray"
                android:gravity="right"
                android:padding="15dp"
                android:text="未上传"
                android:textColor="@color/library_module_color_999"
                android:textSize="15dp" />
        </LinearLayout>

        <View style="@style/merchant_outerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="许可证"
                android:textColor="@color/library_module_color_333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_licence_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="15dp"
                android:drawableRight="@mipmap/merchant_right_back_gray"
                android:gravity="right"
                android:padding="15dp"
                android:text="未上传"
                android:textColor="@color/library_module_color_999"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#CEA76E"
            android:text="提交资质"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>
