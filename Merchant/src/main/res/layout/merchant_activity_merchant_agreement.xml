<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_merchant_agreement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/library_module_color_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/library_module_padding10"
    android:paddingRight="@dimen/library_module_padding10">

    <include layout="@layout/merchant_v3_title" />

    <LinearLayout
        android:id="@+id/ll_personage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/library_module_merchant_margin15"
        android:background="@mipmap/merchant_bule_http_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/merchant_icon_bule_http" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="25dp"
            android:src="@mipmap/merchant_user_jiantou1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin10"
            android:layout_marginTop="@dimen/library_module_merchant_margin5"
            android:text="个人店 - 商家入驻协议"
            android:textColor="@color/merchant_color_white"
            android:textSize="@dimen/merchant_size18" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_entity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/library_module_merchant_margin15"
        android:background="@mipmap/merchant_red_http_bg"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/merchant_icon_red_http" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="25dp"
            android:src="@mipmap/merchant_user_jiantou1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin10"
            android:layout_marginTop="@dimen/library_module_merchant_margin15"
            android:text="实体店 - 商家入驻协议"
            android:textColor="@color/merchant_color_white"
            android:textSize="@dimen/merchant_size18" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/library_module_merchant_margin15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/merchant_color_666"
            android:textSize="@dimen/merchant_size14" />

    </LinearLayout>


</LinearLayout>
