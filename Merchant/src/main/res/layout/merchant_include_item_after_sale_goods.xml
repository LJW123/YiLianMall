<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/merchant_padding20"
    android:paddingLeft="@dimen/library_module_padding15"
    android:paddingRight="@dimen/library_module_padding15"
    android:paddingTop="@dimen/merchant_padding20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/merchant_margin15"
            android:scaleType="centerCrop"
            android:src="@mipmap/merchant_default_jp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size14" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/library_module_color_999"
                    android:textSize="@dimen/merchant_size13" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/library_module_margin8"
                android:text=""
                android:textColor="@color/library_module_color_999"
                android:textSize="@dimen/library_module_size12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/merchant_color_red"
                    android:textSize="@dimen/merchant_size15" />

                <TextView
                    android:id="@+id/tv_score"
                    style="@style/library_module_jpMoneyFen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/merchant_margin5"
                    android:layout_marginRight="@dimen/merchant_margin5"
                    android:gravity="center_vertical"
                    android:text=""
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/library_module_color_new_green"
                    android:textSize="@dimen/merchant_size15" />

                <TextView
                    android:id="@+id/tv_return_bean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text=""
                    android:textColor="@color/library_module_color_new_green"
                    android:textSize="@dimen/merchant_size13" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/library_module_margin10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_refund_parcel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退货包裹"
            android:textColor="@color/library_module_color_666"
            android:textSize="@dimen/merchant_size13"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/tv_look_express_btn"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:background="@drawable/library_module_bg_style_gray_empty_15"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/library_module_color_333"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_confirm_btn"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/merchant_margin15"
            android:background="@drawable/library_module_bg_style_red_empty_15"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/merchant_color_red" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/library_module_margin10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_exchange_parcel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="换货包裹"
            android:textColor="@color/library_module_color_666"
            android:textSize="@dimen/merchant_size13" />


        <TextView
            android:id="@+id/tv_look_express_exchange"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:background="@drawable/library_module_bg_style_gray_empty_15"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/library_module_color_333" />

    </LinearLayout>


</LinearLayout>