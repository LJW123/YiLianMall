<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_merchant_audit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merchant_color_bg"
    android:orientation="vertical">

    <include layout="@layout/merchant_v3_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/merchant_color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/merchant_padding15">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@mipmap/merchant_audit_ing" />

        <TextView
            android:id="@+id/tv_audit_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/merchant_size15" />

        <TextView
            android:id="@+id/tv_audit_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/merchant_margin10"
            android:text=""
            android:textColor="@color/merchant_color_999"
            android:textSize="@dimen/merchant_size12" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_audit_hint"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/merchant_margin10"
        android:background="@color/merchant_color_white"
        android:gravity="center"
        android:textColor="@color/merchant_color_666"
        android:textSize="@dimen/merchant_size12"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_audit_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/library_module_margin10"
        android:background="@color/merchant_color_white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/merchant_padding15"
            android:text="认证未通过说明"
            android:textColor="@color/merchant_color_666"
            android:textSize="@dimen/merchant_size13" />

        <TextView
            android:id="@+id/tv_error_cause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/merchant_padding15"
            android:text=""
            android:textColor="@color/merchant_color_666"
            android:textSize="@dimen/merchant_size13" />

        <TextView
            android:id="@+id/tv_error_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/library_module_color_bg"
            android:gravity="center"
            android:padding="@dimen/library_module_padding20"
            android:text=""
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/merchant_size13" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_submit"
            style="@style/library_module_btnCircleStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="重新提交"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_phone_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/merchant_margin30"
            android:text=""
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/merchant_size13" />

    </RelativeLayout>

</LinearLayout>
