<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="完成"
            android:textColor="@color/merchant_btn_click"
            android:textSize="16dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/merchant_color_lines" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/choice_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:npv_DividerColor="@color/merchant_color_ccc"
        app:npv_ItemPaddingVertical="5dp"
        app:npv_RespondChangeOnDetached="false"
        app:npv_ShowCount="5"
        app:npv_ShowDivider="true"
        app:npv_TextArray="@array/merchant_array"
        app:npv_TextColorNormal="@color/merchant_color_999"
        app:npv_TextColorSelected="@color/merchant_c333333"
        app:npv_TextSizeNormal="14sp"
        app:npv_TextSizeSelected="14sp" />

</LinearLayout>
