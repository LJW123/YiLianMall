<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/library_module_color_white"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请输入支付密码"
            android:textColor="@color/library_module_color_bg"
            android:textSize="@dimen/library_module_size15" />

        <ImageView
            android:id="@+id/img_dismiss"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/library_module_merchant_margin15"
            android:src="@mipmap/library_module_tanchuang_yuancha" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/library_module_color_lines" />

    <com.yilian.mylibrary.widget.GridPasswordView
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="15dp"
        android:background="@color/library_module_color_white"
        android:clickable="true" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/library_module_merchant_margin15"
        android:layout_marginTop="@dimen/library_module_merchant_margin15"
        android:clickable="true"
        android:gravity="right"
        android:paddingRight="27dp"
        android:text="忘记密码？"
        android:textColor="@color/library_module_color_red" />
</LinearLayout>