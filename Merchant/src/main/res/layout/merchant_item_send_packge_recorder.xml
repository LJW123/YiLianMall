<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="153dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="4dp"
    android:background="@color/merchant_color_bg">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/merchant_red_packget_amount"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/merchant_apply_time"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11-04 15:30:20"
            android:textColor="#ff999999"
            android:textSize="@dimen/merchant_size12"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_below="@id/merchant_apply_time"
            android:id="@+id/merchant_ll_content"
            android:paddingTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/merchant_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/library_module_default_jp" />

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="永辉"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/merchant_size19" />

                <TextView
                    android:id="@+id/merchant_red_over"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="奖励金额：1200.00 "
                    android:textColor="#ff4a4a4a"
                    android:textSize="@dimen/merchant_size12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/merchant_jiesou_counts"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="奖励解锁：500.00"
                        android:textColor="#ff4a4a4a"
                        android:textSize="@dimen/merchant_size12" />

                    <TextView
                        android:id="@+id/merchant_red_amounts"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="奖励数量：1000"
                        android:textColor="#ff4a4a4a"
                        android:textSize="@dimen/merchant_size12" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/merchant_iv_pass_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/merchant_pass_time" />


    </RelativeLayout>
</LinearLayout>
