<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/merchant_bg_btn_white_radious3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/merchant_choose_top"/>

    <LinearLayout
        android:id="@+id/layout_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/merchant_padding20"
        android:paddingRight="@dimen/merchant_padding20"
        android:paddingTop="@dimen/merchant_padding15"
        android:paddingBottom="@dimen/merchant_padding15"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/merchant_icon_line"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="益联商城专区"
            android:textColor="@color/merchant_color_333"
            android:textSize="@dimen/merchant_size15"
            android:paddingLeft="@dimen/merchant_padding20"/>

        <CheckBox
            android:id="@+id/cb_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/merchant_choose_way_cbx"
            android:focusable="false"
            android:padding="@dimen/merchant_padding15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_yhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/merchant_padding20"
        android:paddingRight="@dimen/merchant_padding20"
        android:paddingBottom="@dimen/merchant_padding15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/merchant_icon_yhs"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="易划算专区"
            android:textColor="@color/merchant_color_333"
            android:textSize="@dimen/merchant_size15"
            android:paddingLeft="@dimen/merchant_padding20"/>

        <CheckBox
            android:id="@+id/cb_yhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/merchant_choose_way_cbx"
            android:focusable="false"
            android:padding="@dimen/merchant_padding15"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_jfg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/merchant_padding20"
        android:paddingRight="@dimen/merchant_padding20"
        android:paddingBottom="@dimen/merchant_padding15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/merchant_icon_jfg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="奖券购专区"
            android:textColor="@color/merchant_color_333"
            android:textSize="@dimen/merchant_size15"
            android:paddingLeft="@dimen/merchant_padding20"/>

        <CheckBox
            android:id="@+id/cb_jfg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/merchant_choose_way_cbx"
            android:focusable="false"
            android:padding="@dimen/merchant_padding15"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="取  消"
            android:textColor="@color/merchant_color_333"
            android:textSize="@dimen/merchant_size18"
            style="@style/merchant_btnCircleStyleWhite"/>

        <TextView
            android:id="@+id/tv_btn_ok"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="确  定"
            android:textColor="@color/merchant_color_white"
            android:textSize="@dimen/merchant_size18"
            style="@style/merchant_btnCircleStyle"/>
    </LinearLayout>

</LinearLayout>
