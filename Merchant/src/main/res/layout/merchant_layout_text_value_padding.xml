<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/linearLayout"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="@dimen/merchant_size15"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/library_module_padding15"
    android:paddingRight="@dimen/library_module_padding15">

    <TextView
        android:id="@+id/tv_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/merchant_color_333"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/merchant_color_333"
        android:textSize="@dimen/merchant_size16"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="right"
        android:singleLine="true"
        android:textColorHint="@color/merchant_color_999"
        android:textSize="@dimen/merchant_size16"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/rl_arrow"
        android:gravity="right"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_right"
            android:visibility="gone"
            android:src="@mipmap/library_module_gray_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>