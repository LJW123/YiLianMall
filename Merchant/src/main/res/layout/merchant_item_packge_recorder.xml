<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/merchant_ll"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/merchant_iv_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/library_module_aaaa" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZYP"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/merchant_size19" />


                <TextView
                    android:id="@+id/merchant_time"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-3 18:46:15"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/merchant_size12" />


            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/merchant_countss"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1.00 "
            android:textColor="#ffde554d"
            android:textSize="@dimen/merchant_size18" />
    </RelativeLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffe7e7e7" />


</LinearLayout>
