<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/library_module_padding15"
    android:paddingRight="@dimen/library_module_padding15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/merchant_inner_tab_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_exchangeGoods"
                style="@style/merchant_exchangeGoods" />

            <TextView
                android:id="@+id/tv_refundGoods"
                style="@style/merchant_refundGoods"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/library_module_color_666"
                android:textSize="@dimen/merchant_size13" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/merchant_color_red"
                android:textSize="@dimen/merchant_size14" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_apply_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/merchant_inner_tab_height"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/library_module_color_666"
            android:textSize="@dimen/merchant_size13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/merchant_inner_tab_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_consignee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/library_module_color_666"
                android:textSize="@dimen/merchant_size13" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/merchant_icon_order_phone"
                android:drawablePadding="@dimen/merchant_padding5"
                android:gravity="center_vertical"
                android:text="" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="@dimen/library_module_padding10"
            android:paddingTop="@dimen/library_module_padding10"
            android:text=""
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/merchant_size13" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="@dimen/library_module_padding10"
            android:paddingTop="@dimen/library_module_padding10"
            android:text=""
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/merchant_size13" />

    </LinearLayout>

</LinearLayout>