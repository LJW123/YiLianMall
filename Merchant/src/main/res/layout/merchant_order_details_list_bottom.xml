<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/library_module_padding15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="合计"
                android:textColor="@color/library_module_color_999"
                android:textSize="@dimen/library_module_size15" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/merchant_margin5"
                android:text="+"
                android:textColor="@color/merchant_color_red"
                android:textSize="@dimen/merchant_size18" />

            <TextView
                android:id="@+id/tv_all_given_bean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/library_module_color_new_green"
                android:textSize="@dimen/merchant_size18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/library_module_margin10"
            android:text=""
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/library_module_size13" />

    </LinearLayout>

    <View style="@style/merchant_outerLineStyle10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:padding="@dimen/library_module_padding15">

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin10"
            android:text=""
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/merchant_size14" />

        <TextView
            android:id="@+id/tv_payment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin10"
            android:text=""
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/merchant_size14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin10"
            android:text=""
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/merchant_size14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_get_goods_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin10"
            android:text=""
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/merchant_size14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_close_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_margin10"
            android:text=""
            android:textColor="@color/library_module_color_999"
            android:textSize="@dimen/merchant_size14"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>