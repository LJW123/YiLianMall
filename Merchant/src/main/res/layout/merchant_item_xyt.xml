<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/library_module_color_lines"
        android:layout_marginLeft="@dimen/library_module_merchant_margin15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一年100"
            android:layout_marginLeft="@dimen/library_module_merchant_margin15"
            android:textColor="@color/library_module_color_333"
            android:textSize="@dimen/library_module_size15"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_zhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折"
            android:textSize="@dimen/library_module_size12"
            android:textColor="#FFE8A543"
            android:background="@mipmap/merchant_iv_bg_zhe"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/library_module_margin10"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开通"
            android:textSize="@dimen/library_module_size13"
            android:textColor="@color/white"
            android:background="@drawable/library_module_bg_solid_d7ae5c"
            android:layout_margin="@dimen/library_module_merchant_margin15"
            android:paddingLeft="@dimen/library_module_padding15"
            android:paddingRight="@dimen/library_module_padding15"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>


</LinearLayout>
