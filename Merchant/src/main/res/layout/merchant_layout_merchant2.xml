<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/iv_merchant_head_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:background="@mipmap/merchant_default_jp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#88000000"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="门头照片"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_change_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/merchant_bg_btn_black_radious"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="更换"
            android:textColor="@color/merchant_color_white"

            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <EditText
            android:id="@+id/et_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写门店名称"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/merchant_color_333"
            android:textSize="@dimen/merchant_size18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_merchant_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="请设置让利折扣"
                android:textColor="@color/merchant_color_333"
                android:textSize="@dimen/merchant_size14" />

            <TextView
                android:id="@+id/tv_merchant_change_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/merchant_btn_bg_little_red"
                android:clickable="true"
                android:text="修改折扣"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>