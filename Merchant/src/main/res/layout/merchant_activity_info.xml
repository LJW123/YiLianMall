<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/merchant_color_bg">

    <include layout="@layout/merchant_v4_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80.3dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="店铺头像"
            android:textColor="@color/library_module_color_333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="52.5dp"
            android:layout_height="52.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@mipmap/merchant_default_jp"
            android:onClick="amendUserPhoto"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/merchant_info_right_sanjiao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/merchant_color_lines"/>

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="店铺名称"
            android:textColor="@color/library_module_color_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/merchant_size16"
            android:textColor="@color/library_module_color_999"
            android:padding="@dimen/merchant_padding15"
            android:drawableRight="@mipmap/merchant_info_right_sanjiao"
            android:drawablePadding="@dimen/merchant_padding10"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/merchant_color_lines"/>

    <LinearLayout
        android:id="@+id/layout_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="店铺二维码"
            android:textColor="@color/library_module_color_333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/merchant_size16"
            android:textColor="@color/library_module_color_999"
            android:padding="@dimen/merchant_padding15"
            android:drawableLeft="@mipmap/merchant_info_qr"
            android:drawableRight="@mipmap/merchant_info_right_sanjiao"
            android:drawablePadding="@dimen/merchant_padding5"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/merchant_color_lines"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/library_module_color_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/merchant_size16"
            android:textColor="@color/library_module_color_999"
            android:padding="@dimen/merchant_padding15"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/merchant_color_lines"/>

    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="发货地址"
            android:textColor="@color/library_module_color_333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/merchant_size16"
            android:textColor="@color/library_module_color_999"
            android:padding="@dimen/merchant_padding15"
            android:drawableRight="@mipmap/merchant_info_right_sanjiao"
            android:drawablePadding="@dimen/merchant_padding10"/>
    </LinearLayout>

</LinearLayout>
