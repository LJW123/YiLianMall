<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/merchant_v3_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="店铺名称"
            android:textColor="@color/library_module_color_333"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_merchant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEF1F4"
            android:hint="请输入店铺名称"
            android:layout_marginBottom="20dp"
            android:singleLine="true"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="店铺详细地址"
            android:textColor="@color/library_module_color_333"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_merchant_address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="left"
            android:background="#EEF1F4"
            android:hint="请输入店铺详细地址"
            android:layout_marginBottom="20dp"
            android:maxLines="3"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_merchant_search"
            android:drawableLeft="@mipmap/merchant_icon_search"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEF1F4"
            android:hint="请输入店铺名称"
            android:layout_marginBottom="20dp"
            android:singleLine="true"
            android:padding="10dp" />
    </LinearLayout>

    <com.amap.api.maps2d.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#CEA76E"
        android:text="下一步"
        android:textColor="@android:color/white" />
</LinearLayout>
