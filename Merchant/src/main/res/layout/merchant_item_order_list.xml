<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/merchant_white"
    android:orientation="vertical">

    <View style="@style/merchant_outerLineStyle10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/library_module_inner_tab_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/library_module_padding15"
        android:paddingRight="@dimen/library_module_padding15">

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/library_module_color_h1"
            android:textSize="@dimen/library_module_size15" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/library_module_color_red"
            android:textSize="@dimen/merchant_size14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/library_module_padding15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/library_module_padding15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="@dimen/merchant_padding5"
                android:text=""
                android:textColor="@color/library_module_color_333"
                android:textSize="@dimen/library_module_size16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/merchant_order_phone"
                android:drawablePadding="@dimen/merchant_padding10"
                android:text=""
                android:textColor="@color/library_module_color_red"
                android:textSize="@dimen/library_module_size16" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/library_module_color_666"
            android:textSize="@dimen/library_module_size13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/library_module_padding15"
            android:paddingTop="@dimen/library_module_padding15">

            <LinearLayout
                android:id="@+id/ll_image_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/library_module_padding10"
                android:drawableRight="@mipmap/merchant_jiantou2"
                android:gravity="right"
                android:textColor="@color/library_module_color_999"
                android:textSize="@dimen/library_module_size12" />

        </LinearLayout>

        <View style="@style/merchant_outerLineStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/library_module_padding15"
        android:paddingLeft="@dimen/library_module_padding15"
        android:paddingRight="@dimen/library_module_padding15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/merchant_padding10"
            android:paddingTop="@dimen/library_module_padding15">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计  "
                android:textColor="@color/library_module_color_666"
                android:textSize="@dimen/merchant_size14" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/merchant_margin5"
                android:text=""
                android:textColor="@color/library_module_color_red"
                android:textSize="@dimen/merchant_size14" />

            <TextView
                android:id="@+id/tv_total_bean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/library_module_color_new_green"
                android:textSize="@dimen/merchant_size14" />

            <TextView
                android:id="@+id/tv_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/library_module_margin10"
                android:text=""
                android:textColor="@color/library_module_color_666"
                android:textSize="@dimen/library_module_size13" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_order_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/library_module_bg_style_red_empty_90"
            android:gravity="center"
            android:text="整单发货"
            android:textColor="@color/library_module_color_red"
            android:textSize="@dimen/merchant_size14" />

    </LinearLayout>


</LinearLayout>