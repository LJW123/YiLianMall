<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/merchant_padding20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:id="@+id/checkbox"
            android:drawableLeft="@drawable/merchant_order_goods_select"
            android:focusable="false"
            android:padding="@dimen/library_module_padding15" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="@dimen/merchant_margin15"
            android:src="@mipmap/merchant_default_jp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/library_module_padding15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/library_module_color_333"
                    android:textSize="@dimen/merchant_size14" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/library_module_color_999"
                    android:textSize="@dimen/library_module_size13" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/merchant_margin5"
                android:text=""
                android:textColor="@color/library_module_color_999"
                android:textSize="@dimen/library_module_size12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/merchant_color_red"
                    android:textSize="@dimen/merchant_size16" />

                <TextView
                    android:id="@+id/tv_score"
                    style="@style/library_module_jpMoneyFen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/library_module_color_white"
                    android:textSize="@dimen/merchant_size10"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_return_bean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/library_module_color_new_green"
                    android:textSize="@dimen/merchant_size12" />

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/library_module_color_999"
                    android:textSize="@dimen/library_module_size12" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/ll_buttons"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/merchant_padding15"
        android:paddingRight="@dimen/library_module_padding15"
        android:paddingTop="@dimen/merchant_padding10"
        >

        <TextView
            android:id="@+id/tv_look_logistics"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/library_module_bg_solid_999999_90"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/library_module_color_h1"
            android:textSize="@dimen/library_module_size15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_revise_logistics"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/merchant_margin15"
            android:background="@drawable/library_module_bg_style_red_empty_90"
            android:gravity="center"
            android:text="修改物流"
            android:textColor="@color/merchant_color_red"
            android:textSize="@dimen/library_module_size15"
            android:visibility="visible" />

    </LinearLayout>

    <View
        style="@style/merchant_outerLineStyle"
        android:layout_marginLeft="@dimen/merchant_margin15"
        android:layout_marginRight="@dimen/merchant_margin15"
        android:visibility="gone" />


</LinearLayout>