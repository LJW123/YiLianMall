<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/library_module_color_bg"
    android:orientation="vertical">

    <include
        layout="@layout/merchant_v3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:id="@+id/ll_on_off_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <include
            android:id="@+id/include_online"
            layout="@layout/merchant_include_enter_type" />

        <include
            android:id="@+id/include_offline"
            layout="@layout/merchant_include_enter_type" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_enter_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/include_company"
            layout="@layout/merchant_include_enter_type" />

        <include
            android:id="@+id/include_personal"
            layout="@layout/merchant_include_enter_type" />

        <include
            android:id="@+id/include_self_company"
            layout="@layout/merchant_include_enter_type" />
    </LinearLayout>
</LinearLayout>
